<Window x:Class="VTS.QLNS.CTC.App.Component.PdfPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VTS.QLNS.CTC.App.Component"
        Title="Enter password for PDF" Height="103" Width="250"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <StackPanel>
        <Label>Password:</Label>
        <PasswordBox x:Name="txtPassword" TabIndex="0"></PasswordBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
            <Button Content="Ok" Click="Button_Click_1" Margin="0,0,4,0" IsDefault="True"></Button>
            <Button Content="Cancel" Click="Button_Click_2" IsCancel="True"></Button>
        </StackPanel>
    </StackPanel>
</Window>
