                        <DataGridTemplateColumn x:Name="cbxLns" Header="LNS" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <custom:AutoCompleteComboBox
                                    IsEnabled="{Binding Data.IsEnableButton, Source={StaticResource DataContextProxy}}"
