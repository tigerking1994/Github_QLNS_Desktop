                                </Button>
                                <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                                <Button IsCancel="True"
                                        Style="{StaticResource SearchBarBtnStyle}"
                                        Command="{Binding CloseCommand}"
                                        CommandParameter="{Binding ElementName=DetailWindow}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CloseOutline" />
                                        <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                                   Text="Đóng" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <Separator Background="{DynamicResource MaterialDesignDivider}" />

                        </StackPanel>

                        <compt:ExpandedDataGrid x:Name="DgQttGTGDVoucherDetail2"
                                                Grid.Row="1"
                                                Margin="0 0 0 10"
                                                VerticalAlignment="Top"
                                                FrozenColumnCount="1"
                                                AutoGenerateColumns="False"
                                                CanUserResizeColumns="True"
                                                BorderThickness="1"
                                                wpf:DataGridAssist.CornerRadius="0 0 4 4"
                                                CanUserAddRows="False"
                                                CanUserDeleteRows="False"
                                                GridLinesVisibility="All"
                                                ScrollViewer.ScrollChanged="dgdDataGiamDong_ScrollChanged"
                                                ColumnInfo="{Binding Columns}"
                                                ElementFrozenColumn="{Binding ElementName=cbFrozenColumn, Path=., Mode=TwoWay}"
                                                ElementDynamicColumn="{Binding ElementName=pbDynamicColumn, Path=., Mode=TwoWay}"
                                                Style="{StaticResource MaterialDesignDataGrid}"
                                                CellStyle="{StaticResource DataGridCellDetail}"
                                                RowStyle="{StaticResource DataGridRowDetail}"
                                                ItemsSource="{Binding GiaiThichGiamDongs}"
                                                ext:DataGridBehavior.LastColumnFill="True"
                                                SelectedItem="{Binding SelectedGiaiThichGiamDong}">
                            <DataGrid.Resources>
                                <helper:BindingProxy x:Key="DataContextProxy"
                                                     Data="{Binding}" />
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="STTGD"
                                                    Header="STT"
                                                    ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                                                    Binding="{Binding ISTT}"
                                                    IsReadOnly="True"
                                                    Width="Auto" />

                                <DataGridTextColumn x:Name="STenNoiDungGD"
                                                    Header="Nội dung"
                                                    ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                                    Binding="{Binding SNoiDung}"
                                                    IsReadOnly="True"
                                                    Width="Auto" />

                                <DataGridTemplateColumn x:Name="TuNgay"
                                                        Header="Từ ngày">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <DatePicker Language="vi-VN"
                                                        SelectedDate="{Binding DTuNgay, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                        materialDesign:CalendarAssist.IsHeaderVisible="False"
                                                        Padding="0 0 0 4">
                                            </DatePicker>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn x:Name="DenNgay"
                                                        Header="Đến ngày"
                                                        Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <DatePicker Language="vi-VN"
                                                        SelectedDate="{Binding DDenNgay, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                        materialDesign:CalendarAssist.IsHeaderVisible="False"
                                                        Padding="0 0 0 4">
                                            </DatePicker>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <compt:DataGridTextColumn x:Name="QuanSo"
                                                          Header="Quân số"
                                                          ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                                          Binding="{Binding IQuanSo, Converter={ StaticResource NumberIntToStringEmptyConverter}, UpdateSourceTrigger=LostFocus, StringFormat={}{0}}"
                                                          Width="Auto"
                                                          EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}">
                                </compt:DataGridTextColumn>

                                <compt:DataGridTextColumn x:Name="QTL"
                                                          Header="Qũy tiền lương làm căn cứ đóng BHXH, BHYT, BHTN"
                                                          ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                                          Binding="{Binding FQuyTienLuongCanCu, Converter={ StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                                                          Width="350"
                                                          EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}">
                                </compt:DataGridTextColumn>

                                <compt:DataGridTextColumn x:Name="SoTienGiamDong"
                                                          Header="Số tiền giảm đóng, tạm dừng đóng"
                                                          ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                                          Binding="{Binding FSoTienGiamDong, Converter={ StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                                                          Width="250"
                                                          EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}">
                                </compt:DataGridTextColumn>

                            </DataGrid.Columns>
                        </compt:ExpandedDataGrid>

                        <ScrollViewer Grid.Row="2"
                                      Margin="10 0 0 400"
                                      x:Name="scrollFooterGTGD"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden">
                            <StackPanel Grid.Row="4"
                                        Orientation="Horizontal">

                                <Grid Width="{Binding ElementName=STTGD, Path=ActualWidth}" />

                                <Grid Width="{Binding ElementName=STenNoiDungGD, Path=ActualWidth}" />

                                <Grid Width="{Binding ElementName=TuNgay, Path=ActualWidth}" />

                                <Grid Width="{Binding ElementName=DenNgay, Path=ActualWidth}" />

                                <Grid Width="{Binding ElementName=QuanSo,Path=ActualWidth}">
                                    <TextBox Text="{Binding SumGiaiThichGiamDongModel.ITongQuanSo, StringFormat={}{0}}"
                                             Style="{StaticResource TextBoxTotalCell}" />
                                </Grid>
                                <Grid Width="{Binding ElementName=QTL,Path=ActualWidth}">
                                    <TextBox Text="{Binding SumGiaiThichGiamDongModel.FTongQuyTienLuongCanCu, StringFormat={}{0:N0}}"
                                             Style="{StaticResource TextBoxTotalCell}" />
                                </Grid>
                                <Grid Width="{Binding ElementName=SoTienGiamDong,Path=ActualWidth}">
                                    <TextBox Text="{Binding SumGiaiThichGiamDongModel.FTongSoTienGiamDong, StringFormat={}{0:N0}}"
                                             Style="{StaticResource TextBoxTotalCell}" />
                                </Grid>

                            </StackPanel>
                        </ScrollViewer>

                    </Grid>

                </TabItem>

            </TabControl>
        </Grid>
    </materialDesign:DialogHost>
</Window>