                    <materialDesign:PackIcon Kind="PlaylistPlus"
                                             Style="{StaticResource DialogScreenIconStyle}" />
                    <StackPanel Orientation="Vertical"
                                VerticalAlignment="Center"
                                Margin="10 0">
