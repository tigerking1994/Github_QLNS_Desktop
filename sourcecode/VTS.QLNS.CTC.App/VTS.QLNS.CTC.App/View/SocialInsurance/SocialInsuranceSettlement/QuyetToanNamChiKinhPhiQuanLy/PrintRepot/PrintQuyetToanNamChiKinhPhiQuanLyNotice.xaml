                            Margin="10 0 0 0">
                    <TextBlock Style="{StaticResource DialogScreenHeaderStyle}"
                               Text="{Binding Name}" />
                    <TextBlock Text="{Binding Description}" />
                </StackPanel>
            </StackPanel>
            <Separator Background="{DynamicResource MaterialDesignDivider}" />
