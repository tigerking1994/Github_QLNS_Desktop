                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel HorizontalAlignment="Center">
                                                    <CheckBox IsChecked="{Binding Checked, UpdateSourceTrigger=PropertyChanged}">
                                                    </CheckBox>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.Header>
                                            <Border Background="Transparent">
                                                <CheckBox IsChecked="{Binding Data.IsAllItemsSelected, UpdateSourceTrigger=PropertyChanged, Source={StaticResource DataContextProxy}}" />
                                            </Border>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.HeaderStyle>
                                            <Style TargetType="{x:Type DataGridColumnHeader}"
                                                   BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                                <Setter Property="HorizontalContentAlignment"
                                                        Value="Center" />
                                            </Style>
                                        </DataGridTemplateColumn.HeaderStyle>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn x:Name="SMaHieuCanBo"
                                                        Header="Mã hiệu cán bộ"
                                                        HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                                                        Binding="{Binding SMaHieuCanBo, UpdateSourceTrigger=PropertyChanged,StringFormat={}{0}}"
                                                        ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                                        EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"
                                                        IsReadOnly="False"
                                                        Width="auto" />
                                    <DataGridTextColumn x:Name="sTenCanBo"
                                                        HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                                                        Header="Tên cán bộ"
                                                        Binding="{Binding STenCanBo, UpdateSourceTrigger=LostFocus}"
                                                        ElementStyle="{StaticResource DataGridTextColumnLeftStyle}"
                                                        EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"
                                                        IsReadOnly="False"
                                                        Width="275" />

                                    <materialDesign:DataGridComboBoxColumn ItemsSource="{Binding Data.ItemsCapBac,Source={StaticResource DataContextProxy}}"
                                                                           SelectedValueBinding="{Binding SMaCapBac, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
