                                                                 Grid.Column="1"
                                                                 HorizontalAlignment="Right">
                                            <materialDesign:PopupBox.ToggleContent>
                                                <materialDesign:PackIcon Kind="MenuDown" />
                                            </materialDesign:PopupBox.ToggleContent>
                                            <StackPanel>
                                                <Button Command="{Binding ImportExplainDataCommand}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="FileImportOutline" />
                                                        <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                                                   Text="Nhận dữ liệu từ tệp Excel" />
                                                    </StackPanel>
                                                </Button>
                                                <Button x:Name="btnExcel"
                                                        Command="{Binding ExportExplainDataCommand}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="FileExcel" />
                                                        <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                                                   Text="Xuất dữ liệu ra tệp Excel" />
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </materialDesign:PopupBox>
                                    </StackPanel>
                                </Button>

                                <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />

                                <Button x:Name="btnShowCol1"
                                        Style="{StaticResource SearchBarBtnStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="PlusMinusVariant" />
                                        <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                                   Text="Ẩn/hiện cột" />
                                        <materialDesign:PopupBox Margin="-10 0 0 0"
                                                                 Name="pbDynamicColumn1"
                                                                 HorizontalAlignment="Right"
                                                                 StaysOpen="True">
                                            <materialDesign:PopupBox.ToggleContent>
                                                <materialDesign:PackIcon Kind="MenuDown" />
                                            </materialDesign:PopupBox.ToggleContent>
                                        </materialDesign:PopupBox>
                                    </StackPanel>
                                </Button>
                                <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                                <ComboBox Name="cbFrozenColumn1"
                                          materialDesign:HintAssist.Hint="Cố định cột"
                                          DisplayMemberPath="DisplayItem"
                                          SelectedValuePath="ValueItem"
                                          Style="{StaticResource MaterialDesignFloatingHintComboBox}" />
                                <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                                <ComboBox materialDesign:HintAssist.Hint="-- Cấp bậc --"
                                          materialDesign:TextFieldAssist.HasClearButton="False"
                                          IsEditable="False"
                                          DisplayMemberPath="DisplayItem"
                                          IsTextSearchEnabled="True"
                                          SelectedItem="{Binding LoaiCapBacSelected, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource SearchBarHorizontalComboBoxStyle}"
                                          ItemsSource="{Binding ItemLoaiCapBac}">
                                </ComboBox>
                                <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                                <TextBox materialDesign:HintAssist.Hint="Tên cán bộ"
                                         materialDesign:HintAssist.IsFloating="False"
                                         materialDesign:TextFieldAssist.HasClearButton="True"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource SearchBarHorizontalTextBoxStyle}">
                                    <TextBox.InputBindings>
                                        <KeyBinding Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                                                    Key="Return" />
                                    </TextBox.InputBindings>
                                </TextBox>

                                <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                                <Button Margin=" 0 5 0 0"
                                        Command="{Binding SearchCommand}"
                                        Style="{StaticResource SearchBarBtnStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Search" />
                                        <TextBlock Padding="8,0,0,0"
                                                   Style="{StaticResource SearchBarBtnTextStyle}"
                                                   Text="Tìm kiếm" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <Separator Background="{DynamicResource MaterialDesignDivider}" />

                        </StackPanel>
                        <StackPanel  Orientation="Vertical "
                                     Grid.Row="1">
