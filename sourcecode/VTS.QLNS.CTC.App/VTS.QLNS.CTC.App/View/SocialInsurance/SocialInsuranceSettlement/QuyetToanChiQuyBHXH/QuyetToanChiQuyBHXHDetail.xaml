                                                    Header="Tên cấp bậc"
                                                    Width="auto"
                                                    Binding="{Binding STenCapBac, UpdateSourceTrigger=PropertyChanged}"
                                                    ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
