                                        IsEnabled="{Binding IsEnabledGetSalary}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountBalance" />
                                        <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                                   Text="Lấy dữ liệu từ lương"></TextBlock>
                                    </StackPanel>
                                </Button>
                                <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                                <Button Style="{StaticResource SearchBarBtnStyle}"
                                        Command="{Binding ReloadDataCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Refresh" />
                                        <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                                   Text=" Tải lại giải thích (F8)"></TextBlock>
                                    </StackPanel>
                                </Button>

                                <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                                <Button Style="{StaticResource SearchBarBtnStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileExcel" />
                                        <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                                   Text="Excel giải thích" />
