                                                                           IsReadOnly="False"
                                                                           SelectedValuePath="MaCb">
                                        <materialDesign:DataGridComboBoxColumn.Header>
                                            <TextBlock Text="Cấp bậc"
                                                       x:Name="SMaCapBac" />
                                        </materialDesign:DataGridComboBoxColumn.Header>

                                    </materialDesign:DataGridComboBoxColumn>


