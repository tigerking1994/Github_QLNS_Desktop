<UserControl x:Class="VTS.QLNS.CTC.App.View.SocialInsurance.SocialInsuranceSettlement.QuyetToanCapKinhPhiKCBBHYT.PrintReport.PrintQuyetToanCapKinhPhiKCBBHYT"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:compt="clr-namespace:VTS.QLNS.CTC.App.Component"
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:localEnum="clr-namespace:VTS.QLNS.CTC.Utility;assembly=VTS.QLNS.CTC.Utility"
             mc:Ignorable="d">
    <Grid Margin="15" Width="auto">
            <StackPanel Orientation="Vertical" >
                <DockPanel>
                    <materialDesign:PackIcon Kind="Printer" Style="{StaticResource DialogScreenIconStyle}"/>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10 0">
                        <TextBlock Style="{StaticResource DialogScreenHeaderStyle}" Text ="{Binding Title}"></TextBlock>
                        <TextBlock Text ="{Binding Description}"></TextBlock>
                    </StackPanel>
                </DockPanel>
                <Separator Background="{DynamicResource MaterialDesignDivider}" />
                <Grid Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <!--<ColumnDefinition Width="300" />-->
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical">
                        <StackPanel.Resources>
                            <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
                                <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                                <Setter Property="Margin" Value="0 2 10 2" />
                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}">
                                <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                                <Setter Property="Margin" Value="0 2 10 2" />
                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </StackPanel.Resources>
                        <ComboBox
                        materialDesign:HintAssist.Hint="Quý"
                        DisplayMemberPath="DisplayItem"
                        SelectedValuePath="ValueItem"
                        SelectedItem="{Binding MonthAndQuartersSelected}"
                        ItemsSource="{Binding MonthAndQuarters}">
                        </ComboBox>
                        <ComboBox
                         materialDesign:HintAssist.Hint="Loại báo cáo"
                         DisplayMemberPath="DisplayItem"
                         SelectedValuePath="ValueItem"
                         SelectedItem="{Binding TypeReportSelected}"
                         ItemsSource="{Binding TypeReport}">      
                        </ComboBox>
                        <StackPanel Orientation="Vertical" Margin="0 10 0 0">
                            <TextBlock>In theo</TextBlock>
                            <RadioButton
                                GroupName="reportType" 
                                IsChecked="{Binding ReportType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static localEnum:ReportCPTUKCBBHYT.KEHOACH_TNQN}}"
                                Content="Thông tri xác nhận quyết toán KP KCB QN" 
                                Padding="5 -1 0 0" 
                                Margin="0 5 0 0" 
                                Style="{StaticResource MaterialDesignRadioButton}"/>
                                                    <RadioButton
                                GroupName="reportType" 
                                Visibility="{Binding IsEnableKehoach, Converter={StaticResource InverseBoolToVisConverter}}"
                                IsChecked="{Binding ReportType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static localEnum:ReportCPTUKCBBHYT.KEHOACH_TNQN_NLD}}"
                                Content="Thông tri xác nhận quyết toán KP KCB BHYT TNQN NLĐ" 
                                Padding="5 -1 0 0" 
                                Margin="0 5 0 0" 
                                Style="{StaticResource MaterialDesignRadioButton}"/>        

                        </StackPanel>
                        <TextBox
                        materialDesign:HintAssist.Hint="Tiêu đề 1"
                        Text="{Binding Title1}"
                        VerticalAlignment="Center" 
                        IsEnabled="True"/>
                        <TextBox
                        materialDesign:HintAssist.Hint="Tiêu đề 2"
                        Text="{Binding Title2}"
                        VerticalAlignment="Center" 
                        IsEnabled="True"
                        TextWrapping="Wrap"
                        Height="50"/>
                        <TextBox
                        materialDesign:HintAssist.Hint="Tiêu đề 3"
                        Text="{Binding Title3}"
                        VerticalAlignment="Center" 
                        IsEnabled="True"
                        TextWrapping="Wrap"
                        Height="50"/>
                        <ComboBox
                        materialDesign:HintAssist.Hint="Đơn vị tính"
                        DisplayMemberPath="DisplayItem"
                        SelectedValuePath="ValueItem"
                        ItemsSource="{Binding Units}"
                        SelectedItem="{Binding SelectedUnit}"/>
                        <DatePicker  
                        Language="vi-VN"
                        Margin="0 2 10 0"
                        materialDesign:HintAssist.Hint="{Binding ReportDateTitle}"
                        materialDesign:HintAssist.IsFloating="True"
                        SelectedDate="{Binding ReportDate}"
                        Text="{Binding ReportDate}"/>
                        
                    </StackPanel>
                    <Border
                     Grid.Column="1"
                     Margin="10 0 0 0"
                     Background="White"
                     BorderThickness="1"
                     BorderBrush="{DynamicResource PrimaryHueLightBrush}">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                            <materialDesign:ColorZone Mode="PrimaryLight">
                                <DockPanel Margin="8">
                                    <CheckBox IsChecked="{Binding SelectAllCsYTe,Mode=TwoWay}">
                                        <TextBlock Text="{Binding SelectedCountCsYTe}" />
                                    </CheckBox>
                                    <Border
                                    Margin="1 0 0 0"
                                    Background="White"
                                    MaxHeight="30"
                                    CornerRadius="3"
                                    Width="130"
                                    HorizontalAlignment="Right"
                                    ToolTip="Enter to search, ignore case">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Button
                                            Style="{DynamicResource MaterialDesignToolButton}"
                                            Height="24"
                                            Width="24">
                                                <materialDesign:PackIcon Kind="Magnify" Margin="0" Opacity=".56"/>
                                            </Button>
                                            <TextBox
                                            Grid.Column="1"
                                            Margin="0 0 5 0"
                                            Background="white"
                                            materialDesign:HintAssist.Hint="Tìm kiếm"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            BorderThickness="0"
                                            VerticalAlignment="Center"
                                            Text="{Binding SearchCsYTe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
                                            </TextBox>
                                        </Grid>
                                    </Border>
                                </DockPanel>
                            </materialDesign:ColorZone>
                            <ListView Height="350" ItemsSource="{Binding ListCsYTe}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding DisplayItem}" IsChecked="{Binding Path=IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                   
                </Grid>
                <Separator Background="{DynamicResource MaterialDesignDivider}" Margin="0 10 0 0"/>
                <Grid Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button 
                        Style="{StaticResource MaterialDesignRaisedButton}" 
                        Command="{Binding ExportCommand}"
                        IsEnabled="{Binding IsExportEnable}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileExcel" />
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Xuất dữ liệu"/>
                                <materialDesign:PopupBox
                                Margin="-10 0 -10 0"
                                Grid.Column="1" 
                                HorizontalAlignment="Right"
                                IsPopupOpen="{Binding IsOpenExportPopup, Mode=TwoWay}">
                                    <materialDesign:PopupBox.ToggleContent>
                                        <materialDesign:PackIcon Kind="MenuDown" />
                                    </materialDesign:PopupBox.ToggleContent>
                                    <StackPanel>
                                        <Button Command="{Binding ExportExcelCommand}" Content="Xuất file Excel" />
                                        <Button Command="{Binding ExportPDFCommand}" Content="Xuất file PDF" />
                                    </StackPanel>
                                </materialDesign:PopupBox>
                            </StackPanel>
                        </Button>
                        <Button 
                        Margin="10 0 0 0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding ConfigSignCommand}" >
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Draw" />
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Chữ ký"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button
                        IsDefault="True" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding PrintCommand}"
                        IsEnabled="{Binding IsExportEnable}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Printer" />
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="In báo cáo"/>
                            </StackPanel>
                            <Button.CommandParameter>
                                <system:Boolean>True</system:Boolean>
                            </Button.CommandParameter>
                        </Button>
                        <Button 
                        IsCancel="True" 
                        Margin="10 0 0 0" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{x:Static wpf:DialogHost.CloseDialogCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CloseOutline" />
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Đóng"/>
                            </StackPanel>
                            <Button.CommandParameter>
                                <system:Boolean>False</system:Boolean>
                            </Button.CommandParameter>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        <compt:ProgressDialog />
    </Grid>
</UserControl>