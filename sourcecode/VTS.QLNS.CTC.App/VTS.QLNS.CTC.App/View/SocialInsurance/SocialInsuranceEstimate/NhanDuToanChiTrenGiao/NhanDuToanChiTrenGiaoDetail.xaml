                                VerticalAlignment="Center">
                        <TextBlock Text="CHI TIẾT"
                                   FontWeight="Bold" />
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="Năm làm việc: {0} | Số: {1} - Số QĐ: {2} - Ngày QĐ: {3}">
