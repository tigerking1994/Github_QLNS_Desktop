<Window x:Class="VTS.QLNS.CTC.App.View.SocialInsurance.SocialInsuranceAllocation.CapPhatTamUngBHYT.ImportCptuBHYT.ImportCapPhatTamUngBHYT"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:localEnum="clr-namespace:VTS.QLNS.CTC.Utility;assembly=VTS.QLNS.CTC.Utility"
        xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        xmlns:component="clr-namespace:VTS.QLNS.CTC.App.Component"
        xmlns:helper="clr-namespace:VTS.QLNS.CTC.App.Helper"
        xmlns:custom="clr-namespace:VTS.QLNS.CTC.Custom;assembly=VTS.QLNS.CTC.Custom"
        mc:Ignorable="d"
        WindowState="Maximized"
        x:Name="ImportNdtBHXHWindow"
        Title="Import nhận dữ liệu dự cấp phát tạm ứng BHYT">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <materialDesign:PackIcon Kind="MicrosoftExcel"
                                     Style="{StaticResource DialogScreenIconStyle}" />
            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Center"
                        Margin="10 0">
                <TextBlock Text="IMPORT DỮ LIỆU CẤP PHÁT TẠM ỨNG BHYT"
                           FontWeight="Bold" />
                <TextBlock Text="Chọn file Excel, thực hiện kiểm tra và import dữ liệu cấp phát tạm ứng BHYT" />
            </StackPanel>
        </DockPanel>
        <Separator Grid.Row="1"
                   Background="{DynamicResource MaterialDesignDivider}" />
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1000" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border BorderThickness="1"
                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                        Margin="0 10 0 0"
                        Padding="5 0"
                        Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 IsEnabled="False"
                                 materialDesign:HintAssist.Hint="Lựa chọn file Excel"
                                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 BorderThickness="0"
                                 VerticalAlignment="Center"
                                 Text="{Binding FilePath}" />
                        <Button Style="{DynamicResource MaterialDesignToolButton}"
                                Grid.Column="1"
                                Command="{Binding UploadFileCommand}">
                            <materialDesign:PackIcon Kind="FileUpload"
                                                     Margin="8 0 0 0" />
                        </Button>
                    </Grid>
                </Border>

                <Grid Grid.Row="1"
                      Grid.Column="0"
                      Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Column="0"
                             Margin="10 0 0 0"
                             IsReadOnly="True"
                             Text="{Binding DataBhCptuBHYT.SSoChungTu}"
                             materialDesign:HintAssist.Hint="Số"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    <DatePicker Grid.Column="1"
                                Language="vi-VN"
                                Margin="10 0 0 0"
                                SelectedDate="{Binding DataBhCptuBHYT.DNgayChungTu}"
                                materialDesign:HintAssist.Hint="Ngày"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                    <TextBox Grid.Column="2"
                             Margin="10 0 0 0"
                             Text="{Binding DataBhCptuBHYT.SSoQuyetDinh}"
                             materialDesign:HintAssist.Hint="Số kế hoạch"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    <DatePicker Grid.Column="3"
                                Language="vi-VN"
                                Margin="10 0 0 0"
                                SelectedDate="{Binding DataBhCptuBHYT.DNgayQuyetDinh}"
                                materialDesign:HintAssist.Hint="Ngày quyết định"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

                    <ComboBox Grid.Column="4"
                              Width="100"
                              Margin="10 0 0 0"
                              materialDesign:HintAssist.Hint="Quý"
                              materialDesign:TextFieldAssist.HasClearButton="False"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              DisplayMemberPath="DisplayItem"
                              SelectedValuePath="ValueItem"
                              SelectedItem="{Binding CbxQuyTypeSelected}"
                              ItemsSource="{Binding CbxQuyType}" />

                    <!--<ComboBox 
                    Grid.Column="5"
                    Width="100"
                    Margin="10 0 0 0"  
                    materialDesign:HintAssist.Hint="Cơ sở y tế"
                    materialDesign:TextFieldAssist.HasClearButton="False"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                    DisplayMemberPath="DisplayItem"
                    SelectedValuePath="ValueItem"
                    SelectedItem="{Binding CbxDmCsYteSelected}"
                    ItemsSource="{Binding CbxDmCsYte}"/>-->
                    <ComboBox Grid.Column="5"
                              Margin="10 0 0 0"
                              materialDesign:HintAssist.Hint="Loại kinh phí"
                              materialDesign:TextFieldAssist.HasClearButton="False"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              DisplayMemberPath="DisplayItem"
                              SelectedValuePath="ValueItem"
                              ItemsSource="{Binding CbxLoaiKinhPhi}"
                              SelectedItem="{Binding CbxLoaiKinhPhiSelected}" />
                    <ComboBox Grid.Column="6"
                              Margin="10 0 0 0"
                              materialDesign:HintAssist.Hint="Import từ"
                              materialDesign:TextFieldAssist.HasClearButton="False"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              DisplayMemberPath="DisplayItem"
                              SelectedValuePath="ValueItem"
                              ItemsSource="{Binding CbxImport}"
                              SelectedItem="{Binding CbxImportSelected}" />

                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                Grid.ColumnSpan="4"
                                Margin="0 10">
                        <Button Margin="10 0 0 0"
                                Width="120"
                                IsEnabled="{Binding IsSelectedFile}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding ProcessFileCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileCheck" />
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                           Text="Kiểm tra" />
                            </StackPanel>
                        </Button>
                        <Button Margin="10 0 0 0"
                                Width="120"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding ResetDataCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Refresh" />
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                           Text="Hủy bỏ" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid Grid.Row="2"
                  Margin="0 10 0 0">
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="RbDivisionDetail"
                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                 GroupName="TabIndex"
                                 Visibility="{Binding IsImportOptionInFileExport, Converter={StaticResource InverseBoolToVisConverter}}"
                                 IsChecked="{Binding TabIndex, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static localEnum:ImportTabIndex.Data}}"
                                 Content="Thông tin chi tiết" />
                    <RadioButton x:Name="RbDivisionDetailTemplate"
                                 Visibility="{Binding IsImportOption, Converter={StaticResource InverseBoolToVisConverter}}"
                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                 GroupName="TabIndex"
                                 IsChecked="{Binding TabIndex, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static localEnum:ImportTabIndex.DataDetail}}"
                                 Content="Thông tin chi tiết" />
                    <RadioButton x:Name="RbMLNS"
                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                 GroupName="TabIndex"
                                 IsChecked="{Binding TabIndex, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static localEnum:ImportTabIndex.MLNS}}"
                                 Content="Mục lục BHXH" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="3"
                  Margin="0 5 0 0">
                <DataGrid Visibility="{Binding IsChecked, ElementName=RbDivisionDetail, Converter={StaticResource BooleanToVisibilityConverter}}"
                          AutoGenerateColumns="False"
                          CanUserResizeColumns="True"
                          Style="{StaticResource MaterialDesignDataGrid}"
                          CellStyle="{StaticResource GenericDataGridCellDetail}"
                          RowStyle="{StaticResource GenericDataGridRowDetail}"
                          BorderThickness="1"
                          HorizontalScrollBarVisibility="Auto"
                          FrozenColumnCount="2"
                          CanUserAddRows="False"
                          GridLinesVisibility="All"
                          ItemsSource="{Binding DivisionDetails}"
                          SelectedItem="{Binding SelectedDivisionDetail}">
                    <DataGrid.Resources>
                        <helper:BindingProxy x:Key="DataContextProxy"
                                             Data="{Binding}" />
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Trạng thái">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ContentControl x:Name="content" />
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding ImportStatus}"
                                                     Value="True">
                                            <Setter TargetName="content"
                                                    Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <materialDesign:PackIcon Kind="CheckCircle"
                                                                                 Foreground="Green"
                                                                                 HorizontalAlignment="Center" />
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ImportStatus}"
                                                     Value="False">
                                            <Setter TargetName="content"
                                                    Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <materialDesign:PackIcon Kind="CloseCircle"
                                                                                 Foreground="Red"
                                                                                 HorizontalAlignment="Center" />
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="LNS"
                                            Binding="{Binding LNS, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="L"
                                            Binding="{Binding L, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="K"
                                            Binding="{Binding K, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="M"
                                            Binding="{Binding M, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="TM"
                                            Binding="{Binding TM, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="TTM"
                                            Binding="{Binding TTM, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="NG"
                                            Binding="{Binding NG, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="TNG"
                                            Binding="{Binding TNG, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <!--<DataGridTextColumn 
                            Header="TNG1" 
                            Binding="{Binding TNG1, UpdateSourceTrigger=LostFocus}"
                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"/>
                        <DataGridTextColumn 
                            Header="TNG2" 
                            Binding="{Binding TNG2, UpdateSourceTrigger=LostFocus}"
                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"/>
                        <DataGridTextColumn 
                            Header="TNG3" 
                            Binding="{Binding TNG3, UpdateSourceTrigger=LostFocus}"
                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"/>-->
                        <DataGridTextColumn Header="Mô tả"
                                            Binding="{Binding MoTa, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="Mã cơ sở y tế"
                                            IsReadOnly="true"
                                            Binding="{Binding IID_MaCoSoYTe, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="Tên cơ sở y tế"
                                            IsReadOnly="true"
                                            Binding="{Binding SCoSoYTe, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="Số đề nghị quyết toán quý trước"
                                            IsReadOnly="true"
                                            Binding="{Binding FQTQuyTruoc, StringFormat={}{0:N0}, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}" />
                        <DataGridTextColumn IsReadOnly="true"
                                            Header="Số đã cấp còn thừa quý trước chuyển sang"
                                            Binding="{Binding FCapThuaQuyTruocChuyenSang, StringFormat={}{0:N0}, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}" />
                        <DataGridTextColumn IsReadOnly="true"
                                            Header="Dự kiến số cấp tạm ứng quý này"
                                            Binding="{Binding FTamUngDenQuyNay, StringFormat={}{0:N0}, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}" />

                        <DataGridTextColumn IsReadOnly="true"
                                            Header="Số phải cấp tạm ứng quý này"
                                            Binding="{Binding FPhaiCapTamUngQuyNay, StringFormat={}{0:N0}, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}" />

                        <DataGridTextColumn IsReadOnly="true"
                                            Header="Lũy kế cấp đến cuối quý"
                                            Binding="{Binding FLuyKeDenCuoiQuyNay, StringFormat={}{0:N0}, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}" />

                        <DataGridTemplateColumn Header="Lỗi">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ContentControl x:Name="Function" />
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding ImportStatus}"
                                                     Value="False">
                                            <Setter TargetName="Function"
                                                    Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                                ToolTip="Xem thông tin lỗi"
                                                                Width="25"
                                                                Height="25"
                                                                CommandParameter="{x:Static localEnum:ImportTabIndex.Data}"
                                                                Command="{Binding Path=DataContext.ShowErrorCommand, RelativeSource= {RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}">
                                                            <materialDesign:PackIcon Foreground="DarkRed"
                                                                                     Width="15"
                                                                                     Height="15"
                                                                                     Kind="EyeRemove" />
                                                        </Button>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <DataGrid Visibility="{Binding IsChecked, ElementName=RbDivisionDetailTemplate, Converter={StaticResource BooleanToVisibilityConverter}}"
                          AutoGenerateColumns="False"
                          CanUserResizeColumns="True"
                          Style="{StaticResource MaterialDesignDataGrid}"
                          CellStyle="{StaticResource GenericDataGridCellDetail}"
                          RowStyle="{StaticResource GenericDataGridRowDetail}"
                          BorderThickness="1"
                          HorizontalScrollBarVisibility="Auto"
                          FrozenColumnCount="2"
                          CanUserAddRows="False"
                          GridLinesVisibility="All"
                          ItemsSource="{Binding DivisionDetailsTemplate}"
                          SelectedItem="{Binding SelectedDivisionDetailTemplate}">
                    <DataGrid.Resources>
                        <helper:BindingProxy x:Key="DataContextProxy"
                                             Data="{Binding}" />
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Trạng thái">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ContentControl x:Name="content" />
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding ImportStatus}"
                                                     Value="True">
                                            <Setter TargetName="content"
                                                    Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <materialDesign:PackIcon Kind="CheckCircle"
                                                                                 Foreground="Green"
                                                                                 HorizontalAlignment="Center" />
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ImportStatus}"
                                                     Value="False">
                                            <Setter TargetName="content"
                                                    Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <materialDesign:PackIcon Kind="CloseCircle"
                                                                                 Foreground="Red"
                                                                                 HorizontalAlignment="Center" />
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="LNS"
                                            Binding="{Binding LNS, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="L"
                                            Binding="{Binding L, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="K"
                                            Binding="{Binding K, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="M"
                                            Binding="{Binding M, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="TM"
                                            Binding="{Binding TM, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="TTM"
                                            Binding="{Binding TTM, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="NG"
                                            Binding="{Binding NG, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="TNG"
                                            Binding="{Binding TNG, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <!--<DataGridTextColumn 
                            Header="TNG1" 
                            Binding="{Binding TNG1, UpdateSourceTrigger=LostFocus}"
                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"/>
                        <DataGridTextColumn 
                            Header="TNG2" 
                            Binding="{Binding TNG2, UpdateSourceTrigger=LostFocus}"
                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"/>
                        <DataGridTextColumn 
                            Header="TNG3" 
                            Binding="{Binding TNG3, UpdateSourceTrigger=LostFocus}"
                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"/>-->
                        <DataGridTextColumn Header="Mô tả"
                                            Binding="{Binding MoTa, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="Mã cơ sở y tế"
                                            IsReadOnly="true"
                                            Binding="{Binding IID_MaCoSoYTe, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="Tên cơ sở y tế"
                                            IsReadOnly="true"
                                            Binding="{Binding SCoSoYTe, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}" />
                        <DataGridTextColumn Header="Số đề nghị quyết toán quý trước"
                                            IsReadOnly="true"
                                            Binding="{Binding FQTQuyTruoc, StringFormat={}{0:N0}, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}" />
                        <DataGridTextColumn IsReadOnly="true"
                                            Header="Số đã cấp còn thừa quý trước chuyển sang"
