                                                Width="24">
                                            <materialDesign:PackIcon Margin="0"
                                                                     Kind="Magnify"
                                                                     Opacity=".56" />
                                        </Button>
                                        <TextBox Grid.Column="1"
                                                 Margin="0 0 5 0"
