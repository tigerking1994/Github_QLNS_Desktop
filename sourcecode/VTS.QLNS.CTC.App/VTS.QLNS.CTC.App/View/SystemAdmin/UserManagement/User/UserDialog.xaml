<UserControl x:Class="VTS.QLNS.CTC.App.View.SystemAdmin.UserManagement.User.UserDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:VTS.QLNS.CTC.App.View.Budget.Settlement"
             xmlns:compt="clr-namespace:VTS.QLNS.CTC.App.Component"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:helper="clr-namespace:VTS.QLNS.CTC.App.Helper"
             mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0">
            <DockPanel>
                <materialDesign:PackIcon Kind="AccountPlus" Style="{StaticResource DialogScreenIconStyle}"/>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10 0">
                    <TextBlock Text="{Binding Name}" FontWeight="Bold"></TextBlock>
                    <TextBlock Text="{Binding Description}"></TextBlock>
                </StackPanel>
            </DockPanel>
            <Separator Background="{DynamicResource MaterialDesignDivider}"/>
        </StackPanel>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <Grid Margin="0 8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="300"/>
                    <!--<ColumnDefinition Width="300"/>-->
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical">
                    <StackPanel.Resources>
                        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
                            <Setter Property="MinWidth" Value="300" />
                            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                            <Setter Property="Margin" Value="10 0 0 10" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignPasswordBox}">
                            <Setter Property="MinWidth" Value="300" />
                            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                            <Setter Property="Margin" Value="0 2 10 2" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </StackPanel.Resources>
                    <TextBox
                        Margin="0 0 0 10"
                        IsReadOnly="{Binding IsDisabledUserLoginField}" Name="UserLogin"
                        materialDesign:HintAssist.Hint="Tài khoản" >
                        <TextBox.Text>
                            <Binding Path="Model.STaiKhoan" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <DataErrorValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <!--<PasswordBox
                        Visibility="{Binding IsVisiblePasswordField}"
                        materialDesign:HintAssist.Hint="Mật khẩu"
                        Name="UserPassword"
                        VerticalAlignment="Center"
                        Tag="{Binding Path=Model.Password, ValidatesOnDataErrors=True}"
                        PasswordChanged="OnPasswordChanged"/>-->
                    <!--<TextBox
                        materialDesign:HintAssist.Hint="Họ"
                        Text="{Binding Path=Model.SHo}"
                        VerticalAlignment="Center" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Tên"
                        Text="{Binding Path=Model.STen}"
                        VerticalAlignment="Center" />
                    <TextBox
                        x:Name="UserEmail"
                        materialDesign:HintAssist.Hint="Email"
                        VerticalAlignment="Center" >
                        <TextBox.Text>
                            <Binding Path="Model.SEmail" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <DataErrorValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>-->
                    <Border
                    Margin="0 0 0 0"
                    Width="300"
                    VerticalAlignment="Top"
                    Grid.Column="0"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource PrimaryHueLightBrush}">
                        <StackPanel
                        Orientation="Vertical"
                        VerticalAlignment="Top">
                            <materialDesign:ColorZone
                            Mode="PrimaryLight">
                                <StackPanel Orientation="Horizontal" Margin="8">
                                    <TextBlock 
                                    VerticalAlignment="Center"
                                    Text="{Binding SelectedGroupsCount}"/>
                                    <Border
                                    Margin="8 0 0 0"
                                    Background="White"
                                    MaxHeight="30"
                                    CornerRadius="3"
                                    ToolTip="Enter to search, ignore case">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Button
                                            Style="{DynamicResource MaterialDesignToolButton}"
                                            Height="24"
                                            Width="24">
                                                <materialDesign:PackIcon Margin="0" Kind="Magnify" Opacity=".56"/>
                                            </Button>
                                            <TextBox
                                            Grid.Column="1"
                                            Margin="5 0 0 0"
                                            materialDesign:HintAssist.Hint="Search"
                                            materialDesign:HintAssist.IsFloating="False"
                                            Text="{Binding Path=SearchGroupText, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            BorderThickness="0"
                                            MinWidth="150"
                                            VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </materialDesign:ColorZone>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300">
                                <ItemsControl
                                ItemsSource="{Binding Groups}"
                                Grid.IsSharedSizeScope="True"
                                Margin="0 0 0 0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="Border" Padding="8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition SharedSizeGroup="Checkerz" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox
                                                    VerticalAlignment="Center"
                                                    IsChecked="{Binding IsSelected,UpdateSourceTrigger=PropertyChanged}" />
                                                    <StackPanel Margin="8 0 0 0" Grid.Column="1">
                                                        <TextBlock  Text="{Binding STenNhom}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter
                                                    TargetName="Border"
                                                    Property="Background"
                                                    Value="{DynamicResource MaterialDesignSelection}"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <StackPanel 
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Grid.Column="1">
                    <StackPanel.Resources>
                        <Style TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignPasswordBox}">
                            <Setter Property="MinWidth" Value="300" />
                            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                            <Setter Property="Margin" Value="10 0 0 10" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </StackPanel.Resources>
                    <PasswordBox
                        IsEnabled="{Binding IsEnablePasswordField}"
                        materialDesign:HintAssist.Hint="Mật khẩu"
                        Name="UserPassword"
                        VerticalAlignment="Center"
                        Tag="{Binding Path=Model.Password, ValidatesOnDataErrors=True}"
                        PasswordChanged="OnPasswordChanged"/>
                    <Border
                    VerticalAlignment="Top"
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Grid.Column="1"
                    BorderThickness="1" Margin="10 0 0 0"
                    BorderBrush="{DynamicResource PrimaryHueLightBrush}">
                    <StackPanel
                        Orientation="Vertical"
                        VerticalAlignment="Top">
                        <materialDesign:ColorZone
                            Mode="PrimaryLight">
                            <StackPanel Orientation="Horizontal" Margin="8">
                                <CheckBox IsChecked="{Binding SelectAllDonVi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBlock 
                                        VerticalAlignment="Center"
                                        Text="{Binding SelectedCountDonVi}"/>
                                </CheckBox>
                                <Border
                                    Margin="8 0 0 0"
                                    Background="White"
                                    MaxHeight="30"
                                    CornerRadius="3"
                                    ToolTip="Enter to search, ignore case">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            Style="{DynamicResource MaterialDesignToolButton}"
                                            Height="24"
                                            Width="24">
                                            <materialDesign:PackIcon Margin="0" Kind="Magnify" Opacity=".56"/>
                                        </Button>
                                        <TextBox
                                            Grid.Column="1"
                                            Margin="5 0 0 0"
                                            materialDesign:HintAssist.Hint="Search"
                                            materialDesign:HintAssist.IsFloating="False"
                                            Text="{Binding Path=SearchDonViText, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            BorderThickness="0"
                                            MinWidth="150"
                                            VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </materialDesign:ColorZone>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300">
                            <ItemsControl
                                ItemsSource="{Binding NsDonVis}"
                                Grid.IsSharedSizeScope="True"
                                Margin="0 0 0 0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border x:Name="Border" Padding="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition SharedSizeGroup="Checkerz" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <CheckBox
                                                    VerticalAlignment="Center"
                                                    IsChecked="{Binding Selected,UpdateSourceTrigger=PropertyChanged}" />
                                                <StackPanel
                                                    Margin="8 0 0 0"
                                                    Grid.Column="1">
                                                    <TextBlock  Text="{Binding TenDonVi}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding Selected}" Value="True">
                                                <Setter
                                                    TargetName="Border"
                                                    Property="Background"
                                                    Value="{DynamicResource MaterialDesignSelection}"/>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
                </StackPanel>
                <StackPanel Grid.Row="0"
                    Grid.RowSpan="3"
                    Grid.Column="2">
                    <StackPanel.Resources>
                        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
                            <Setter Property="MinWidth" Value="300" />
                            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                            <Setter Property="Margin" Value="10 0 0 10" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </StackPanel.Resources>
                    <TextBox
                        materialDesign:HintAssist.Hint="Tên"
                        Text="{Binding Path=Model.STen}"
                        VerticalAlignment="Center" />
                <Border
                    VerticalAlignment="Top"
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Grid.Column="2"
                    BorderThickness="1" Margin="10 0 0 0"
                    BorderBrush="{DynamicResource PrimaryHueLightBrush}">
                    <StackPanel
                        Orientation="Vertical"
                        VerticalAlignment="Top">
                        <materialDesign:ColorZone
                            Mode="PrimaryLight">
                            <StackPanel Orientation="Horizontal" Margin="8">
                                <CheckBox IsChecked="{Binding SelectAllPhanHo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    <TextBlock 
                                        VerticalAlignment="Center"
                                        Text="{Binding SelectedCountPhanHo}"/>
                                </CheckBox>
                                <Border
                                    Margin="8 0 0 0"
                                    Background="White"
                                    MaxHeight="30"
                                    CornerRadius="3"
                                    ToolTip="Enter to search, ignore case">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            Style="{DynamicResource MaterialDesignToolButton}"
                                            Height="24"
                                            Width="24">
                                            <materialDesign:PackIcon Margin="0" Kind="Magnify" Opacity=".56"/>
                                        </Button>
                                        <TextBox
                                            Grid.Column="1"
                                            Margin="5 0 0 0"
                                            materialDesign:HintAssist.Hint="Search"
                                            materialDesign:HintAssist.IsFloating="False"
                                            Text="{Binding Path=SearchPhanHoText, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            BorderThickness="0"
                                            MinWidth="150"
                                            VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </materialDesign:ColorZone>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300">
                            <ItemsControl
                                ItemsSource="{Binding TlDmPhanHos}"
                                Grid.IsSharedSizeScope="True"
                                Margin="0 0 0 0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border x:Name="Border" Padding="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition SharedSizeGroup="Checkerz" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <CheckBox
                                                    VerticalAlignment="Center"
                                                    IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" />
                                                <StackPanel Margin="8 0 0 0" Grid.Column="1">
                                                    <TextBlock  Text="{Binding MaTenDonVi}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter
                                                    TargetName="Border"
                                                    Property="Background"
                                                    Value="{DynamicResource MaterialDesignSelection}"/>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
                </StackPanel>
                <StackPanel 
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Grid.Column="3">
                    <StackPanel.Resources>
                        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
                            <Setter Property="MinWidth" Value="300" />
                            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                            <Setter Property="Margin" Value="10 0 0 10" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </StackPanel.Resources>
                    <TextBox
                        x:Name="UserEmail"
                        materialDesign:HintAssist.Hint="Email"
                        VerticalAlignment="Center" >
                        <TextBox.Text>
                            <Binding Path="Model.SEmail" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <DataErrorValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <Border
                    VerticalAlignment="Top"
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Grid.Column="3"
                    BorderThickness="1" Margin="10 0 0 0"
                    BorderBrush="{DynamicResource PrimaryHueLightBrush}">
                        <StackPanel
                        Orientation="Vertical"
                        VerticalAlignment="Top">
                            <materialDesign:ColorZone
                            Mode="PrimaryLight">
                                <StackPanel Orientation="Horizontal" Margin="8">
                                    <CheckBox IsChecked="{Binding SelectAllLNS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                        <TextBlock 
                                        VerticalAlignment="Center"
                                        Text="{Binding SelectedLNSCount}"/>
                                    </CheckBox>
                                    <Border
                                    Margin="8 0 0 0"
                                    Background="White"
                                    MaxHeight="30"
                                    CornerRadius="3"
                                    ToolTip="Enter to search, ignore case">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Button
                                            Style="{DynamicResource MaterialDesignToolButton}"
                                            Height="24"
                                            Width="24">
                                                <materialDesign:PackIcon Margin="0" Kind="Magnify" Opacity=".56"/>
                                            </Button>
                                            <TextBox
                                            Grid.Column="1"
                                            Margin="5 0 0 0"
                                            materialDesign:HintAssist.Hint="Search"
                                            materialDesign:HintAssist.IsFloating="False"
                                            Text="{Binding Path=SearchLNSText, UpdateSourceTrigger=PropertyChanged}"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            BorderThickness="0"
                                            MinWidth="150"
                                            VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </materialDesign:ColorZone>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300">
                                <ItemsControl
                                ItemsSource="{Binding LNS}"
                                Grid.IsSharedSizeScope="True"
                                Margin="0 0 0 0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="Border" Padding="8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition SharedSizeGroup="Checkerz" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <CheckBox
                                                    VerticalAlignment="Center"
                                                    IsChecked="{Binding IsSelected,UpdateSourceTrigger=PropertyChanged}" />
                                                    <StackPanel Margin="8 0 0 0" Grid.Column="1">
                                                        <TextBlock  Text="{Binding LnsMota}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter
                                                    TargetName="Border"
                                                    Property="Background"
                                                    Value="{DynamicResource MaterialDesignSelection}"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" Margin="0 15 0 0" HorizontalAlignment="Right" Grid.Row="2">
            <Button 
                    IsDefault="True"
                    Margin="5 0 0 0"
                    Command="{Binding SaveCommand}" CommandParameter="{Binding ElementName=UserPassword}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ContentSave"/>
                    <TextBlock Style="{StaticResource SearchBarBtnTextStyle}">Lưu dữ liệu</TextBlock>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                        <Setter Property="IsEnabled" Value="False"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Path=(Validation.HasError), ElementName=UserLogin}" Value="False"/>
                                    <Condition Binding="{Binding Path=(Validation.HasError), ElementName=UserPassword}" Value="False"/>
                                    <Condition Binding="{Binding Path=(Validation.HasError), ElementName=UserEmail}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="IsEnabled" Value="True"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button
                    IsCancel="True"
                    Margin="5 0 0 0"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding Path=CloseCommand}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="CloseOutline" />
                    <TextBlock Style="{StaticResource SearchBarBtnTextStyle}">Đóng</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
        <compt:ProgressDialog Grid.Row="1"/>
    </Grid>
</UserControl>

