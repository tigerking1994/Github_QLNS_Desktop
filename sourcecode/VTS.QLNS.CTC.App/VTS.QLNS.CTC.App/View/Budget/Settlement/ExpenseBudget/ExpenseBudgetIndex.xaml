                            <materialDesign:PackIcon Kind="Uplay" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Gửi dữ liệu"></TextBlock>
                        </StackPanel>
                    </Button>-->
                    <!--End Gui du lieu-->
                    <!--<Separator Style="{StaticResource SearchBarHorizontalDividerStyle}"/>-->

                    <Button ext:Permission.Identifier="BUDGET_SETTLEMENT_EXPENSEBUDGET_INDEX_BTN_PRINT_REPORT"
                            x:Name="btnPrint"
                            Style="{StaticResource SearchBarBtnStyle}"
                            Command="{Binding PrintCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Printer" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                       Text="In báo cáo" />
                            <materialDesign:PopupBox Margin="-10 0 0 0"
                                                     Grid.Column="1"
                                                     HorizontalAlignment="Right"
                                                     IsPopupOpen="{Binding IsOpenPrintPopup, Mode=TwoWay}">
                                <materialDesign:PopupBox.ToggleContent>
                                    <materialDesign:PackIcon Kind="MenuDown" />
                                </materialDesign:PopupBox.ToggleContent>
                                <StackPanel>
                                    <Button Command="{Binding PrintActionCommand}"
                                            CommandParameter="{x:Static localEnum:SettlementPrintType.PRINT_COMMUNICATE_SETTLEMENT_LNS}"
                                            Content="In thông tri quyết toán - LNS" />
                                    <Button Command="{Binding PrintActionCommand}"
                                            CommandParameter="{x:Static localEnum:SettlementPrintType.PRINT_COMMUNICATE_SETTLEMENT_AGENCY}"
                                            Content="In thông tri quyết toán - Đơn vị" />
                                    <Separator Style="{StaticResource MaterialDesignLightSeparator}"
                                               Background="Gray"
                                               Margin="20 0 20 0" />
                                    <Button Command="{Binding PrintActionCommand}"
                                            CommandParameter="{x:Static localEnum:SettlementPrintType.PRINT_REGULARLY_SETTLEMENT}"
                                            Content="Tổng hợp quý - Quyết toán thường xuyên" />
                                    <Button Command="{Binding PrintActionCommand}"
                                            CommandParameter="{x:Static localEnum:SettlementPrintType.PRINT_DEFENSE_SETTLEMENT}"
                                            Content="Tổng hợp quý - Quyết toán nghiệp vụ, quốc phòng khác" />
                                    <Button Command="{Binding PrintActionCommand}"
                                            CommandParameter="{x:Static localEnum:SettlementPrintType.PRINT_STATE_SETTLEMENT}"
                                            Content="Tổng hợp quý - Quyết toán nhà nước" />
                                    <Button Command="{Binding PrintActionCommand}"
                                            CommandParameter="{x:Static localEnum:SettlementPrintType.PRINT_FOREX_SETTLEMENT}"
                                            Content="Tổng hợp quý - Quyết toán ngoại hối" />
                                    <Button Command="{Binding PrintActionCommand}"
                                            CommandParameter="{x:Static localEnum:SettlementPrintType.PRINT_EXPENSE_SETTLEMENT}"
                                            Content="Tổng hợp quý - Quyết toán kinh phí khác" />
                                    <Button Command="{Binding PrintActionCommand}"
                                            CommandParameter="{x:Static localEnum:SettlementPrintType.PRINT_LNS_SETTLEMENT}"
                                            Content="Tổng hợp quyết toán - Tất cả LNS" />
                                    <Separator Style="{StaticResource MaterialDesignLightSeparator}"
                                               Background="Gray"
                                               Margin="20 0 20 0" />
                                    <Button Command="{Binding PrintActionCommand}"
                                            CommandParameter="{x:Static localEnum:SettlementPrintType.PRINT_SUMMARY_AGENCY}"
                                            Content="Tổng hợp quyết toán (MLNS hàng dọc - Đơn vị hàng ngang)" />
                                    <Separator Style="{StaticResource MaterialDesignLightSeparator}"
                                               Background="Gray"
                                               Margin="20 0 20 0" />
                                    <Button Command="{Binding PrintActionCommand}"
                                            CommandParameter="{x:Static localEnum:SettlementPrintType.PRINT_ESTIMATE_SETTLEMENT}"
                                            Content="Tổng hợp số dự toán - quyết toán" />
                                    <Button Command="{Binding PrintActionCommand}"
                                            CommandParameter="{x:Static localEnum:SettlementPrintType.PRINT_RECEIVE_SETTLEMENT}"
                                            Content="Báo cáo tình hình nhận và quyết toán kinh phí" />
                                    <Button Command="{Binding PrintActionCommand}"
                                            CommandParameter="{x:Static localEnum:SettlementPrintType.PRINT_SUMMARY_YEAR_SETTLEMENT}"
                                            Content="Quyết toán năm - LNS" />
                                    <Button Command="{Binding PrintActionCommand}"
                                            CommandParameter="{x:Static localEnum:SettlementPrintType.PRINT_REPORT_PUBLIC_SETTLEMENT}"
                                            Content="Công khai quyết toán thu, chi NSNN - TT57" />
                                </StackPanel>
                            </materialDesign:PopupBox>
                        </StackPanel>
                    </Button>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    <Button x:Name="btnShowColSelfPay"
                            Visibility="{Binding SelfPayBtnShowCol}"
                            Style="{StaticResource SearchBarBtnStyle}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="PlusMinusVariant" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                       Text="Ẩn/hiện cột" />
                            <materialDesign:PopupBox Name="pbDynamicColumn"
                                                     Margin="-10 0 0 0"
                                                     HorizontalAlignment="Right"
                                                     StaysOpen="True">
                                <materialDesign:PopupBox.ToggleContent>
                                    <materialDesign:PackIcon Kind="MenuDown" />
                                </materialDesign:PopupBox.ToggleContent>
                            </materialDesign:PopupBox>
                        </StackPanel>
                    </Button>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    <ComboBox Name="cbFrozenColumn"
                              materialDesign:HintAssist.Hint="Cố định cột"
                              DisplayMemberPath="DisplayItem"
                              SelectedValuePath="ValueItem" />
                </StackPanel>
                <Separator Background="{DynamicResource MaterialDesignDivider}" />
                <StackPanel Orientation="Horizontal"
                            Margin="0 0 0 3">
                    <Label VerticalContentAlignment="Bottom"
                           Style="{StaticResource SearchBarLabelStyle}"
                           Content="Tìm kiếm" />
                    <ComboBox Margin="10 0 10 0"
                              materialDesign:HintAssist.Hint="-- Quý/Tháng --"
                              materialDesign:TextFieldAssist.HasClearButton="True"
                              DisplayMemberPath="DisplayItem"
                              SelectedValuePath="ValueItem"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              SelectedItem="{Binding QuarterMonthSelected}"
                              ItemsSource="{Binding QuarterMonths}">
                    </ComboBox>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    <ComboBox Margin="10 0 10 0"
                              materialDesign:HintAssist.Hint="-- Đơn vị --"
                              materialDesign:TextFieldAssist.HasClearButton="True"
                              DisplayMemberPath="DisplayItem"
                              SelectedValuePath="ValueItem"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              SelectedItem="{Binding AgencySelected}"
                              ItemsSource="{Binding Agencies}">
                    </ComboBox>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    <ComboBox materialDesign:HintAssist.Hint="-- Trạng thái khóa --"
                              materialDesign:TextFieldAssist.HasClearButton="False"
                              IsEditable="False"
                              DisplayMemberPath="DisplayItem"
                              IsTextSearchEnabled="True"
                              SelectedItem="{Binding LockStatusSelected, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource SearchBarHorizontalComboBoxStyle}"
                              ItemsSource="{Binding LockStatus}">
                    </ComboBox>
                </StackPanel>
                <Separator Background="{DynamicResource MaterialDesignDivider}" />
                <StackPanel Margin="0 8 0 0"
                            Orientation="Horizontal">
                    <RadioButton x:Name="RbExpenseBudgetIndex"
                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                 GroupName="TabIndex"
                                 IsChecked="{Binding TabIndex, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static utility:ImportTabIndex.Data}}"
                                 Content="Danh sách chứng từ" />
                    <RadioButton x:Name="RbExpenseBudgetSummaryIndex"
                                 Visibility="{Binding IsQuanLyDonViCha, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                 GroupName="TabIndex"
                                 IsChecked="{Binding TabIndex, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static utility:ImportTabIndex.Aggregate}}"
                                 Content="Chứng từ tổng hợp" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Row="2">
            <component:ExpandedDataGrid x:Name="DgExpenseBudgetIndex"
                                        Visibility="{Binding IsChecked, ElementName=RbExpenseBudgetIndex, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        VerticalAlignment="Top"
                                        AutoGenerateColumns="False"
                                        CanUserResizeColumns="True"
                                        BorderThickness="1"
                                        HorizontalScrollBarVisibility="Auto"
                                        FrozenColumnCount="4"
                                        CanUserAddRows="False"
                                        IsReadOnly="True"
                                        GridLinesVisibility="All"
                                        ColumnInfo="{Binding Columns}"
                                        ElementFrozenColumn="{Binding ElementName=cbFrozenColumn, Path=., Mode=TwoWay}"
                                        ElementDynamicColumn="{Binding ElementName=pbDynamicColumn, Path=., Mode=TwoWay}"
                                        RowStyle="{StaticResource DataGridRowIndex}"
                                        Style="{StaticResource MaterialDesignDataGrid}"
                                        SelectedValue="{Binding SelectedItem}"
                                        ItemsSource="{Binding SettlementVouchers}"
                                        ext:DataGridBehavior.LastColumnFill="True"
                                        ext:SelectionChangedBehaviour.Command="{Binding SelectionChangedCommand}">
                <DataGrid.Resources>
                    <helper:BindingProxy x:Key="DataContextProxy"
                                         Data="{Binding}" />
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn IsReadOnly="False"
                                            Binding="{Binding Selected,UpdateSourceTrigger=PropertyChanged}"
                                            ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}"
                                            EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}">
                        <DataGridCheckBoxColumn.Header>
                            <Border Background="Transparent">
                                <CheckBox IsChecked="{Binding Data.IsAllItemsSelected, Source={StaticResource DataContextProxy}}" />
                            </Border>
                        </DataGridCheckBoxColumn.Header>
                        <DataGridCheckBoxColumn.HeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}"
                                   BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                <Setter Property="HorizontalContentAlignment"
                                        Value="Center" />
                            </Style>
                        </DataGridCheckBoxColumn.HeaderStyle>
                    </DataGridCheckBoxColumn>
                    <DataGridTextColumn Header="Số chứng từ"
                                        Binding="{Binding SSoChungTu}" />
                    <DataGridTextColumn Header="Đơn vị"
                                        Binding="{Binding STenDonViDisplay}" />
                    <DataGridTextColumn Header="LNS"
                                        Width="200"
                                        Binding="{Binding SDslns}"
                                        ElementStyle="{StaticResource DataGridTextColumnStyle}" />
                    <DataGridTextColumn Header="Ngày chứng từ"
                                        Binding="{Binding DNgayChungTu, Converter={StaticResource DateTimeToStringConverter}}" />
                    <DataGridTextColumn Header="Mô tả"
                                        Binding="{Binding SMoTa}" />
                    <DataGridTextColumn Header="Tháng/Quý"
                                        Binding="{Binding SThangQuyMoTa}" />
                    <DataGridTextColumn Header="Đề nghị"
                                        Binding="{Binding FTongTuChiDeNghi, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}}" />
                    <DataGridTextColumn Header="Phê duyệt"
                                        Binding="{Binding FTongTuChiPheDuyet, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}}" />
                    <DataGridTextColumn Header="Người tạo"
                                        Binding="{Binding SNguoiTao}" />
                    <DataGridTextColumn Header="Trạng thái"
                                        Binding="{Binding BDaTongHopString}"
                                        Visibility="{Binding Data.IsQuanLyDonViCha, Converter={StaticResource InvertBooleanToVisibilityConverter}, Source={StaticResource DataContextProxy}}" />
                    <DataGridTemplateColumn Header="Khóa">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ContentControl x:Name="content" />
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding BKhoa}"
                                                 Value="True">
                                        <Setter TargetName="content"
                                                Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <materialDesign:PackIcon Kind="Lock" />
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </component:ExpandedDataGrid>
            <component:ExpandedDataGrid x:Name="DgExpenseBudgetSummaryIndex"
                                        Visibility="{Binding IsChecked, ElementName=RbExpenseBudgetSummaryIndex, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        VerticalAlignment="Top"
                                        AutoGenerateColumns="False"
                                        CanUserResizeColumns="True"
                                        BorderThickness="1"
                                        HorizontalScrollBarVisibility="Auto"
                                        FrozenColumnCount="4"
                                        CanUserAddRows="False"
                                        IsReadOnly="True"
                                        GridLinesVisibility="All"
                                        ColumnInfo="{Binding Columns}"
                                        ElementFrozenColumn="{Binding ElementName=cbFrozenColumn, Path=., Mode=TwoWay}"
                                        ElementDynamicColumn="{Binding ElementName=pbDynamicColumn, Path=., Mode=TwoWay}"
                                        RowStyle="{StaticResource DataGridRowIndexExpand}"
                                        Style="{StaticResource MaterialDesignDataGrid}"
                                        SelectedValue="{Binding SelectedItemSummary}"
                                        ext:DataGridBehavior.LastColumnFill="True"
                                        ItemsSource="{Binding SettlementVoucherSummaries}"
                                        ext:SelectionChangedBehaviour.Command="{Binding SelectionChangedCommand}">
                <DataGrid.Resources>
                    <helper:BindingProxy x:Key="DataContextProxy"
                                         Data="{Binding}" />
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn IsReadOnly="False"
                                            Binding="{Binding Selected, UpdateSourceTrigger=PropertyChanged}"
                                            EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}">
                        <DataGridCheckBoxColumn.Header>
                            <Border Background="Transparent">
                                <CheckBox IsChecked="{Binding Data.IsAllItemSummariesSelected, Source={StaticResource DataContextProxy}}" />
                            </Border>
                        </DataGridCheckBoxColumn.Header>
                        <DataGridCheckBoxColumn.HeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}"
                                   BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                <Setter Property="HorizontalContentAlignment"
                                        Value="Center" />
                            </Style>
                        </DataGridCheckBoxColumn.HeaderStyle>
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox"
                                   BasedOn="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChildSummary}"
                                                 Value="True">
                                        <Setter Property="Visibility"
                                                Value="Hidden" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>
                    <DataGridTemplateColumn Header="Số chứng từ">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <ToggleButton Visibility="{Binding IsChildSummary, Converter={StaticResource InvertBooleanToVisibilityHiddenConverter}}"
                                                  Template="{StaticResource SimpleExpanderButtonTemp}"
                                                  IsChecked="{Binding IsCollapse, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Text="{Binding SSoChungTu}"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Đơn vị"
                                        Binding="{Binding STenDonVi}" />
                    <DataGridTextColumn Header="LNS"
                                        Width="200"
                                        Binding="{Binding SDslns}"
                                        ElementStyle="{StaticResource DataGridTextColumnStyle}" />
                    <DataGridTextColumn Header="Ngày chứng từ"
                                        Binding="{Binding DNgayChungTu, Converter={StaticResource DateTimeToStringConverter}}" />
                    <DataGridTextColumn Header="Mô tả"
                                        Binding="{Binding SMoTa}" />
                    <DataGridTextColumn Header="Tháng/Quý"
                                        Binding="{Binding SThangQuyMoTa}" />
                    <DataGridTextColumn Header="Đề nghị"
                                        Binding="{Binding FTongTuChiDeNghi, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}}" />
                    <DataGridTextColumn Header="Phê duyệt"
                                        Binding="{Binding FTongTuChiPheDuyet, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}}" />
                    <DataGridTextColumn Header="Người tạo"
                                        Binding="{Binding SNguoiTao}" />
                    <DataGridTextColumn Header="Trạng thái"
                                        Binding="{Binding STrangThai}" />
                    <DataGridTextColumn Header="Chứng từ tổng hợp"
                                        Binding="{Binding STongHop}" />
                    <DataGridTemplateColumn Header="Khóa">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ContentControl x:Name="content" />
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding BKhoa}"
                                                 Value="True">
                                        <Setter TargetName="content"
                                                Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <materialDesign:PackIcon Kind="Lock" />
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn x:Name="TrangThaiGui"
                                            Header="Trạng thái gửi">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="{Binding TypeIcon}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </component:ExpandedDataGrid>
        </Grid>
        <component:ProgressDialog Grid.Row="2"
                                  Margin="-200 -200 0 0" />
    </Grid>
</UserControl>
