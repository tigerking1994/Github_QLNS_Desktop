                    <Button Style="{StaticResource SearchBarBtnStyle}"
                            Command="{Binding ImportDataCommand}"
                            ext:Permission.Identifier="BUDGET_SETTLEMENT_EXPENSEBUDGET_INDEX_BTN_EXCEL">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileExcel" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                       Text="Nhận dữ liệu"></TextBlock>
                        </StackPanel>
                    </Button>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />

                    <Button Style="{StaticResource SearchBarBtnStyle}"
                            Command="{Binding ExcelCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Uplay" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                       Text="Gửi dữ liệu" />
                            <materialDesign:PopupBox Margin="-10 0 0 0"
                                                     Grid.Column="1"
                                                     HorizontalAlignment="Right"
                                                     IsPopupOpen="{Binding IsOpenExcelPopup, Mode=TwoWay}">
                                <materialDesign:PopupBox.ToggleContent>
                                    <materialDesign:PackIcon Kind="MenuDown" />
                                </materialDesign:PopupBox.ToggleContent>
                                <StackPanel>
                                    <Button IsEnabled="{Binding IsButtonSendDataEnable}"
                                            Command="{Binding UploadFileCommandHTTP}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="FileExportOutline" />
                                            <TextBlock Margin="10 0 10 0"
                                                       Style="{StaticResource SearchBarBtnTextStyle}"
                                                       Text="Gửi dữ liệu qua mạng HTTP" />
                                        </StackPanel>
                                    </Button>
                                    <Button IsEnabled="{Binding IsButtonSendDataEnable}"
                                            Command="{Binding UploadFileCommandFTP}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="FileExportOutline" />
                                            <TextBlock Margin="10 0 10 0"
                                                       Style="{StaticResource SearchBarBtnTextStyle}"
                                                       Text="Gửi dữ liệu qua mạng FTP" />
                                        </StackPanel>
                                    </Button>
                                    <Button IsEnabled="{Binding IsExportAggregateData}"
                                            Command="{Binding ExportDataCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="FileExportOutline" />
                                            <TextBlock Margin="10 0 10 0"
                                                       Style="{StaticResource SearchBarBtnTextStyle}"
                                                       Text="Xuất dữ liệu ra tệp" />
                                        </StackPanel>
                                    </Button>
                                    <Button IsEnabled="{Binding IsExportAggregateData}"
                                            Command="{Binding ExportAggregateDataCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="FileExportOutline" />
                                            <TextBlock Margin="10 0 10 0"
                                                       Style="{StaticResource SearchBarBtnTextStyle}"
                                                       Text="Xuất dữ liệu ra tệp theo tiêu chí " />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </materialDesign:PopupBox>
                        </StackPanel>
                    </Button>

                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    <!--Gui du lieu-->
                    <!--<Button
                            IsEnabled="{Binding IsButtonSendDataEnable}"
                            Style="{StaticResource SearchBarBtnStyle}" 
                            Command="{Binding UploadFileCommand}">
