<UserControl x:Class="VTS.QLNS.CTC.App.View.Budget.Settlement.ExpenseBudget.ExpenseBudgetIndex"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:localEnum="clr-namespace:VTS.QLNS.CTC.Utility.Enum;assembly=VTS.QLNS.CTC.Utility"
             xmlns:ext="clr-namespace:VTS.QLNS.CTC.App.Extensions"
             xmlns:component="clr-namespace:VTS.QLNS.CTC.App.Component"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:helper="clr-namespace:VTS.QLNS.CTC.App.Helper"
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             xmlns:expensebudget="clr-namespace:VTS.QLNS.CTC.App.ViewModel.Budget.Settlement.ExpenseBudget"
             xmlns:utility="clr-namespace:VTS.QLNS.CTC.Utility;assembly=VTS.QLNS.CTC.Utility"
             d:DataContext="{d:DesignInstance Type=expensebudget:ExpenseBudgetIndexViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.InputBindings>
        <KeyBinding Key="F3"
                    Command="{Binding AddCommand}" />
        <KeyBinding Key="F4"
                    Command="{Binding DeleteComman}" />
        <KeyBinding Key="F5"
                    Command="{Binding RefreshCommand}" />
    </UserControl.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel>
            <materialDesign:PackIcon Kind="{Binding IconKind}"
                                     Style="{StaticResource HeaderIconStyle}" />
            <StackPanel Orientation="Vertical">
                <TextBlock FontWeight="Bold"
                           Text="{Binding Name}"
                           ext:TextBlockTransform.CharacterCasing="Upper" />
                <TextBlock Text="{Binding Description}" />
                <Separator Margin="0 5 0 0"
                           Background="{DynamicResource MaterialDesignDivider}" />
            </StackPanel>
        </DockPanel>
        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Disabled">
            <StackPanel Margin="0 5">
                <StackPanel Orientation="Horizontal"
                            Margin="0 0 0 3">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type ComboBox}"
                               BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <Setter Property="Width"
                                    Value="150" />
                        </Style>
                    </StackPanel.Resources>
                    <StackPanel Orientation="Horizontal"
                                ext:Permission.Identifier="BUDGET_SETTLEMENT_EXPENSEBUDGET_INDEX_PANEL_ADD_EDIT">
                        <Button x:Name="btnAdd"
                                Command="{Binding AddCommand}"
                                Style="{StaticResource SearchBarBtnStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" />
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                           Text="Tạo mới (F3)" />
                            </StackPanel>
                        </Button>
                        <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                        <Button Style="{StaticResource SearchBarBtnStyle}"
                                Command="{Binding UpdateCommand}"
                                IsEnabled="{Binding IsEdit}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountEdit" />
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                           Text="Sửa" />
                            </StackPanel>
                        </Button>
                        <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    </StackPanel>
                    <Button ext:Permission.Identifier="BUDGET_SETTLEMENT_EXPENSEBUDGET_INDEX_BTN_DELETE"
                            Style="{StaticResource SearchBarBtnStyle}"
                            Command="{Binding DeleteCommand}"
                            IsEnabled="{Binding IsDelete}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Delete" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                       Text="Xóa (F4)" />
                        </StackPanel>
                    </Button>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    <Button ext:Permission.Identifier="BUDGET_SETTLEMENT_EXPENSEBUDGET_INDEX_BTN_DETAIL"
                            Style="{StaticResource SearchBarBtnStyle}"
                            ToolTip="Nhập số liệu chứng từ chi tiết (Nhấp đúp chuột)"
                            Command="{Binding SelectionDoubleClickCommand}"
                            CommandParameter="{Binding SelectedItem}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="LightningBoltOutline" />
                        </StackPanel>
                    </Button>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    <StackPanel Orientation="Horizontal">
                        <Button ext:Permission.Identifier="BUDGET_SETTLEMENT_EXPENSEBUDGET_INDEX_BTN_LOCK"
                                Style="{StaticResource SearchBarBtnStyle}"
                                IsEnabled="{Binding IsButtonEnable}"
                                Command="{Binding LockUnLockCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="{Binding IsLock, Converter={StaticResource InvertBooleanToLockIconConverter}}" />
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                           Text="{Binding IsLock, Converter={StaticResource InvertBooleanToLockStatusConverter}}" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    <Button Style="{StaticResource SearchBarBtnStyle}"
                            ToolTip="F5 (Refresh)"
                            Command="{Binding RefreshCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                       Text="(F5)" />
                        </StackPanel>
                    </Button>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    <StackPanel Orientation="Horizontal"
                                ext:Permission.Identifier="BUDGET_SETTLEMENT_EXPENSEBUDGET_INDEX_PANEL_AGGREGATE">
                        <Button Style="{StaticResource SearchBarBtnStyle}"
                                Command="{Binding AggregateCommand}"
                                IsEnabled="{Binding IsAggregate}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Sigma" />
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                           Text="Tổng hợp" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />

                    <Button Style="{StaticResource SearchBarBtnStyle}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CodeJson" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}"
                                       Text="Json" />
                            <materialDesign:PopupBox Margin="-10 0 0 0"
                                                     Grid.Column="1"
                                                     HorizontalAlignment="Right">
                                <materialDesign:PopupBox.ToggleContent>
                                    <materialDesign:PackIcon Kind="MenuDown" />
                                </materialDesign:PopupBox.ToggleContent>
                                <StackPanel>
                                    <Button Command="{Binding ImportJsonCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="FileImportOutline" />
                                            <TextBlock Margin="10 0 10 0"
                                                       Style="{StaticResource SearchBarBtnTextStyle}"
                                                       Text="Import từ file Json" />
                                        </StackPanel>
                                    </Button>
                                    <Button Command="{Binding ExportJsonCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="CodeJson" />
                                            <TextBlock Margin="10 0 10 0"
                                                       Style="{StaticResource SearchBarBtnTextStyle}"
                                                       Text="Export file Json" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </materialDesign:PopupBox>
                        </StackPanel>
                    </Button>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />

                    <!--<Button 
                        ext:Permission.Identifier="BUDGET_SETTLEMENT_EXPENSEBUDGET_INDEX_BTN_EXCEL"
