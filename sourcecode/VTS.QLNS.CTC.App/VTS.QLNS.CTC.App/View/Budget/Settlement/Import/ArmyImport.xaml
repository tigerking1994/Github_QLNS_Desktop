                                                                            Path="ActualWidth" />
                                                                        <Binding
                                                                            ElementName="RTrungTa"
                                                                            Path="ActualWidth" />
                                                                        <Binding
                                                                            ElementName="RThieuTa"
                                                                            Path="ActualWidth" />
                                                                        <Binding
                                                                            ElementName="RDaiUy"
                                                                            Path="ActualWidth" />
                                                                        <Binding
                                                                            ElementName="RThuongUy"
                                                                            Path="ActualWidth" />
