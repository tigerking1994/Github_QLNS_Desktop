                        <component:DataGridTextColumn
                            x:Name="SumQNCN"
                            Header="(+)"
                            IsReadOnly="True"
                            Width="60"
                            FontWeight="Bold"
                            StringFormat="{}{0:N0}"
                            Binding="{Binding SumQNCN, UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
