                                                                            ElementName="RTrungUy"
                                                                            Path="ActualWidth" />
                                                                        <Binding
                                                                            ElementName="RThieuUy"
                                                                            Path="ActualWidth" />
                                                                    </MultiBinding>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Grid.Style>
                                                    <TextBlock
