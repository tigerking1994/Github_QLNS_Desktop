                                                                        <Binding
                                                                            ElementName="SumSyQuan"
                                                                            Path="ActualWidth" />
                                                                        <Binding
                                                                            ElementName="RTuong"
                                                                            Path="ActualWidth" />
                                                                        <Binding
                                                                            ElementName="RDaiTa"
                                                                            Path="ActualWidth" />
