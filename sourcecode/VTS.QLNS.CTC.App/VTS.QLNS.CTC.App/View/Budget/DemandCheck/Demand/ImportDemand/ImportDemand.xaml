<Window x:Class="VTS.QLNS.CTC.App.View.Budget.DemandCheck.Demand.ImportDemand.ImportDemand"
        x:Name="ImportDemandWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:compt="clr-namespace:VTS.QLNS.CTC.App.Component"

             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:VTS.QLNS.CTC.App.View.Budget.DemandCheck.Demand.ImportDemand"
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:system="clr-namespace:System;assembly=mscorlib" xmlns:import="clr-namespace:VTS.QLNS.CTC.App.ViewModel.Budget.DemandCheck.Import"
        xmlns:localEnum="clr-namespace:VTS.QLNS.CTC.Utility;assembly=VTS.QLNS.CTC.Utility"
        xmlns:helper="clr-namespace:VTS.QLNS.CTC.App.Helper"
        d:DataContext="{d:DesignInstance Type=import:ImportDemandViewModel}"
             mc:Ignorable="d" 
             WindowState="Maximized"
             d:DesignHeight="450" d:DesignWidth="800"
             Title="Import dữ liệu số nhu cầu">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel>
                <materialDesign:PackIcon Kind="MicrosoftExcel" Style="{StaticResource DialogScreenIconStyle}"/>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10 0">
                    <TextBlock Text="IMPORT DỮ LIỆU SỐ NHU CẦU" FontWeight="Bold"/>
                    <TextBlock Text="Chọn file Excel"/>
                </StackPanel>
         </DockPanel>
        <Separator Grid.Row="1" Background="{DynamicResource MaterialDesignDivider}"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Margin="0 10 0 0" Padding="5 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        IsEnabled="False"
                        materialDesign:HintAssist.Hint="Lựa chọn file Excel"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        BorderThickness="0"
                        VerticalAlignment="Center" 
                        Text="{Binding FileName}"/>
                    <Button
                        Style="{DynamicResource MaterialDesignToolButton}"
                        Grid.Column="1"
                        Command="{Binding UploadFileCommand}">
                        <materialDesign:PackIcon
                            Kind="FileUpload"
                            Margin="8 0 0 0" />
                    </Button>
                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0"
                    Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ComboBox 
                        Grid.Column="0"
                        materialDesign:HintAssist.Hint="Chọn loại chứng từ"
                        materialDesign:TextFieldAssist.HasClearButton="False"
                        IsEditable="False"
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                        DisplayMemberPath="DisplayItem"
                        SelectedValuePath="ValueItem"  
                        SelectedItem="{Binding VoucherTypeSelected, UpdateSourceTrigger=PropertyChanged}"
                        ItemsSource="{Binding VoucherTypes}"/>
                    <ComboBox 
                        Grid.Column="1"
                        Margin="10 0 0 0"
                        materialDesign:HintAssist.Hint="Chọn đơn vị"
                        materialDesign:TextFieldAssist.HasClearButton="False"
                        IsEditable="False"
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                        DisplayMemberPath="DisplayItem"
                        SelectedValuePath="ValueItem"  
                        SelectedItem="{Binding DonViSelected}"
                        ItemsSource="{Binding ListDonVi}"/>
                </Grid>
                <Grid
                    Grid.Row="1"
                    Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0"
                             VerticalAlignment="Stretch"
                             materialDesign:HintAssist.Hint="Mô tả chi tiết"
                             Text="{Binding MoTa}"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" />
                    <DatePicker Grid.Column="1"
                                Margin="10 0 0 0"
                                Language="vi-VN"
                                TabIndex="0"
                                materialDesign:HintAssist.Hint="Ngày chứng từ"
                                Text="{Binding NgayChungTu, Mode=TwoWay}" />
                </Grid>
                <Grid Grid.Row="2"
                    Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ComboBox 
                        Grid.Column="0"
                        materialDesign:HintAssist.Hint="Chọn loại nguồn ngân sách"
                        materialDesign:TextFieldAssist.HasClearButton="False"
                        IsEditable="False"
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                        DisplayMemberPath="DisplayItem"
                        SelectedValuePath="ValueItem"  
                        SelectedItem="{Binding BudgetSourceTypeSelected, UpdateSourceTrigger=PropertyChanged}"
                        ItemsSource="{Binding BudgetSourceTypes}"/>
                </Grid>
                <Grid Grid.Row="3"
                      Margin="0 20 0 10">
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button 
                        Margin="0 0 0 0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding GetFileFtpCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Download" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Lấy dữ liệu"/>
                        </StackPanel>
                        </Button>
                        <!--<Button 
                            Margin="10 0 0 0"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding DownloadFileFtpServer}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Download" />
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Tải dữ liệu"/>
                            </StackPanel>
                        </Button>-->
                        <Button 
                        Margin="10 0 0 0"
                        Width="120"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding ProcessFileCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileCheck" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Kiểm tra"/>
                        </StackPanel>
                        </Button>
                        <Button 
                        Margin="10 0 0 0"
                        Width="120"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Command="{Binding ResetDataCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Refresh" />
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Hủy bỏ"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
                <Grid 
                    Grid.Row="4"
                    Margin="0 10 0 0">
                    <StackPanel
                        Orientation="Horizontal">
                        <RadioButton
                            x:Name="RbDemandVoucherDetail"
                            Style="{StaticResource MaterialDesignTabRadioButton}"
                            GroupName="TabIndex"
                            IsChecked="{Binding TabIndex, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static localEnum:ImportTabIndex.Data}}"
                            Content="Thông tin chứng từ" />
                        <RadioButton
                            x:Name="RbMLSKT"
                            Style="{StaticResource MaterialDesignTabRadioButton}"
                            GroupName="TabIndex"
                            IsChecked="{Binding TabIndex, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static localEnum:ImportTabIndex.MLNS}}"
                            Content="Mục lục số kiểm tra" />
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Grid.Column="1" Grid.RowSpan="2" Margin="10 5 0 0">
                <!--Poppup Ftp-->
                <DataGrid
                    x:Name="dgdDataPlanManagerIndex"
                    Grid.Row="2"
                    Margin="0 5 0 5"
                    FrozenColumnCount="0"
                    BorderThickness="1"
                    CanUserResizeColumns="True"
                    HorizontalScrollBarVisibility="Auto"
                    CanUserAddRows="False"
                    IsSynchronizedWithCurrentItem="True"
                    GridLinesVisibility="All"
                    MaxHeight="230"
                    AutoGenerateColumns="False"
                    RowStyle="{StaticResource DataGridRowIndex}"
                    Style="{StaticResource MaterialDesignDataGrid}"
                    ScrollViewer.CanContentScroll="True"
                    ItemsSource="{Binding LstFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding FileSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <DataGrid.Resources>
                        <helper:BindingProxy x:Key="DataContextProxy" Data="{Binding}" />
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn
                            Header="Chọn"
                                        Binding="{Binding BIsCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}">
                        </DataGridCheckBoxColumn>
                        <!--<materialDesign:DataGridTextColumn 
                                x:Name="STT"
                                ElementStyle="{StaticResource DataGridTextColumnStyle}" 
                                Header="STT"
                                IsReadOnly="True"
                                Binding="{Binding FileName}">
                        </materialDesign:DataGridTextColumn>-->
                        <materialDesign:DataGridTextColumn 
                                x:Name="tenfile"
                                ElementStyle="{StaticResource DataGridTextColumnStyleImport}" 
                                Header="Tên file"
                                IsReadOnly="True"
                                Binding="{Binding FileName}">
                        </materialDesign:DataGridTextColumn>
                        <materialDesign:DataGridTextColumn
                            x:Name="agencyName"
                            ElementStyle="{StaticResource DataGridTextColumnStyleImport}"
                            Header="Đơn vị"
                            IsReadOnly="True"
                            Binding="{Binding AgencyName}">
                        </materialDesign:DataGridTextColumn>
                        <materialDesign:DataGridTextColumn
                            x:Name="ngayGui"
                            ElementStyle="{StaticResource DataGridTextColumnStyleImport}"
                            Header="Ngày gửi"
                            IsReadOnly="True"
                            Width="*"
                            Binding="{Binding LastModifiedFormat}">
                        </materialDesign:DataGridTextColumn>
                        <!--<materialDesign:DataGridTextColumn 
                                x:Name="duongdan"
                                ElementStyle="{StaticResource DataGridTextColumnStyle}" 
                                Header="Đường dẫn"
                            Width="*"
                                IsReadOnly="True"
                                Binding="{Binding SUrl}">
                        </materialDesign:DataGridTextColumn>-->
                        <DataGridTemplateColumn Header="Tải xuống"
                        HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                        Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel 
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                        <Button ToolTip="Tải xuống"
                                            Style="{StaticResource MaterialDesignToolButton}"
                                            Command="{Binding DataContext.DownloadFileFtpServer, ElementName=dgdDataPlanManagerIndex}"
                                            CommandParameter="{Binding SelectedItem, ElementName=dgdDataPlanManagerIndex}">
                                            <materialDesign:PackIcon Kind="CloudDownloadOutline" />
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
                <!--End Ftp-->
            </Grid>
            <Grid
                Grid.ColumnSpan="2"
                Grid.Row="2"
                Margin="0 5 0 0">
                <DataGrid
                    x:Name="DgDemandImport"
                    Visibility="{Binding IsChecked, ElementName=RbDemandVoucherDetail, Converter={StaticResource BooleanToVisibilityConverter}}"
                    AutoGenerateColumns="False" 
                    CanUserResizeColumns="True"
                    BorderThickness="1"
                    HorizontalScrollBarVisibility="Auto"
                    FrozenColumnCount ="2"
                    CanUserAddRows="False"
                    GridLinesVisibility="All"
                    RowStyle="{StaticResource DataGridRowDetail}"
                    ItemsSource="{Binding DemandVoucherDetails}"
                    SelectedItem="{Binding SelectedItem}">
                    <DataGrid.Resources>
                        <helper:BindingProxy
                            x:Key="DataContextProxy"
                            Data="{Binding}" />
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Trạng thái">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ContentControl x:Name="content"/>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding ImportStatus}" Value="True">
                                            <Setter TargetName="content" Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <materialDesign:PackIcon Kind="CheckCircle" Foreground="Green" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ImportStatus}" Value="False">
                                            <Setter TargetName="content" Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <materialDesign:PackIcon Kind="CloseCircle" Foreground="Red" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsWarning}" Value="True">
                                            <Setter TargetName="content" Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <materialDesign:PackIcon Kind="WarningCircleOutline" Foreground="Orange" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn 
                            Header="Ký hiệu" 
                            Binding="{Binding KyHieu, UpdateSourceTrigger=LostFocus}"
                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"/>
                        <!--<DataGridTextColumn 
                            Header="Ngành" 
                            Binding="{Binding Nganh, UpdateSourceTrigger=LostFocus}"
                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"/>
                        <DataGridTextColumn 
                            Header="Ngành cha" 
                            Binding="{Binding NganhCha, UpdateSourceTrigger=LostFocus}"
                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"/>-->
                        <DataGridTextColumn 
                            Header="Mô tả" 
                            Binding="{Binding Description, UpdateSourceTrigger=LostFocus}"
                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"/>
                        <compt:DataGridTextColumn
                        x:Name="TC1"
                        StringFormat="{}{0:N0}"
                        Binding="{Binding X1.SoTien,  UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                        Visibility="{Binding Data.TC1Visible, Source={StaticResource DataContextProxy}}"
                        IsReadOnly="{Binding Data.IsReadOnlyX1, Source={StaticResource DataContextProxy}}"
                        EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"
                        ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}">
                            <DataGridTextColumn.Header>
                                <TextBlock
                                Text="{Binding DataContext.TC1, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                            </DataGridTextColumn.Header>
                        </compt:DataGridTextColumn>
                        <compt:DataGridTextColumn
                        x:Name="TC2"
                        StringFormat="{}{0:N0}"
                        Binding="{Binding X2.SoTien,  UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                        Visibility="{Binding Data.TC2Visible, Source={StaticResource DataContextProxy}}"
                        IsReadOnly="{Binding Data.IsReadOnlyX2, Source={StaticResource DataContextProxy}}"
                        EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}">
                            <DataGridTextColumn.Header>
                                <TextBlock
                                Text="{Binding DataContext.TC2, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                            </DataGridTextColumn.Header>
                        </compt:DataGridTextColumn>
                        <compt:DataGridTextColumn
                        x:Name="TC3"
                        StringFormat="{}{0:N0}"
                        Binding="{Binding X3.SoTien,  UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                        Visibility="{Binding Data.TC3Visible, Source={StaticResource DataContextProxy}}"
                        IsReadOnly="{Binding Data.IsReadOnlyX3, Source={StaticResource DataContextProxy}}"
                        EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}">
                            <DataGridTextColumn.Header>
                                <TextBlock
                                Text="{Binding DataContext.TC3, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                            </DataGridTextColumn.Header>
                        </compt:DataGridTextColumn>
                        <compt:DataGridTextColumn
                        x:Name="TC4"
                        StringFormat="{}{0:N0}"
                        Binding="{Binding X4.SoTien,  UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                        Visibility="{Binding Data.TC4Visible, Source={StaticResource DataContextProxy}}"
                        IsReadOnly="{Binding Data.IsReadOnlyX4, Source={StaticResource DataContextProxy}}"
                        EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}">
                            <DataGridTextColumn.Header>
                                <TextBlock
                                Text="{Binding DataContext.TC4, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                            </DataGridTextColumn.Header>
                        </compt:DataGridTextColumn>
                        <compt:DataGridTextColumn
                        x:Name="TC5"
                        StringFormat="{}{0:N0}"
                        Binding="{Binding X5.SoTien,  UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                        Visibility="{Binding Data.TC5Visible, Source={StaticResource DataContextProxy}}"
                        IsReadOnly="{Binding Data.IsReadOnlyX5, Source={StaticResource DataContextProxy}}"
                        EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}">
                            <DataGridTextColumn.Header>
                                <TextBlock
                                Text="{Binding DataContext.TC5, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                            </DataGridTextColumn.Header>
                        </compt:DataGridTextColumn>
                        <compt:DataGridTextColumn
                        x:Name="MHHV1"
                        Header="MHHV1"
                        StringFormat="{}{0:N0}"
                        Binding="{Binding X1.SoTienMHHV,  UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                        Visibility="{Binding Data.MHHV1Visible, Source={StaticResource DataContextProxy}}"
                        IsReadOnly="{Binding Data.IsReadOnlyX1, Source={StaticResource DataContextProxy}}"
                        EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                        HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}">
                            <DataGridColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Border
                                        Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding), Converter={StaticResource HeaderPaddingConverter}}">
                                            <Canvas Height="{Binding ElementName=HeaderGroup, Path=ActualHeight}">
                                                <Grid>
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Width">
                                                                <Setter.Value>
                                                                    <MultiBinding Converter="{StaticResource MultipleWidthConverter}">
                                                                        <Binding ElementName="MHHV1" Path="ActualWidth"/>
                                                                        <Binding ElementName="DT1" Path="ActualWidth"/>
                                                                    </MultiBinding>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Grid.Style>
                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding DataContext.CanCuBaoDam1, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                                </Grid>
                                            </Canvas>
                                        </Border>
                                        <Border
                                    Grid.Row="1"
                                    Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding)}"
                                    BorderThickness="0 1 1 0"
                                    BorderBrush="{Binding HorizontalGridLinesBrush, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                            <!--<TextBlock Name="HeaderGroup"
                                               Text="{Binding DataContext.MHHV1, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" />-->
                                            <TextBlock Name="HeaderGroup"
                                               Text="Mua hàng cấp hiện vật" />
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </DataGridColumn.HeaderTemplate>
                        </compt:DataGridTextColumn>
                        <compt:DataGridTextColumn
                        x:Name="DT1"
                        Header="DT1"
                        StringFormat="{}{0:N0}"
                        Binding="{Binding X1.SoTienDT,  UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                        Visibility="{Binding Data.DT1Visible, Source={StaticResource DataContextProxy}}"
                        IsReadOnly="{Binding Data.IsReadOnlyX1, Source={StaticResource DataContextProxy}}"
                        EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                        HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}">
                            <DataGridColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Border
                                        BorderThickness="0 0 1 0"
                                        BorderBrush="{Binding HorizontalGridLinesBrush, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding), Converter={StaticResource HeaderPaddingConverter}}">
                                            <Canvas Height="{Binding ElementName=HeaderGroup, Path=ActualHeight}">
                                            </Canvas>
                                        </Border>
                                        <Border
                                        Grid.Row="1"
                                        Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding)}"
                                        BorderThickness="0 1 1 0"
                                        BorderBrush="{Binding HorizontalGridLinesBrush, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                            <!--<TextBlock Name="HeaderGroup" Text="{Binding DataContext.DT1, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>-->
                                            <TextBlock Name="HeaderGroup" Text="Đặc thù"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </DataGridColumn.HeaderTemplate>
                        </compt:DataGridTextColumn>
                        <compt:DataGridTextColumn
                        x:Name="MHHV2"
                        Header="MHHV2"
                        StringFormat="{}{0:N0}"
                        Binding="{Binding X2.SoTienMHHV,  UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                        Visibility="{Binding Data.MHHV2Visible, Source={StaticResource DataContextProxy}}"
                        IsReadOnly="{Binding Data.IsReadOnlyX2, Source={StaticResource DataContextProxy}}"
                        EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                        HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}">
                            <DataGridColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Border
                                        Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding), Converter={StaticResource HeaderPaddingConverter}}">
                                            <Canvas Height="{Binding ElementName=HeaderGroup, Path=ActualHeight}">
                                                <Grid>
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Setter Property="Width">
                                                                <Setter.Value>
                                                                    <MultiBinding Converter="{StaticResource MultipleWidthConverter}">
                                                                        <Binding ElementName="MHHV2" Path="ActualWidth"/>
                                                                        <Binding ElementName="DT2" Path="ActualWidth"/>
                                                                    </MultiBinding>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Grid.Style>
                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding DataContext.CanCuBaoDam2, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                                </Grid>
                                            </Canvas>
                                        </Border>
                                        <Border
                                    Grid.Row="1"
                                    Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding)}"
                                    BorderThickness="0 1 1 0"
                                    BorderBrush="{Binding HorizontalGridLinesBrush, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                            <TextBlock Name="HeaderGroup"
                                               Text="Mua hàng cấp hiện vật" />
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </DataGridColumn.HeaderTemplate>
                        </compt:DataGridTextColumn>
                        <compt:DataGridTextColumn
                        x:Name="DT2"
                        Header="DT2"
                        StringFormat="{}{0:N0}"
                        Binding="{Binding X2.SoTienDT,  UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                        Visibility="{Binding Data.DT2Visible, Source={StaticResource DataContextProxy}}"
                        IsReadOnly="{Binding Data.IsReadOnlyX2, Source={StaticResource DataContextProxy}}"
                        EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                        HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}">
                            <DataGridColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Border
                                        BorderThickness="0 0 1 0"
                                        BorderBrush="{Binding HorizontalGridLinesBrush, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding), Converter={StaticResource HeaderPaddingConverter}}">
                                            <Canvas Height="{Binding ElementName=HeaderGroup, Path=ActualHeight}">
                                            </Canvas>
                                        </Border>
