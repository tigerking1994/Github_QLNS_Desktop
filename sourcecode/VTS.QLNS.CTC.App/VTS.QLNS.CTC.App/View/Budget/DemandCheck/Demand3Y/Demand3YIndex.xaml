                    <Button
                        x:Name="btnPrint"
                        extensions:Permission.Identifier="BUDGET_DEMANDCHECK_DEMAND_INDEX_REPORT"
                        Command="{Binding BtnPrintCommand}"
                        Style="{StaticResource SearchBarBtnStyle}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Printer" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}">In báo cáo</TextBlock>
                            <materialDesign:PopupBox
                                Margin="-10,0,0,0"
                                HorizontalAlignment="Right"
                                IsPopupOpen="{Binding IsOpenPrintPopup, Mode=TwoWay}">
                                <materialDesign:PopupBox.ToggleContent>
                                    <materialDesign:PackIcon Kind="MenuDown" />
                                </materialDesign:PopupBox.ToggleContent>
                                <StackPanel>
                                    <Button
                                        Command="{Binding PrintCommand}"
                                        CommandParameter="{x:Static localEnum:DemandCheckPrintType.REPORT_ORG_DEMAND3Y_DETAIL_NUMBER}"
                                        Content="Báo cáo chi tiết số nhu cầu 3 năm" />
                                    <Button
                                        Command="{Binding PrintCommand}"
                                        CommandParameter="{x:Static localEnum:DemandCheckPrintType.REPORT_DEMAND3Y_NUMBER_SUMMARY}"
                                        Content="Báo cáo số nhu cầu tổng hợp 3 năm" />
                                </StackPanel>
                            </materialDesign:PopupBox>
                        </StackPanel>
                    </Button>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    <Button x:Name="btnShowCol" Style="{StaticResource SearchBarBtnStyle}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="PlusMinusVariant" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Ẩn/hiện cột" />
                            <materialDesign:PopupBox
                                Name="pbDynamicColumn"
                                Margin="-10 0 0 0"
                                HorizontalAlignment="Right"
                                StaysOpen="True">
                                <materialDesign:PopupBox.ToggleContent>
                                    <materialDesign:PackIcon Kind="MenuDown"/>
                                </materialDesign:PopupBox.ToggleContent>
                            </materialDesign:PopupBox>
                        </StackPanel>
                    </Button>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    <ComboBox
                            Name="cbFrozenColumn"
                            materialDesign:HintAssist.Hint="Cố định cột"
                            DisplayMemberPath="DisplayItem"
                            SelectedValuePath="ValueItem"/>
                </StackPanel>
                <Separator Background="{DynamicResource MaterialDesignDivider}" />
                <StackPanel Margin="0 0 0 3" Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}" TargetType="{x:Type ComboBox}">
                            <Setter Property="Width" Value="150" />
                        </Style>
                    </StackPanel.Resources>
                    <ComboBox
                        materialDesign:HintAssist.Hint="-- Đơn vị --"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        IsEditable="True"
                        DisplayMemberPath="{Binding  ComboboxDisplayMemberPath}"
                        IsTextSearchEnabled="True"
                        SelectedItem="{Binding SelectedNsDonViModel, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource SearchBarHorizontalComboBoxStyle}"
                        ItemsSource="{Binding NsDonViModelItems}">
                    </ComboBox>
                    <!--<Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />-->
                    <!--<ComboBox
                        materialDesign:HintAssist.Hint="Loại chứng từ"
                        materialDesign:TextFieldAssist.HasClearButton="False"
                        Visibility="Hidden"
                        IsEditable="False"
                        DisplayMemberPath="DisplayItem"
                        IsTextSearchEnabled="True"
                        SelectedItem="{Binding VoucherTypeSelected, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource SearchBarHorizontalComboBoxStyle}"
                        ItemsSource="{Binding VoucherTypes}">
                    </ComboBox>-->
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    <ComboBox
                        materialDesign:HintAssist.Hint="-- Loại nguồn ngân sách --"
                        materialDesign:TextFieldAssist.HasClearButton="False"
                        IsEditable="False"
                        DisplayMemberPath="DisplayItem"
                        IsTextSearchEnabled="True"
                        SelectedItem="{Binding BudgetSourceTypeSelected, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource SearchBarHorizontalComboBoxStyle}"
                        ItemsSource="{Binding BudgetSourceTypes}">
                    </ComboBox>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    <TextBox
                        materialDesign:HintAssist.Hint="-- Nhập từ khóa tìm kiếm --"
                        materialDesign:HintAssist.IsFloating="False"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource SearchBarHorizontalTextBoxStyle}" >
                        <TextBox.InputBindings>
                            <KeyBinding Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" Key="Return" />
                        </TextBox.InputBindings>
                    </TextBox>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                    <ComboBox
                        materialDesign:HintAssist.Hint="-- Trạng thái khóa --"
                        materialDesign:TextFieldAssist.HasClearButton="False"
                        IsEditable="False"
                        DisplayMemberPath="DisplayItem"
                        IsTextSearchEnabled="True"
                        SelectedItem="{Binding LockStatusSelected, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource SearchBarHorizontalComboBoxStyle}"
                        ItemsSource="{Binding LockStatus}">
                    </ComboBox>
                    <Button
                        Margin=" 0 5 0 0"
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource SearchBarBtnStyle}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Search" />
                            <TextBlock
                                Padding="8,0,0,0"
                                Style="{StaticResource SearchBarBtnTextStyle}"
                                Text="Tìm kiếm" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <Separator Background="{DynamicResource MaterialDesignDivider}" />
                <StackPanel Margin="0 8 0 0" Orientation="Horizontal">
                    <RadioButton
                        x:Name="RbDemandVoucherIndex"
                        Style="{StaticResource MaterialDesignTabRadioButton}"
                        GroupName="TabIndex"
                        IsChecked="{Binding TabIndex, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static utility:ImportTabIndex.Data}}"
                        Content="Danh sách chứng từ" />
                    <RadioButton
                        x:Name="RbDemandSummaryVoucherIndex"
                        Visibility="{Binding IsQuanLyDonViCha, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Style="{StaticResource MaterialDesignTabRadioButton}"
                        GroupName="TabIndex"
                        IsChecked="{Binding TabIndex, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static utility:ImportTabIndex.MLNS}}"
                        Content="Chứng từ tổng hợp" />
                </StackPanel>
                <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0 0 0 1" />
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Row="2">
            <component:ExpandedDataGrid
                x:Name="DgDemand3YIndex"
                Visibility="{Binding IsChecked, ElementName=RbDemandVoucherIndex, Converter={StaticResource BooleanToVisibilityConverter}}"
                VerticalAlignment="Top"
                AutoGenerateColumns="False"
                BorderThickness="1"
                CanUserAddRows="False"
                CanUserResizeColumns="True"
                FrozenColumnCount="3"
                HorizontalScrollBarVisibility="Auto"
                IsReadOnly="True"
                GridLinesVisibility="All"
                ColumnInfo="{Binding Columns}"
                ElementFrozenColumn="{Binding ElementName=cbFrozenColumn, Path=., Mode=TwoWay}"
                ElementDynamicColumn="{Binding ElementName=pbDynamicColumn, Path=., Mode=TwoWay}"
                Style="{StaticResource MaterialDesignDataGrid}"
                RowStyle="{StaticResource DataGridRowIndex}"
                ItemsSource="{Binding Items, NotifyOnTargetUpdated=True}"
                TargetUpdated="DgDemand3YIndex_OnTargetUpdated"
                SelectedItem="{Binding SelectedNsSktChungTuModel}"
                extensions:DataGridBehavior.LastColumnFill="True"
                extensions:SelectionChangedBehaviour.Command="{Binding SelectionChangedCommand}">
                <DataGrid.Resources>
                    <helper:BindingProxy
                        x:Key="DataContextProxy"
                        Data="{Binding}" />
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment="Center">
                                    <CheckBox
                                        IsChecked="{Binding Selected,UpdateSourceTrigger=PropertyChanged}">
                                    </CheckBox>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.Header>
                            <Border Background="Transparent">
                                <CheckBox IsChecked="{Binding Data.IsAllItemsSelected, UpdateSourceTrigger=PropertyChanged, Source={StaticResource DataContextProxy}}" />
                            </Border>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style
                                TargetType="{x:Type DataGridColumnHeader}"
                                BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                    </DataGridTemplateColumn>
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding SSoChungTu}"
                        ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                        Header="Số chứng từ" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding TenDonViIdDonVi}"
                        ElementStyle="{StaticResource DataGridTextColumnStyle}"
                        Header="Tên đơn vị" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding DNgayChungTu, Converter={StaticResource DateTimeToStringConverter}}"
                        ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                        Header="Ngày chứng từ" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding SLoaiNguonNganSach}"
                        ElementStyle="{StaticResource DataGridTextColumnStyle}"
                        Header="Loại nguồn ngân sách" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding SMoTa}"
                        ElementStyle="{StaticResource DataGridTextColumnStyle}"
                        Width="*"
                        Header="Mô tả" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding FTongTuChi,Converter={ StaticResource NumberToStringEmptyConverter}, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnRightStyle}"
                        Header="{Binding Data.ColName1, Source={StaticResource DataContextProxy}}" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding FTongMuaHangCapHienVat,Converter={ StaticResource NumberToStringEmptyConverter}, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnRightStyle}"
                        Header="{Binding Data.ColName2, Source={StaticResource DataContextProxy}}" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding FTongPhanCap,Converter={ StaticResource NumberToStringEmptyConverter}, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnRightStyle}"
                        Header="{Binding Data.ColName3, Source={StaticResource DataContextProxy}}" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding TongSoNhuCau3Y,Converter={ StaticResource NumberToStringEmptyConverter}, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnRightStyle}"
                        Header="{Binding Data.ColName4, Source={StaticResource DataContextProxy}}" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding SNguoiTao}"
                        ElementStyle="{StaticResource DataGridTextColumnStyle}"
                        Width="*"
                        Header="Người tạo" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding BDaTongHopString}"
                        ElementStyle="{StaticResource DataGridTextColumnStyle}"
                        Visibility="{Binding Data.IsQuanLyDonViCha, Source={StaticResource DataContextProxy}, Converter={StaticResource InvertBooleanToVisibilityConverter}}"
                        Header="Trạng thái" />
                    <DataGridTemplateColumn Header="Khóa" MaxWidth="70" Width="70" MinWidth="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ContentControl x:Name="content" HorizontalAlignment="Center"/>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding BKhoa}" Value="True">
                                        <Setter TargetName="content" Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <materialDesign:PackIcon Kind="Lock" />
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </component:ExpandedDataGrid>
            <component:ExpandedDataGrid
                x:Name="DgDemandSummaryIndex"
                Visibility="{Binding IsChecked, ElementName=RbDemandSummaryVoucherIndex, Converter={StaticResource BooleanToVisibilityConverter}}"
                VerticalAlignment="Top"
                AutoGenerateColumns="False"
                BorderThickness="1"
                CanUserAddRows="False"
                CanUserResizeColumns="True"
                FrozenColumnCount="3"
                HorizontalScrollBarVisibility="Auto"
                IsReadOnly="True"
                GridLinesVisibility="All"
                ColumnInfo="{Binding Columns}"
                ElementFrozenColumn="{Binding ElementName=cbFrozenColumn, Path=., Mode=TwoWay}"
                ElementDynamicColumn="{Binding ElementName=pbDynamicColumn, Path=., Mode=TwoWay}"
                Style="{StaticResource MaterialDesignDataGrid}"
                RowStyle="{StaticResource DataGridRowIndexExpand}"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedNsSktChungTuModel}"
                extensions:DataGridBehavior.LastColumnFill="True"
                extensions:SelectionChangedBehaviour.Command="{Binding SelectionChangedCommand}">
                <DataGrid.Resources>
                    <helper:BindingProxy
                        x:Key="DataContextProxy"
                        Data="{Binding}" />
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn 
                        IsReadOnly="False"
                        Binding="{Binding Selected, UpdateSourceTrigger=PropertyChanged}" 
                        EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}">
                        <DataGridCheckBoxColumn.Header>
                            <Border Background="Transparent">
                                <CheckBox IsChecked="{Binding Data.IsAllItemSummariesSelected, Source={StaticResource DataContextProxy}}" />
                            </Border>
                        </DataGridCheckBoxColumn.Header>
                        <DataGridCheckBoxColumn.HeaderStyle>
                            <Style
                                TargetType="{x:Type DataGridColumnHeader}"
                                BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGridCheckBoxColumn.HeaderStyle>
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChildSummary}" Value="True">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>
                    <DataGridTemplateColumn Header="Số chứng từ">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <ToggleButton
                                        Visibility="{Binding IsChildSummary, Converter={StaticResource InvertBooleanToVisibilityHiddenConverter}}"
                                        Template="{StaticResource SimpleExpanderButtonTemp}"
                                        IsChecked="{Binding IsCollapse, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBlock Text="{Binding SSoChungTu}"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding TenDonViIdDonVi}"
                        ElementStyle="{StaticResource DataGridTextColumnStyle}"
                        Width="Auto"
                        Header="Tên đơn vị" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding ILoaiChungTu, Converter={StaticResource NsbdNumberToStringConverter}}"
                        ElementStyle="{StaticResource DataGridTextColumnStyle}"
                        Header="Loại chứng từ" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding SLoaiNguonNganSach}"
                        ElementStyle="{StaticResource DataGridTextColumnStyle}"
                        Header="Loại nguồn ngân sách" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding DNgayChungTu, Converter={StaticResource DateTimeToStringConverter}}"
                        ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                        Header="Ngày chứng từ" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding SMoTa}"
                        ElementStyle="{StaticResource DataGridTextColumnStyle}"
                        Header="Mô tả" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding FTongTuChi,Converter={ StaticResource NumberToStringEmptyConverter}, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnRightStyle}"
                        Header="{Binding Data.ColName1, Source={StaticResource DataContextProxy}}" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding FTongMuaHangCapHienVat,Converter={ StaticResource NumberToStringEmptyConverter}, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnRightStyle}"
                        Header="{Binding Data.ColName2, Source={StaticResource DataContextProxy}}" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding FTongPhanCap,Converter={ StaticResource NumberToStringEmptyConverter}, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnRightStyle}"
                        Header="{Binding Data.ColName3, Source={StaticResource DataContextProxy}}" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding TongSoNhuCau3Y,Converter={ StaticResource NumberToStringEmptyConverter}, StringFormat={}{0:N0}}"
                        ElementStyle="{StaticResource DataGridTextColumnRightStyle}"
                        Header="{Binding Data.ColName4, Source={StaticResource DataContextProxy}}" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding SNguoiTao}"
                        ElementStyle="{StaticResource DataGridTextColumnStyle}"
                        Header="Người tạo" />
                    <materialDesign:DataGridTextColumn
                        Binding="{Binding SDssoChungTuTongHop}"
                        ElementStyle="{StaticResource DataGridTextColumnStyle}"
                        Width="*"
                        Header="Tổng hợp chứng từ" />
                    <DataGridTemplateColumn
                        x:Name="TrangThaiGui"
                        Header="Trạng thái gửi"
                        Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel
                                    HorizontalAlignment="Center">
                                    <materialDesign:PackIcon
                                        Kind="{Binding TypeIcon}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Khóa" MaxWidth="70" Width="70" MinWidth="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ContentControl x:Name="content" HorizontalAlignment="Center" />
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding BKhoa}" Value="True">
                                        <Setter TargetName="content" Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <materialDesign:PackIcon Kind="Lock" />
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </component:ExpandedDataGrid>
        </Grid>
        <component:ProgressDialog
            Grid.Row="2"
            Margin="-200 -200 0 0" />
    </Grid>
</UserControl>