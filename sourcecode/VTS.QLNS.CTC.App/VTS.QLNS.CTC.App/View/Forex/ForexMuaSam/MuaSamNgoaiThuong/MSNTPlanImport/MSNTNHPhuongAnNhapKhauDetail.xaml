<Window x:Class="VTS.QLNS.CTC.App.View.Forex.ForexMuaSam.MuaSamNgoaiThuong.MSNTPlanImport.MSNTNHPhuongAnNhapKhauDetail"
        x:Name="NHPhuongAnNhapKhauDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:localEnum="clr-namespace:VTS.QLNS.CTC.Utility.Enum;assembly=VTS.QLNS.CTC.Utility"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:ext="clr-namespace:VTS.QLNS.CTC.App.Extensions"
        xmlns:converters="clr-namespace:VTS.QLNS.CTC.App.Converters"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:component="clr-namespace:VTS.QLNS.CTC.App.Component"
        xmlns:helper="clr-namespace:VTS.QLNS.CTC.App.Helper"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Style="{StaticResource MaterialDesignWindow}"
        Title="{Binding Title}"
        ext:CloseWindowBehaviour.Command="{Binding ClosingCommand}">
    <materialDesign:DialogHost
        Identifier="NHPhuongAnNhapKhauItemDialog"
        DialogTheme="Inherit">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <DockPanel Grid.Row="0">
                <materialDesign:PackIcon Kind="PlaylistPlus" Style="{StaticResource DialogScreenIconStyle}"/>
                <!--<StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10 0">-->
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock  Text="{Binding Name}" FontWeight="Bold"></TextBlock>
                        <TextBlock Text="{Binding Description}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontWeight="SemiBold" Text="Số PANK: " />
                        <TextBlock FontWeight="SemiBold" Text="{Binding SoPANK}" />
                        <TextBlock FontWeight="SemiBold" Text=" - Tên gói: "/>
                        <TextBlock FontWeight="SemiBold" Text="{Binding Model.STenGoiThau}"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>

            <ScrollViewer Margin="0 8" Grid.Row="1" CanContentScroll="True">
                <Grid Margin="0 8" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="0*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--Thong tin nguon von-->
                    <StackPanel Grid.Row="0" Grid.Column="1">
                        <!--<StackPanel Orientation="Horizontal">
                            <TextBlock FontWeight="SemiBold" Text="Số PANK: " />
                            <TextBlock FontWeight="SemiBold" Text="{Binding SoPANK}" />
                            <TextBlock FontWeight="SemiBold" Text=" - Tên gói: "/>
                            <TextBlock FontWeight="SemiBold" Text="{Binding Model.STenGoiThau}"/>
                        </StackPanel>-->

                        <TextBlock FontWeight="SemiBold" Margin="0 20 0 0">THÔNG TIN NGUỒN VỐN</TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}">
                                    <Setter Property="Width" Value="150"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button 
                                    Style="{StaticResource SearchBarBtnStyle}" 
                                    Command="{Binding AddDuAnGoiThauNguonVonCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" />
                                    <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Tạo mới (F3)"/>
                                </StackPanel>
                            </Button>
                            <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}"/>
                            <Button 
                                    Style="{StaticResource SearchBarBtnStyle}" 
                                    Command="{Binding DeleteDuAnGoiThauNguonVonCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Delete" />
                                    <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Xóa (F4)"></TextBlock>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <DataGrid
                            x:Name="dgdNHKeHoachLuaChonNhaThauNguonVonDetail"
                            Margin="0 5 0 0"
                            MaxHeight="500px"
                            VerticalAlignment="Top"
                            BorderThickness="1"
                            CanUserResizeColumns="True"
                            CanUserAddRows="False"
                            AutoGenerateColumns="False"
                            ScrollViewer.CanContentScroll="True"
                            GridLinesVisibility="All"
                            HorizontalScrollBarVisibility="Visible"
                            FrozenColumnCount="2"
                            IsReadOnly="{Binding BIsShowDetail}"
                            Style="{StaticResource MaterialDesignDataGrid}"
                            CellStyle="{StaticResource DataGridCellDetail}"
                            RowStyle="{StaticResource DataGridRowDetail}"
                            SelectedItem="{Binding SelectedGoiThauNguonVon}"
                            ItemsSource="{Binding ItemsGoiThauNguonVon}">
                            <DataGrid.Resources>
                                <helper:BindingProxy x:Key="DataContextProxy" Data="{Binding}" />
                            </DataGrid.Resources>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="CellEditEnding">
                                    <i:InvokeCommandAction Command="{Binding CellEditEndingCommand}" PassEventArgsToCommand="True" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn
                                    x:Name="ckChoose"
                                    Binding="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}"
                                    EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}"
                                    IsReadOnly="{Binding IsReadOnly}">
                                    <DataGridCheckBoxColumn.Header>
                                        <Border Background="Transparent">
                                            <CheckBox IsChecked="{Binding Data.SelectAllNguonVon, Source={StaticResource DataContextProxy}}" />
                                        </Border>
                                    </DataGridCheckBoxColumn.Header>
                                    <DataGridCheckBoxColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEdit}" Value="False">
                                                    <Setter Property="IsEnabled" Value="False" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridCheckBoxColumn.CellStyle>
                                </DataGridCheckBoxColumn>

                                <DataGridTemplateColumn x:Name="drTenNguonVon" Header="Tên nguồn Vốn" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <DataTemplate.Resources>
                                                <Style TargetType="ComboBox" BasedOn="{StaticResource {ComponentResourceKey TypeInTargetAssembly={x:Type ComboBox}, ResourceId=MaterialDataGridComboBoxColumnEditingStyle}}" ></Style>
                                            </DataTemplate.Resources>
                                            <StackPanel >
                                                <ComboBox
                                                    DisplayMemberPath="STen"
                                                    SelectedValuePath="IIdMaNguonNganSach"
                                                    SelectedValue="{Binding IIdNguonVonId, UpdateSourceTrigger=LostFocus}"
                                                    ItemsSource="{Binding Data.ItemsNguonVon, Source={StaticResource DataContextProxy}}">
                                                    <ComboBox.ItemContainerStyle>
                                                        <Style TargetType="ComboBoxItem" BasedOn="{StaticResource MaterialDesignComboBoxItemStyle}">
                                                            <Setter Property="IsEnabled" Value="{Binding IsEnabled}" />
                                                        </Style>
                                                    </ComboBox.ItemContainerStyle>
                                                </ComboBox>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <component:DataGridTextColumn  
                                    x:Name="fTienGoiThauUsd"
                                    Header="USD"
                                    MinWidth="100"
                                    Width="*"
                                    IsReadOnly="True"
                                    StringFormat="{}{0:N0}"
                                    Visibility="{Binding Data.IsEnableSoCuChuongTrinh, Converter={StaticResource InvertBooleanToVisibilityConverter}, Source={StaticResource DataContextProxy}}"
                                    Binding="{Binding FTienGoiThauUsd, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=LostFocus}"
                                    ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                    EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}">
                                    <DataGridColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Border Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding), Converter={StaticResource HeaderPaddingConverter}}">
                                                    <Canvas Height="{Binding ElementName=HeaderGroup, Path=ActualHeight}">
                                                        <Grid>
                                                            <Grid.Style>
                                                                <Style TargetType="Grid">
                                                                    <Setter Property="Width">
                                                                        <Setter.Value>
                                                                            <MultiBinding Converter="{StaticResource MultipleWidthConverter}">
                                                                                <Binding ElementName="fTienGoiThauUsd" Path="ActualWidth"/>
                                                                                <Binding ElementName="fTienGoiThauVnd" Path="ActualWidth"/>
                                                                                <Binding ElementName="fTienGoiThauEur" Path="ActualWidth"/>
                                                                                <Binding ElementName="fTienGoiThauNgoaiTeKhac" Path="ActualWidth"/>
                                                                            </MultiBinding>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </Grid.Style>
                                                            <TextBlock HorizontalAlignment="Center" Text="GIÁ TRỊ  SỞ CỨ PHÊ DUYỆT"/>
                                                        </Grid>
                                                    </Canvas>
                                                </Border>
                                                <Border
                                                Grid.Row="1"
                                                Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding)}"
                                                BorderThickness="0 1 1 0"
                                                BorderBrush="{Binding HorizontalGridLinesBrush, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                    <TextBlock Name="HeaderGroup" Text="{Binding}"/>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridColumn.HeaderTemplate>
                                </component:DataGridTextColumn>

                                <component:DataGridTextColumn  
                                    x:Name="fTienGoiThauVnd"
                                    Header="VND"
                                    MinWidth="100"
                                    Width="*"
                                    IsReadOnly="True"
                                    StringFormat="{}{0:N0}"
                                    Visibility="{Binding Data.IsEnableSoCuChuongTrinh, Converter={StaticResource InvertBooleanToVisibilityConverter}, Source={StaticResource DataContextProxy}}"
                                    Binding="{Binding FTienGoiThauVnd, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=LostFocus}"
                                    ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                    EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                                    HeaderTemplate="{StaticResource CenterHeader}"/>

                                <component:DataGridTextColumn  
                                    x:Name="fTienGoiThauEur"
                                    Header="EUR"
                                    MinWidth="100"
                                    Width="*"
                                    IsReadOnly="True"
                                    StringFormat="{}{0:N0}"
                                    Visibility="{Binding Data.IsEnableSoCuChuongTrinh, Converter={StaticResource InvertBooleanToVisibilityConverter}, Source={StaticResource DataContextProxy}}"
                                    Binding="{Binding FTienGoiThauEur, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=LostFocus}"
                                    ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                    EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                                    HeaderTemplate="{StaticResource CenterHeader}"/>

                                <component:DataGridTextColumn  
                                    x:Name="fTienGoiThauNgoaiTeKhac"
                                    Header="Ngoại tệ khác"
                                    MinWidth="100"
                                    Width="*"
                                    IsReadOnly="True"
                                    StringFormat="{}{0:N0}"
                                    Visibility="{Binding Data.IsEnableSoCuChuongTrinh, Converter={StaticResource InvertBooleanToVisibilityConverter}, Source={StaticResource DataContextProxy}}"
                                    Binding="{Binding FTienGoiThauNgoaiTeKhac, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=LostFocus}"
                                    ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                    EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                                    HeaderTemplate="{StaticResource RightHeader}"/>

                                <component:DataGridTextColumn  
                                    x:Name="fGiaTriUsd"
                                    Header="USD"
                                    MinWidth="100"
                                    Width="*"
                                    StringFormat="{}{0:N0}"
                                    Binding="{Binding FGiaTriUsd, StringFormat={}{0:N2}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=PropertyChanged}"
                                    ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                    EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}">
                                    <DataGridColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Border Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding), Converter={StaticResource HeaderPaddingConverter}}">
                                                    <Canvas Height="{Binding ElementName=HeaderGroup, Path=ActualHeight}">
                                                        <Grid>
                                                            <Grid.Style>
                                                                <Style TargetType="Grid">
                                                                    <Setter Property="Width">
                                                                        <Setter.Value>
                                                                            <MultiBinding Converter="{StaticResource MultipleWidthConverter}">
                                                                                <Binding ElementName="fGiaTriUsd" Path="ActualWidth"/>
                                                                                <Binding ElementName="fGiaTriVnd" Path="ActualWidth"/>
                                                                                <Binding ElementName="fGiaTriEur" Path="ActualWidth"/>
                                                                                <Binding ElementName="fGiaTriNgoaiTeKhac" Path="ActualWidth"/>
                                                                            </MultiBinding>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </Grid.Style>
                                                            <TextBlock HorizontalAlignment="Center" Text="GIÁ TRỊ GÓI"/>
                                                        </Grid>
                                                    </Canvas>
                                                </Border>
                                                <Border
                                                Grid.Row="1"
                                                Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding)}"
                                                BorderThickness="0 1 1 0"
                                                BorderBrush="{Binding HorizontalGridLinesBrush, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                    <TextBlock Name="HeaderGroup" Text="{Binding}"/>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridColumn.HeaderTemplate>
                                </component:DataGridTextColumn>

                                <component:DataGridTextColumn  
                                    x:Name="fGiaTriVnd"
                                    Header="VND"
                                    MinWidth="100"
                                    Width="*"
                                    StringFormat="{}{0:N0}"
                                    Binding="{Binding FGiaTriVnd, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=PropertyChanged}"
                                    ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                    EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                                    HeaderTemplate="{StaticResource CenterHeader}"/>

                                <component:DataGridTextColumn  
                                    x:Name="fGiaTriEur"
                                    Header="EUR"
                                    MinWidth="100"
                                    Width="*"
                                    StringFormat="{}{0:N0}"
                                    Binding="{Binding FGiaTriEur, StringFormat={}{0:N2}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=PropertyChanged}"
                                    ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                    EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                                    HeaderTemplate="{StaticResource CenterHeader}"/>

                                <component:DataGridTextColumn  
                                    x:Name="fGiaTriNgoaiTeKhac"
                                    Header="Ngoại tệ khác"
                                    MinWidth="100"
                                    Width="*"
                                    StringFormat="{}{0:N0}"
                                    Binding="{Binding FGiaTriNgoaiTeKhac, StringFormat={}{0:N2}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=PropertyChanged}"
                                    ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                    EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                                    HeaderTemplate="{StaticResource RightHeader}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DockPanel>
                            <Border BorderBrush="{DynamicResource MaterialDesignDivider}"  BorderThickness="1" >
                                <StackPanel Orientation="Horizontal">
                                    <Border >
                                        <Grid Width="{Binding ElementName=ckChoose, Path=ActualWidth}">
                                            <TextBlock TextAlignment="Center" FontWeight="Bold" Padding="0 5 0 0"></TextBlock>
                                        </Grid>
                                    </Border>
                                    <Border >
                                        <Grid Width="{Binding ElementName=drTenNguonVon, Path=ActualWidth}">
                                            <TextBlock TextAlignment="Center" FontWeight="Bold" Padding="0 5 0 0">Tổng nguồn vốn</TextBlock>
                                        </Grid>
                                    </Border>

                                    <!--<Border >
                                        <Grid Width="{Binding ElementName=fTienGoiThauUsd, Path=ActualWidth}">
                                            <TextBlock TextAlignment="Center" FontWeight="Bold" Padding="0 5 0 0"/>
                                        </Grid>
                                    </Border>
                                    <Border >
                                        <Grid Width="{Binding ElementName=fTienGoiThauVnd, Path=ActualWidth}">
                                            <TextBlock TextAlignment="Center" FontWeight="Bold" Padding="0 5 0 0"/>
                                        </Grid>
                                    </Border>
                                    <Border >
                                        <Grid Width="{Binding ElementName=fTienGoiThauEur, Path=ActualWidth}">
                                            <TextBlock TextAlignment="Center" FontWeight="Bold" Padding="0 5 0 0"/>
                                        </Grid>
                                    </Border>
                                    <Border >
                                        <Grid Width="{Binding ElementName=fTienGoiThauNgoaiTeKhac, Path=ActualWidth}">
                                            <TextBlock TextAlignment="Center" FontWeight="Bold" Padding="0 5 0 0"/>
                                        </Grid>
                                    </Border>-->
                                    <Border >
                                        <TextBlock Width="{Binding ElementName=fGiaTriUsd, Path=ActualWidth}" Height="30" FontWeight="Bold" Padding="5 5 15 5" TextAlignment="Right" 
                                            Text="{Binding TongTienGoiThauNguonVon.FGiaTriUsd, StringFormat={}{0:N2}}">
                                        </TextBlock>
                                    </Border>
                                    <Border >
                                        <TextBlock Width="{Binding ElementName=fGiaTriVnd, Path=ActualWidth}" Height="30" FontWeight="Bold" Padding="5 5 15 5" TextAlignment="Right" 
                                            Text="{Binding TongTienGoiThauNguonVon.FGiaTriVnd, StringFormat={}{0:N0}}">
                                        </TextBlock>
                                    </Border>
                                    <Border >
                                        <TextBlock Width="{Binding ElementName=fGiaTriEur, Path=ActualWidth}" Height="30" FontWeight="Bold" Padding="5 5 15 5" TextAlignment="Right" 
                                            Text="{Binding TongTienGoiThauNguonVon.FGiaTriEur, StringFormat={}{0:N2}}">
                                        </TextBlock>
                                    </Border>
                                    <Border >
                                        <TextBlock Width="{Binding ElementName=fGiaTriNgoaiTeKhac, Path=ActualWidth}" Height="30" FontWeight="Bold" Padding="5 5 15 5" TextAlignment="Right" 
                                            Text="{Binding TongTienGoiThauNguonVon.FGiaTriNgoaiTeKhac, StringFormat={}{0:N2}}">
                                        </TextBlock>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DockPanel>

                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1">
                        <TextBlock Margin="0 30 0 0" FontWeight="SemiBold">THÔNG TIN CHI PHÍ</TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}">
                                    <Setter Property="Width" Value="150"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button 
                                    IsEnabled="{Binding IsSelectedNguonVon}" 
                                    Style="{StaticResource SearchBarBtnStyle}" 
                                    Command="{Binding AddChiPhiCommand}"
                                    CommandParameter="{StaticResource TrueValue}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" />
                                    <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Tạo mới (F3)"/>
                                </StackPanel>
                            </Button>
                            <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}"/>
                            <Button 
                                IsEnabled="{Binding IsSelectedNguonVon}" 
                                Style="{StaticResource SearchBarBtnStyle}"
                                Command="{Binding AddChiPhiCommand}"
                                CommandParameter="{StaticResource FalseValue}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" />
                                    <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Tạo mới dòng con (Ctrl+F3)"/>
                                </StackPanel>
                            </Button>
                            <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}" />
                            <Button 
                                    Style="{StaticResource SearchBarBtnStyle}" 
                                    Command="{Binding DeleteChiPhiCommand}" 
                                    IsEnabled="{Binding BIsEditable}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Delete" />
                                    <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Xóa (F4)"></TextBlock>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <DataGrid
                            x:Name="dgdNHKeHoachLuaChonNhaThauChiPhiDetail"
                            BeginningEdit="dgdNHKeHoachLuaChonNhaThauChiPhiDetail_BeginningEdit"
                            MaxHeight="500px"
                            Margin="0 5 0 0"
                            VerticalAlignment="Top"
                            BorderThickness="1"
                            CanUserResizeColumns="True"
                            FrozenColumnCount="3"
                            CanUserAddRows="False"
                            AutoGenerateColumns="False"
                            ScrollViewer.CanContentScroll="True"
                            GridLinesVisibility="All"
                            HorizontalScrollBarVisibility="Visible"
                            IsReadOnly="{Binding BIsShowDetail}"
                            Style="{StaticResource MaterialDesignDataGrid}"
                            CellStyle="{StaticResource DataGridCellDetail}"
                            RowStyle="{StaticResource DataGridRowDetail}"
                            SelectedItem="{Binding SelectedChiPhi}"
                            ItemsSource="{Binding ItemsChiPhi}">
                            <DataGrid.Resources>
                                <helper:BindingProxy x:Key="DataContextProxy" Data="{Binding}" />
                            </DataGrid.Resources>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="CellEditEnding">
                                    <i:InvokeCommandAction Command="{Binding CellEditEndingCommand}" PassEventArgsToCommand="True" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <DataGrid.Columns>

                                <DataGridTextColumn
                                    x:Name="sMaChiPhi"
                                    Header="STT"
                                    Width="80"
                                    Binding="{Binding SMaChiPhi}"
                                    IsReadOnly="True"
                                    ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                    EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"/>

                                <DataGridTextColumn
                                    x:Name="sTenChiPhi"
                                    Header="Tên chi phí"
                                    MinWidth="180"
                                    Binding="{Binding STenChiPhi}"
                                    ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                    EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"/>

                                <DataGridTextColumn
                                    x:Name="sTenNguonVon"
                                    Header="Tên nguồn vốn"
                                    MinWidth="200"
                                    Binding="{Binding STenNguonVon}"
                                    ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                    EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"/>

                                <component:DataGridTextColumn  
                                    x:Name="fGiaChiPhiUSD"
                                    Header="USD"
                                    MinWidth="120"
                                    Width="*"
                                    IsReadOnly="True"
                                    StringFormat="{}{0:N0}"
                                    Visibility="{Binding Data.IsEnableSoCuChuongTrinh, Converter={StaticResource InvertBooleanToVisibilityConverter}, Source={StaticResource DataContextProxy}}"
                                    Binding="{Binding FTienGoiThauUsd, StringFormat={}{0:N2}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=LostFocus}"
                                    ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                    EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}">
                                    <DataGridColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Border Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding), Converter={StaticResource HeaderPaddingConverter}}">
                                                    <Canvas Height="{Binding ElementName=HeaderGroup, Path=ActualHeight}">
                                                        <Grid>
                                                            <Grid.Style>
                                                                <Style TargetType="Grid">
                                                                    <Setter Property="Width">
                                                                        <Setter.Value>
                                                                            <MultiBinding Converter="{StaticResource MultipleWidthConverter}">
                                                                                <Binding ElementName="fGiaChiPhiUSD" Path="ActualWidth"/>
                                                                                <Binding ElementName="fGiaChiPhiVND" Path="ActualWidth"/>
                                                                                <Binding ElementName="fGiaChiPhiEUR" Path="ActualWidth"/>
                                                                                <Binding ElementName="fGiaChiPhiNgoaiTeKhac" Path="ActualWidth"/>
                                                                            </MultiBinding>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </Grid.Style>
                                                            <TextBlock HorizontalAlignment="Center" Text="GIÁ TRỊ SỞ CỨ PHÊ DUYỆT"/>
                                                        </Grid>
                                                    </Canvas>
                                                </Border>
                                                <Border
                                                    Grid.Row="1"
                                                    Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding)}"
