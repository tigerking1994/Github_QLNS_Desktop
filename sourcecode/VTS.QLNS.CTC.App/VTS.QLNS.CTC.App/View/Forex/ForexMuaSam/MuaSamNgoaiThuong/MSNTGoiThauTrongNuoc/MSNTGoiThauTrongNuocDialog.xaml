                            IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"
                            SelectedItem="{Binding SelectedTiGia, UpdateSourceTrigger=PropertyChanged}"
                            ItemsSource="{Binding ItemsTiGia}" />

                    <Grid
                            Visibility="{Binding IsVisibleTiGiaNhap, Converter={StaticResource BooleanToVisibilityConverter}}"
                            IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"
                            Grid.Row="7"
                            Grid.Column="3"
                            Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" Text="1 USD = " VerticalAlignment="Bottom" IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"/>
                        <TextBox
                                Grid.Column="1"
                                PreviewTextInput="NumberValidationTextBox"
                                TextAlignment="Right"
                                IsReadOnly="{Binding IsDetail}"
                                IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"
                                Text="{Binding FTiGiaNhap, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}, TargetNullValue={x:Static sys:String.Empty}, UpdateSourceTrigger=LostFocus}"/>
                        <TextBlock Grid.Column="2" Text=" VND" VerticalAlignment="Bottom" IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"/>
                    </Grid>
                    <TextBox 
                        Grid.Row="7"
                        Grid.Column="0"
                        x:Name="txtGoiThau"
                       materialDesign:HintAssist.Hint="Tên gói thầu"
                        IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"
                       Text="{Binding Model.STenGoiThau, UpdateSourceTrigger=PropertyChanged}"
                        IsReadOnly="False"/>
                    <Grid
                        Grid.Row="7"
                        Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBox 
                        Grid.Row="0"
                        Grid.Column="0"
                        IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"
                        materialDesign:HintAssist.Hint="Giá trúng thầu(VND)"
                        Text="{Binding Model.FGiaGoiThauVnd, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=LostFocus}"
                        IsReadOnly="True"/>
                        <TextBox 
                        Grid.Row="0"
                        Grid.Column="1"
                        IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"
                        materialDesign:HintAssist.Hint="Giá trúng thầu(USD)"
                        Text="{Binding Model.FGiaGoiThauUsd, StringFormat={}{0:N2}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=LostFocus}"
                        IsReadOnly="True"/>
                    </Grid>


