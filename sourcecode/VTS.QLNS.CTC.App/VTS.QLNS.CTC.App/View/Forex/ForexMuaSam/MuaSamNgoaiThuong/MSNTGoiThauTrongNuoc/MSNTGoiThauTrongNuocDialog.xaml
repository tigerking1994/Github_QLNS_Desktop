                            <TextBlock Margin="0 20 0 0" FontWeight="SemiBold" Text="THÔNG TIN NHÀ THẦU HỢP ĐỒNG"></TextBlock>
                            <Border Margin="0 8 0 0">
                                <DataGrid
                                    x:Name="dgdDataNguonVonDetail"
                                    Margin="0 5 0 0"
                                    VerticalAlignment="Top"
                                    BorderThickness="1"
                                    CanUserResizeColumns="True"
                                    CanUserAddRows="False"
                                    AutoGenerateColumns="False"
                                    GridLinesVisibility="All"
                                    HorizontalScrollBarVisibility="Auto"
                                    Style="{StaticResource MaterialDesignDataGrid}"
                                    CellStyle="{StaticResource DataGridCellDetail}"
                                    RowStyle="{StaticResource DataGridRowDetail}"
                                    SelectedItem="{Binding SelectedThongTinNhaThauHopDong}"
                                    ItemsSource="{Binding ItemsThongTinNhaThauHopDong}">
                                    <DataGrid.Resources>
                                        <Style TargetType="ComboBox" BasedOn="{StaticResource {ComponentResourceKey TypeInTargetAssembly={x:Type ComboBox}, ResourceId=MaterialDataGridComboBoxColumnEditingStyle}}" ></Style>
                                    </DataGrid.Resources>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Header="Số Hợp đồng"
                                            Binding="{Binding SSoHopDong, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"
                                            IsReadOnly="True"/>
                                        <DataGridTextColumn
                                            Header="Ngày hợp đồng"
                                            Binding="{Binding DNgayHopDongString}"
                                            ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"
                                            IsReadOnly="True"/>
                                        <DataGridTextColumn
                                            Header="Nhà thầu"
                                            Binding="{Binding STenNhaThau, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"
                                            IsReadOnly="True"/>
                                        <DataGridTextColumn
                                            Header="Loại hợp đồng"
                                            Binding="{Binding STenLoaiHopDong, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"
                                            IsReadOnly="True"/>
                                        <component:DataGridTextColumn
                                            x:Name="USD"
                                            Header="USD"
                                            StringFormat="{}{0:N0}"
                                            Binding="{Binding FGiaTriUSD, UpdateSourceTrigger=LostFocus, StringFormat={}{0:N2}, Converter={StaticResource NumberToStringEmptyConverter}}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"
                                            IsReadOnly="True"/>

                                        <component:DataGridTextColumn
                                            x:Name="VND"
                                            Header="VND"
                                            MinWidth="100"
                                            StringFormat="{}{0:N0}"
                                            Binding="{Binding FGiaTriVND, UpdateSourceTrigger=LostFocus, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"
                                            IsReadOnly="True"/>
                                        <!--<component:DataGridTextColumn
                                            x:Name="EUR"
                                            Header="EUR"
                                            StringFormat="{}{0:N0}"
                                            Binding="{Binding FGiaTriEUR, UpdateSourceTrigger=LostFocus, StringFormat={}{0:N2}, Converter={StaticResource NumberToStringEmptyConverter}}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"
                                            IsReadOnly="True"/>
                                        <component:DataGridTextColumn
                                            x:Name="NgoaiTeKhac"
                                            Header="Ngoại tệ khác"
                                            StringFormat="{}{0:N0}"
                                            Binding="{Binding FGiaTriNgoaiTeKhac, UpdateSourceTrigger=LostFocus, StringFormat={}{0:N2}, Converter={StaticResource NumberToStringEmptyConverter}}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"
                                            IsReadOnly="True"/>-->

                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <StackPanel Grid.Row="2">
                <Separator Background="{DynamicResource MaterialDesignDivider}"/>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Right">

                    <Button 
                      Style="{StaticResource MaterialDesignRaisedButton}"
                      Command="{Binding ShowGoiThauCommand}">Chi tiết gói thầu</Button>
                    <Button 
                        IsDefault="True"
                        Margin="5 0 0 0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"
                        CommandParameter="{Binding ElementName=NHGoiThauTrongNuocDialogView}"

                        Visibility="{Binding Save}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}">Lưu dữ liệu</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button
                        IsCancel="True"
                        Margin="5 0 0 0"
                        Style="{StaticResource MaterialDesignOutlinedButton}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CloseOutline" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}">Đóng</TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </materialDesign:DialogHost>
</Window>
