<Window x:Class="VTS.QLNS.CTC.App.View.Forex.ForexMuaSam.MuaSamNgoaiThuong.MSNTGoiThauTrongNuoc.MSNTGoiThauTrongNuocDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        x:Name="NHGoiThauTrongNuocDialogView"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ext="clr-namespace:VTS.QLNS.CTC.App.Extensions"
        xmlns:helper="clr-namespace:VTS.QLNS.CTC.App.Helper"
        xmlns:localEnum="clr-namespace:VTS.QLNS.CTC.Utility.Enum;assembly=VTS.QLNS.CTC.Utility"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:component="clr-namespace:VTS.QLNS.CTC.App.Component"
        xmlns:custom="clr-namespace:VTS.QLNS.CTC.Custom;assembly=VTS.QLNS.CTC.Custom"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        Style="{StaticResource MaterialDesignWindow}" 
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Icon="/favicon.ico"
        Title="{Binding Title}">
    <materialDesign:DialogHost
        Identifier="GoiThauDialog"
        DialogTheme="Inherit">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <DockPanel>
                    <materialDesign:PackIcon Kind="PlaylistPlus" Style="{StaticResource DialogScreenIconStyle}"/>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10 0">
                        <TextBlock Text="{Binding Title}" FontWeight="Bold"></TextBlock>
                        <TextBlock Text="{Binding Description}"></TextBlock>
                    </StackPanel>
                </DockPanel>
            </StackPanel>

            <ScrollViewer
                Grid.Row="1"
                Margin="-4 0"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto">
                <Grid IsEnabled="{Binding IsDetail, Converter={StaticResource InvertBooleanConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.Resources>
                        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
                            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                            <Setter Property="Margin" Value="4 2 4 2" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignFloatingHintDatePicker}">
                            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                            <Setter Property="Margin" Value="4 2 4 2" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="custom:AutoCompleteComboBox" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                            <Setter Property="Margin" Value="4 2 4 2" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                            <Setter Property="Margin" Value="4 2 4 2" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </Grid.Resources>

                    <TextBlock
                        Grid.Row="0"
                        Grid.ColumnSpan="3"
                        Margin="4 5 4 0"
                        FontWeight="SemiBold"
                        Text="THÔNG TIN CĂN CỨ"/>

                    <custom:AutoCompleteComboBox
                                Grid.Row="1"
                                IsEditable="True"
                                IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"
                                DisplayMemberPath="TenDonViDisplay"
                                TextSearch.TextPath="TenDonViDisplay"
                                materialDesign:HintAssist.Hint="Đơn vị quản lý (*)"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                SelectedItem="{Binding SelectedDonVi, UpdateSourceTrigger=PropertyChanged }"
                                ItemsSource="{Binding ItemsDonVi}"/>
                    <custom:AutoCompleteComboBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Grid.ColumnSpan="1"
                                Visibility="{Binding BIsDuToan, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsEditable="True"
                                SelectedValuePath="ID"
                                DisplayMemberPath="SSoQuyetDinh"
                                TextSearch.TextPath="SSoQuyetDinh"
                                IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"
                                materialDesign:HintAssist.Hint="Số HSTKKT TDT (*)"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                SelectedItem="{Binding SelectedDuToan }"
                                ItemsSource="{Binding ItemsDuToan}" />
                    <custom:AutoCompleteComboBox
                                Grid.Row="1"
                                Grid.Column="2"
                                Grid.ColumnSpan="2"
                                IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"
                                Visibility="{Binding IsShowDuAn, Converter={StaticResource InvertBooleanToVisibilityConverter}}"
                                materialDesign:HintAssist.Hint="Chương trình (*)"
                                DisplayMemberPath="STenNhiemVuChi"
                                TextSearch.TextPath="STenNhiemVuChi"
                                SelectedItem="{Binding SelectedChuongTrinh}"
                                ItemsSource="{Binding ItemsChuongTrinh}"/>

                    <TextBox
                        Grid.Row="2"
                        Grid.Column="0"
                        IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"
                        materialDesign:HintAssist.Hint="Số kế hoạch đặt hàng/lựa chọn nhà thầu"
                        Text="{Binding Model.SSoKeHoachDatHang, Mode = TwoWay, UpdateSourceTrigger = PropertyChanged}"/>
                    <DatePicker
                        Grid.Row="2"
                         Grid.Column="1"
                        IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"
                        Language="vi-VN"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                        materialDesign:HintAssist.Hint="Ngày kế hoạch đặt hàng/lựa chọn nhà thầu"
                        SelectedDate="{Binding Model.DNgayKeHoach}"/>
                    <custom:AutoCompleteComboBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Visibility="{Binding IsShowDuAn, Converter={StaticResource BooleanToVisibilityConverter}}"
                                IsEditable="True"
                                SelectedValuePath="ID"
                                DisplayMemberPath="STenDuAn"
                                TextSearch.TextPath="STenDuAn"
                                IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"
                                materialDesign:HintAssist.Hint="Dự án (*)"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                SelectedItem="{Binding SelectedDuAn }"
                                ItemsSource="{Binding ItemsDuAn}" />
                    <!--<TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        materialDesign:HintAssist.Hint="Dự án"
                        Text="{Binding Model.STenDuAn, Mode = TwoWay, UpdateSourceTrigger = PropertyChanged}"
                        Visibility="{Binding IsShowDuAn, Converter={StaticResource BooleanToVisibilityConverter}}"
                        IsReadOnly="True"/>-->

                    <!--<TextBox
                        Grid.Row="1"
                        Grid.Column="3"
                        materialDesign:HintAssist.Hint="Chủ đầu tư"
                        Text="{Binding Model.STenChuDauTu, Mode = TwoWay, UpdateSourceTrigger = PropertyChanged}"
                        Visibility="{Binding IsShowDuAn, Converter={StaticResource BooleanToVisibilityConverter}}"
                        IsReadOnly="True"/>

                    <TextBox 
                        Grid.Row="1"
                        Grid.Column="3"
                        materialDesign:HintAssist.Hint="Địa điểm thực hiện" 
                        Text="{Binding Model.SDiaDiem, UpdateSourceTrigger=PropertyChanged}" 
                        Visibility="{Binding IsShowDuAn, Converter={StaticResource BooleanToVisibilityConverter}}"
                        IsReadOnly="True"/>-->

                    <TextBox
                        Grid.Row="2"
                        Grid.Column="2"
                        materialDesign:HintAssist.Hint="Tổng mức đầu tư phê duyệt (USD)" 
                        Visibility="{Binding IsShowDuAn, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Text="{Binding FGiaTriUSD,UpdateSourceTrigger=PropertyChanged,StringFormat={}{0:N2}, Converter={StaticResource NumberToStringEmptyConverter}}" IsEnabled="False"/>

                    <TextBox
                        Grid.Row="2"
                        Grid.Column="3"
                        materialDesign:HintAssist.Hint="Tổng mức đầu tư phê duyệt (VND)" 
                        Visibility="{Binding IsShowDuAn, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Text="{Binding FGiaTriVND,UpdateSourceTrigger=PropertyChanged,StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}}" IsEnabled="False"/>

