                                                                                            <Binding ElementName="FGiaTriNgoaiTeKhacQDDTPheDuyet" Path="ActualWidth"/>-->
                                                                                        </MultiBinding>
                                                                                    </Setter.Value>
                                                                                </Setter>
                                                                            </Style>
                                                                        </Grid.Style>
                                                                        <TextBlock HorizontalAlignment="Center" Text="GIÁ TRỊ QUYẾT ĐỊNH ĐẦU TƯ  PHÊ DUYỆT"/>
