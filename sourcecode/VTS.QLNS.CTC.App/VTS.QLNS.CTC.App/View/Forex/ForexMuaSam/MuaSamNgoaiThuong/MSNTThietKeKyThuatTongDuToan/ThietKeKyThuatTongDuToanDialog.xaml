                                                Visibility="{Binding Data.IsEnableQuyetDinhDauTuPheDuyet, Converter={StaticResource InvertBooleanToVisibilityConverter}, Source={StaticResource DataContextProxy}}"
                                                x:Name="FGiaTriVNDQDDTPheDuyet"
