        <KeyBinding Key="F3" Command="{Binding AddDetailCommand}" />
        <KeyBinding Key="F4" Command="{Binding DeleteDetailCommand}" CommandParameter="{Binding ElementName=dgdDataChiPhiNguonVonDetail, Path=.}" />
