                                IsEnabled="{Binding IsEditable}"
                                SelectedItem="{Binding SelectedDonVi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ItemsSource="{Binding ItemsDonVi}">
                            </custom:AutoCompleteComboBox>
                            <custom:AutoCompleteComboBox
                                Grid.Row="1"
                                Grid.Column="1"
                                DisplayMemberPath="STenLoaiDuToan"
                                TextSearch.TextPath="STenLoaiDuToan"
                                materialDesign:HintAssist.Hint="Loại dự toán (*)"
                                IsEnabled="{Binding IsEditable}"
                                SelectedItem="{Binding SelectedLoaiDuToan, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ItemsSource="{Binding ItemsLoaiDuToan}">
                            </custom:AutoCompleteComboBox>

                            <custom:AutoCompleteComboBox
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                DisplayMemberPath="SSoKeHoachBqp"
