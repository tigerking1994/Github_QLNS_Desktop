                                IsEnabled="False" />
                            <TextBox
                                Grid.Row="12"
                                Grid.Column="1"
                                materialDesign:HintAssist.Hint="Tổng mức đầu tư HSTKKT TDT phê duyêt (USD)" 
                                Text="{Binding FGiaTriUsd, StringFormat={}{0:N2}}"
                                IsEnabled="False" />

                            

