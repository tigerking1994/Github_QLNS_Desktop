                                IsEnabled="False" />

                            <TextBox
                                Visibility="{Binding IsShowDuAn, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Grid.Row="5"
                                Grid.Column="1"
                                materialDesign:HintAssist.Hint="Tổng mức đầu tư QĐĐT phê duyệt (VND)" 
