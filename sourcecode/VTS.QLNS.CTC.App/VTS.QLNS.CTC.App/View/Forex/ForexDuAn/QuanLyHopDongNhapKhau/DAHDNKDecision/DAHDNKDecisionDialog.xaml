<Window x:Class="VTS.QLNS.CTC.App.View.Forex.ForexDuAn.QuanLyHopDongNhapKhau.DAHDNKDecision.DAHDNKDecisionDialog"
        x:Name="NHGoiThauTrongNuocDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        xmlns:component="clr-namespace:VTS.QLNS.CTC.App.Component"
        xmlns:ext="clr-namespace:VTS.QLNS.CTC.App.Extensions"
        xmlns:custom="clr-namespace:VTS.QLNS.CTC.Custom;assembly=VTS.QLNS.CTC.Custom"
        xmlns:helper="clr-namespace:VTS.QLNS.CTC.App.Helper"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Style="{StaticResource MaterialDesignWindow}" 
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Icon="/favicon.ico"
        Title="{Binding Title}"
        ext:CloseWindowBehaviour.Command="{Binding ClosingCommand}">
    
    <materialDesign:DialogHost
        Identifier="DecisionDialog"
        DialogTheme="Inherit">
        <Grid>
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <DockPanel>
                        <materialDesign:PackIcon Kind="PlaylistPlus" Style="{StaticResource DialogScreenIconStyle}"/>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10 0">
                            <TextBlock Text="{Binding Title}" FontWeight="Bold"></TextBlock>
                            <TextBlock Text="{Binding Description}"></TextBlock>
                        </StackPanel>
                    </DockPanel>
                    <Separator Background="{DynamicResource MaterialDesignDivider}"/>
                </StackPanel>

                <ScrollViewer
                    Grid.Row="1"
                    Margin="-4 0"
                    x:Name="stack" 
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="125"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.Resources>
                            <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
                                <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                                <Setter Property="Margin" Value="4 2 4 2" />
                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                            <Style TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignFloatingHintDatePicker}">
                                <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                                <Setter Property="Margin" Value="4 2 4 2" />
                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                            <Style TargetType="custom:AutoCompleteComboBox" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}">
                                <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                                <Setter Property="Margin" Value="4 2 4 2" />
                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </Grid.Resources>
                        <StackPanel Grid.Row="0" Margin="4 0 4 0" IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}">
                            <TextBlock FontWeight="SemiBold" Margin="0 20 0 0">THÔNG TIN CĂN CỨ</TextBlock>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <custom:AutoCompleteComboBox
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    IsEditable="True"
                                    materialDesign:HintAssist.Hint="Loại quyết định"
                                    DisplayMemberPath="DisplayItem"
                                    TextSearch.TextPath="DisplayItem"
                                    SelectedItem="{Binding SelectedDecisionType, UpdateSourceTrigger=PropertyChanged}"
                                    ItemsSource="{Binding ItemsDecisionType}"
                                    IsEnabled="{Binding IsEnableLoaiQD}"/>

                                <custom:AutoCompleteComboBox
                                    Grid.Column="1"
                                    Grid.ColumnSpan="1"
                                    IsEditable="True"
                                    DisplayMemberPath="TenKeHoach"
                                    TextSearch.TextPath="TenKeHoach"
                                    SelectedValuePath="Id"
                                    materialDesign:HintAssist.Hint="Số kế hoạch tổng thể BQP (*)"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                    SelectedItem="{Binding SelectedKeHoachTongThe, UpdateSourceTrigger=PropertyChanged }"
                                    ItemsSource="{Binding ItemsKeHoachTongThe}"/>

                                <custom:AutoCompleteComboBox
                                    Grid.Column="2"
                                    IsEditable="True"
                                    DisplayMemberPath="TenDonViDisplay"
                                    TextSearch.TextPath="TenDonViDisplay"
                                    materialDesign:HintAssist.Hint="Đơn vị quản lý (*)"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                    IsEnabled="{Binding BIsEnable}"
                                    SelectedItem="{Binding SelectedDonVi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    ItemsSource="{Binding ItemsDonVi}">
                                </custom:AutoCompleteComboBox>

                                <custom:AutoCompleteComboBox
                                    Grid.Column="3"
                                    IsEditable="True"
                                    DisplayMemberPath="STenNhiemVuChi"
                                    TextSearch.TextPath="STenNhiemVuChi"
                                    SelectedValuePath="ValueItem"
                                    materialDesign:HintAssist.Hint="Tên chương trình (*)"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                    IsEnabled="{Binding BIsEnable}"
                                    SelectedItem="{Binding SelectedChuongTrinh, UpdateSourceTrigger=PropertyChanged }"
                                    ItemsSource="{Binding ItemsChuongTrinh}"/>

                                <custom:AutoCompleteComboBox
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    IsEditable="True"
                                    SelectedValuePath="ValueItem"
                                    DisplayMemberPath="STenDuAn"
                                    TextSearch.TextPath="STenDuAn"
                                    Visibility="{Binding IsViewDuAn, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    materialDesign:HintAssist.Hint="Dự án"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                    IsEnabled="{Binding BIsEnable}"
                                    SelectedItem="{Binding SelectedDuAn }"
                                    ItemsSource="{Binding ItemsDuAn}" />

                                <custom:AutoCompleteComboBox
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    IsEditable="True"
                                    DisplayMemberPath="SSoQuyetDinh"
                                    TextSearch.TextPath="SSoQuyetDinh"
                                    SelectedValuePath="ValueItem"
                                    materialDesign:HintAssist.Hint="Phương án nhập khẩu (*)"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                    IsEnabled="{Binding BIsEnable}"
                                    SelectedItem="{Binding SelectedPhuongAnNhapKhau, UpdateSourceTrigger=PropertyChanged }"
                                    ItemsSource="{Binding ItemsPhuongAnNhapKhau}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="4 0 4 0" IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}">
                            <TextBlock FontWeight="SemiBold" Margin="0 20 0 0">THÔNG TIN PHÊ DUYỆT</TextBlock>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBox
                                    materialDesign:HintAssist.Hint="Số quyết định (*)"
                                    Text="{Binding Model.SSoQuyetDinh, UpdateSourceTrigger=LostFocus}"/>

                                <DatePicker
                                    Language="vi-VN"
                                    Grid.Column="1"
                                    IsEnabled="{Binding BIsEditable}"
                                    materialDesign:HintAssist.Hint="Ngày quyết định "
                                    SelectedDate="{Binding Model.DNgayQuyetDinh, UpdateSourceTrigger=PropertyChanged}"/>

                                <custom:AutoCompleteComboBox
                                    Grid.Column="2"
                                    DisplayMemberPath="SMaTienTeQuyDoi"
                                    TextSearch.TextPath="SMaTienTeQuyDoi"
                                    materialDesign:HintAssist.Hint="Mã ngoại tệ khác"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                    SelectedItem="{Binding SelectedTiGiaChiTietDialog, UpdateSourceTrigger=PropertyChanged}"
                                    ItemsSource="{Binding ItemsTiGiaChiTietDialog}" />
                                <custom:AutoCompleteComboBox
                                    Grid.Column="3"
                                    DisplayMemberPath="STenTiGia"
                                    TextSearch.TextPath="STenTiGia"
                                    materialDesign:HintAssist.Hint="Tỉ giá"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                    SelectedItem="{Binding SelectedTiGiaDialog, UpdateSourceTrigger=PropertyChanged}"
                                    ItemsSource="{Binding ItemsTiGiaDialog}" />

                                <Grid
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0 5 0 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Model.SNgoaiTeGoc, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Bottom"/>
                                    <TextBox
                                    Grid.Column="1"
                                    TextAlignment="Right"
                                    IsReadOnly="{Binding BIsReadOnly}"
                                    Text="{Binding FTiGiaNhap, StringFormat={}{0:N2}, UpdateSourceTrigger=LostFocus,  Converter={StaticResource NumberToStringEmptyConverter}}"/>
                                    <TextBlock Grid.Column="2" Text=" USD" VerticalAlignment="Bottom"/>
                                </Grid>
                                <TextBox
                                    Grid.Row="3"
                                    Grid.ColumnSpan="2"
                                    TextWrapping="Wrap"
                                    AcceptsReturn ="True"
                                    materialDesign:HintAssist.Hint="Mô tả chi tiết"
                                    Text="{Binding Model.SMoTaChiTietQuyetDinh, UpdateSourceTrigger=LostFocus}"/>

                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    IsEnabled="False"
                                    materialDesign:HintAssist.Hint="Giá trị quyết định chi tiết (USD)"
                                    Text="{Binding Model.FGiaTriUsd, StringFormat={}{0:N2}}" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    IsEnabled="False"
                                    materialDesign:HintAssist.Hint="Giá trị quyết định chi tiết (VND)"
                                    Text="{Binding Model.FGiaTriVnd, StringFormat={}{0:N0}}" />

                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    IsEnabled="False"
                                    materialDesign:HintAssist.Hint="Giá trị quyết định chi tiết (Ngoại tệ khác)"
                                    Text="{Binding Model.FGiaTriNgoaiTeKhac, StringFormat={}{0:N2}}" />

                            </Grid>
                        </StackPanel>


                        <StackPanel Grid.Row="2"  Orientation="Vertical">
                            <TextBlock Padding="4 0 4 0" FontWeight="SemiBold" Margin="0 20 0 0">DANH SÁCH GÓI THUỘC PHƯƠNG ÁN NHẬP KHẨU</TextBlock>
                            <DataGrid 
                                    x:Name="dgdDanhSachGoiThau"
                                    Padding="4 0 4 0"
                                    BeginningEdit="dgdDanhSachGoiThau_BeginningEdit"
                                    Margin="0 5 0 0"
                                    VerticalAlignment="Stretch"
                                    BorderThickness="1"
                                    AutoGenerateColumns="False"
                                    CanUserResizeColumns="True"
                                    FrozenColumnCount="3"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    GridLinesVisibility="All"
                                    Width="{Binding ElementName=stack, Path=ActualWidth}"
                                    HorizontalScrollBarVisibility="Visible"
                                    ScrollViewer.CanContentScroll="True"
                                    Style="{StaticResource MaterialDesignDataGrid}"
                                    CellStyle="{StaticResource DataGridCellDetail}"
                                    RowStyle="{StaticResource DataGridRowDetail}"
                                    ItemsSource="{Binding ItemsGoiThau}"
                                    SelectedItem="{Binding SelectedGoiThau}">
                                <DataGrid.Resources>
                                    <helper:BindingProxy
                                            x:Key="DataContextProxy"
                                            Data="{Binding}" />
                                    <Style TargetType="ComboBox" BasedOn="{StaticResource {ComponentResourceKey TypeInTargetAssembly={x:Type ComboBox}, ResourceId=MaterialDataGridComboBoxColumnEditingStyle}}" >
                                    </Style>
                                </DataGrid.Resources>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="CellEditEnding">
                                        <i:InvokeCommandAction Command="{Binding CellEditingCommand}" PassEventArgsToCommand="True" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn
                                            x:Name="ckChoose"
                                            MinWidth="100"
                                            Width="100"
                                            Binding="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}"
                                            EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}"
                                            IsReadOnly="{Binding Data.BIsReadOnly, Source={StaticResource DataContextProxy}}">
                                        <DataGridCheckBoxColumn.Header>
                                            <Border Background="Transparent">
                                                <TextBlock 
                                                        TextAlignment="Center"
                                                        Text="Đưa vào Quyết định chi tiết" 
                                                        TextWrapping="Wrap"/>
                                            </Border>
                                        </DataGridCheckBoxColumn.Header>
                                        <DataGridCheckBoxColumn.CellStyle>
                                            <Style TargetType="DataGridCell">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEdit}" Value="False">
                                                        <Setter Property="IsEnabled" Value="False" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridCheckBoxColumn.CellStyle>
                                    </DataGridCheckBoxColumn>

                                    <DataGridTextColumn
                                            x:Name="txtGoiThau"
                                            MinWidth="350"
                                            Header="Tên gói"
                                            IsReadOnly="True"
                                            Binding="{Binding STenGoiThau, UpdateSourceTrigger=PropertyChanged}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingStyle}"/>

                                    <DataGridTemplateColumn 
                                            MinWidth="300" 
                                            x:Name="cbxHinhThucLuaChon"
                                            Header="Đơn vị ủy thác">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <DataTemplate.Resources>
                                                    <Style TargetType="ComboBox" BasedOn="{StaticResource {ComponentResourceKey TypeInTargetAssembly={x:Type ComboBox}, ResourceId=MaterialDataGridComboBoxColumnEditingStyle}}" ></Style>
                                                </DataTemplate.Resources>
                                                <ComboBox
                                                        DisplayMemberPath="STenNhaThau"
                                                        SelectedValuePath="Id"
                                                        IsEnabled="{Binding Data.BIsEnable, Source={StaticResource DataContextProxy}}"
                                                        SelectedValue="{Binding IIdNhaThauId, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                        ItemsSource="{Binding Data.ItemsDmNhaThau, Source={StaticResource DataContextProxy}}">
                                                </ComboBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTextColumn 
                                            x:Name="txtThoiGianThucHien"
                                            MinWidth="150"
                                            IsReadOnly="True"
                                            Header="Thời gian thực hiện"
                                            Binding="{Binding IThoiGianThucHien, StringFormat={}{0:N0}, UpdateSourceTrigger=PropertyChanged}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"/>

                                    <!--<DataGridTemplateColumn MinWidth="150" x:Name="cbxPhuongThucLuaChon" Header="Thanh toán bằng">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <DataTemplate.Resources>
                                                    <Style TargetType="ComboBox" BasedOn="{StaticResource {ComponentResourceKey TypeInTargetAssembly={x:Type ComboBox}, ResourceId=MaterialDataGridComboBoxColumnEditingStyle}}" ></Style>
                                                </DataTemplate.Resources>
                                                <ComboBox
                                                        DisplayMemberPath="SMaTienTe"
                                                        SelectedValuePath="Id"
                                                        IsEnabled="{Binding Data.BIsEnable, Source={StaticResource DataContextProxy}}"
                                                        SelectedValue="{Binding IIdDonViTienTeId, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                        ItemsSource="{Binding Data.ItemsLoaiTienTe, Source={StaticResource DataContextProxy}}">
                                                </ComboBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>-->

                                    <component:DataGridTextColumn  
                                            x:Name="fGiaGoiThauUSD"
                                            Header="USD"
                                            MinWidth="160"
                                            IsReadOnly="True"
                                            StringFormat="{}{0:N0}"
                                            Binding="{Binding FGiaGoiThauUsd, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                            HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}">
                                        <DataGridColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <Border Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding), Converter={StaticResource HeaderPaddingConverter}}">
                                                        <Canvas Height="{Binding ElementName=HeaderGroup, Path=ActualHeight}">
                                                            <Grid>
                                                                <Grid.Style>
                                                                    <Style TargetType="Grid">
                                                                        <Setter Property="Width">
                                                                            <Setter.Value>
                                                                                <MultiBinding Converter="{StaticResource MultipleWidthConverter}">
                                                                                    <Binding ElementName="fGiaGoiThauUSD" Path="ActualWidth"/>
                                                                                    <Binding ElementName="fGiaGoiThauVND" Path="ActualWidth"/>
                                                                                    <!--<Binding ElementName="fGiaGoiThauNgoaiTeKhac" Path="ActualWidth"/>-->
                                                                                </MultiBinding>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </Grid.Style>
                                                                <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Text="Giá trị gói"/>
                                                            </Grid>
                                                        </Canvas>
                                                    </Border>
                                                    <Border
                                                            Grid.Row="1"
                                                            Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding)}"
                                                            BorderThickness="0 1 1 0"
                                                            BorderBrush="{Binding HorizontalGridLinesBrush, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                        <TextBlock Name="HeaderGroup" TextAlignment="Center" Text="{Binding}"/>
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridColumn.HeaderTemplate>
                                    </component:DataGridTextColumn>

                                    <component:DataGridTextColumn  
                                            x:Name="fGiaGoiThauVND"
                                            Header="VND"
                                            MinWidth="160"
                                            Width="*"
                                            IsReadOnly="True"
                                            StringFormat="{}{0:N0}"
                                            Binding="{Binding FGiaGoiThauVnd, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                            HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                                            HeaderTemplate="{StaticResource RightHeader}"/>

                                    <!--<component:DataGridTextColumn  
                                            x:Name="fGiaGoiThauNgoaiTeKhac"
                                            Header="Ngoại tệ khác"
                                            MinWidth="120"
                                            IsReadOnly="True"
                                            StringFormat="{}{0:N0}"
                                            Binding="{Binding FGiaGoiThauNgoaiTeKhac, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=LostFocus}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                            HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                                            HeaderTemplate="{StaticResource RightHeader}"/>-->

                                    <component:DataGridTextColumn  
                                            x:Name="fGiaQuyetDinhChiTietUsd"
                                            Header="USD"
                                            MinWidth="160"
                                            IsReadOnly="{Binding Data.BIsReadOnly, Source={StaticResource DataContextProxy}}"
                                            StringFormat="{}{0:N0}"
                                            Binding="{Binding FGiaQuyetDinhChiTietUsd, StringFormat={}{0:N2}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=PropertyChanged}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                            HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}">
                                        <DataGridColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <Border Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding), Converter={StaticResource HeaderPaddingConverter}}">
                                                        <Canvas Height="{Binding ElementName=HeaderGroup, Path=ActualHeight}">
                                                            <Grid>
                                                                <Grid.Style>
                                                                    <Style TargetType="Grid">
                                                                        <Setter Property="Width">
                                                                            <Setter.Value>
                                                                                <MultiBinding Converter="{StaticResource MultipleWidthConverter}">
                                                                                    <Binding ElementName="fGiaQuyetDinhChiTietUsd" Path="ActualWidth"/>
                                                                                    <Binding ElementName="fGiaQuyetDinhChiTietVnd" Path="ActualWidth"/>
                                                                                    <Binding ElementName="fGiaQuyetDinhChiTietNgoaiTeKhac" Path="ActualWidth"/>
                                                                                </MultiBinding>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </Grid.Style>
                                                                <TextBlock 
                                                                        TextAlignment="Center"
                                                                        VerticalAlignment="Top"
                                                                        HorizontalAlignment="Center"
                                                                        TextWrapping="WrapWithOverflow"
                                                                        Text="{Binding Data.TextHeader, Source={StaticResource DataContextProxy}}"/>
                                                            </Grid>
                                                        </Canvas>
                                                    </Border>
                                                    <Border
                                                            Grid.Row="1"
                                                            Padding="{Binding RelativeSource={RelativeSource Self}, Path=(wpf:DataGridAssist.ColumnHeaderPadding)}"
                                                            BorderThickness="0 1 1 0"
                                                            BorderBrush="{Binding HorizontalGridLinesBrush, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                                        <TextBlock Name="HeaderGroup" TextAlignment="Center" Text="{Binding}"/>
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridColumn.HeaderTemplate>
                                    </component:DataGridTextColumn>

                                    <component:DataGridTextColumn  
                                            x:Name="fGiaQuyetDinhChiTietVnd"
                                            Header="VND"
                                            MinWidth="160"
                                            Width="*"
                                            StringFormat="{}{0:N0}"
                                            IsReadOnly="{Binding Data.BIsReadOnly, Source={StaticResource DataContextProxy}}"
                                            Binding="{Binding FGiaQuyetDinhChiTietVnd, StringFormat={}{0:N0}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=PropertyChanged}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                            HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                                            HeaderTemplate="{StaticResource CenterHeader}"/>

                                    <component:DataGridTextColumn  
                                            x:Name="fGiaQuyetDinhChiTietNgoaiTeKhac"
                                            Header="Ngoại tệ khác"
                                            MinWidth="160"
                                            StringFormat="{}{0:N0}"
                                            IsReadOnly="{Binding Data.BIsReadOnly, Source={StaticResource DataContextProxy}}"
                                            Binding="{Binding FGiaQuyetDinhChiTietNgoaiTeKhac, StringFormat={}{0:N2}, Converter={StaticResource NumberToStringEmptyConverter}, UpdateSourceTrigger=PropertyChanged}"
                                            ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                                            EditingElementStyle="{StaticResource DataGridTextColumnEditingRightCell}"
                                            HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                                            HeaderTemplate="{StaticResource RightHeader}"/>

                                    <DataGridTemplateColumn Width="*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button 
                                                        IsEnabled="True"
                                                        Style="{StaticResource MaterialDesignFlatButton}" FontSize="12" Height="25"
                                                        Command="{Binding Data.ShowChiTietGoiThauCommand, Source={StaticResource DataContextProxy}}">
                                                        Chi tiết gói thầu
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <StackPanel Grid.Row="2">
                    <Separator Background="{DynamicResource MaterialDesignDivider}"/>
                    <StackPanel Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Right">
                        <Button 
                        Margin="5 0 0 0"
                        IsEnabled="{Binding BIsReadOnly, Converter={StaticResource InvertBooleanConverter}}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding SaveCommand}"
                         CommandParameter="{Binding ElementName=NHGoiThauTrongNuocDialogView}">
                            <StackPanel Orientation="Horizontal">
