                                Grid.Row="3"
                                Grid.Column="0"
                                IsEnabled="False"
                                materialDesign:HintAssist.Hint="Tổng mức đầu tư CTĐT phê duyệt (EUR)"
                                Text="{Binding Model.TotalChuTruongDauTuNguonVon.FGiaTriEur, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}" />
                            <TextBox
                                Grid.Row="3"
                                Grid.Column="1"
                                IsEnabled="False"
                                materialDesign:HintAssist.Hint="Tổng mức đầu tư CTĐT phê duyệt (Ngoại tệ khác)"
                                Text="{Binding Model.TotalChuTruongDauTuNguonVon.FGiaTriNgoaiTeKhac, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}" />-->

                            <TextBlock
                                Grid.Row="4"
                                Grid.ColumnSpan="2"
                                Margin="4 20 4 0"
                                FontWeight="SemiBold"
                                Text="THÔNG TIN PHÊ DUYỆT"/>

                            <TextBox
                                Grid.Row="5"
                                materialDesign:HintAssist.Hint="Số quyết định (*)"
                                Text="{Binding Model.SSoQuyetDinh, UpdateSourceTrigger=LostFocus}" />
