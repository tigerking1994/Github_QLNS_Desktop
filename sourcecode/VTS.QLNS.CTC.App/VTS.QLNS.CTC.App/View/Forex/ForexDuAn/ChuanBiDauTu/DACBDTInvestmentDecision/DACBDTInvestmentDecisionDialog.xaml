<Window x:Class="VTS.QLNS.CTC.App.View.Forex.ForexDuAn.ChuanBiDauTu.DACBDTInvestmentDecision.DACBDTInvestmentDecisionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helper="clr-namespace:VTS.QLNS.CTC.App.Helper"
        xmlns:component="clr-namespace:VTS.QLNS.CTC.App.Component"
        xmlns:ext="clr-namespace:VTS.QLNS.CTC.App.Extensions"
        xmlns:custom="clr-namespace:VTS.QLNS.CTC.Custom;assembly=VTS.QLNS.CTC.Custom"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="{Binding Title}"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        mc:Ignorable="d"
        ext:CloseWindowBehaviour.Command="{Binding ClosingCommand}">
    <Window.InputBindings>
        <KeyBinding Key="F3" Command="{Binding AddQdDauTuHangMucCommand}" />
        <KeyBinding Gesture="Ctrl+F3" Command="{Binding AddQdDauTuHangMucCommand}">
            <KeyBinding.CommandParameter>
                <system:Boolean>False</system:Boolean>
            </KeyBinding.CommandParameter>
        </KeyBinding>
        <KeyBinding Key="F4" Command="{Binding DeleteQdDauTuHangMucCommand}" />
    </Window.InputBindings>
    <materialDesign:DialogHost
        Identifier="ForexInvestmentDecisionDialog"
        DialogTheme="Inherit">
        <Grid>
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel>
                    <DockPanel>
                        <materialDesign:PackIcon Kind="{Binding IconKind}" Style="{StaticResource DialogScreenIconStyle}"/>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10 0">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" ext:TextBlockTransform.CharacterCasing="Upper"></TextBlock>
                            <TextBlock Text="{Binding Description}"></TextBlock>
                        </StackPanel>
                    </DockPanel>
                    <Separator Background="{DynamicResource MaterialDesignDivider}"/>
                </StackPanel>
                <Grid Grid.Row="1" Margin="-4 0 -4 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" MinWidth="250"/>
                        <ColumnDefinition Width="2*" MinWidth="250"/>
                    </Grid.ColumnDefinitions>
                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <Grid IsEnabled="{Binding IsDetail, Converter={StaticResource InvertBooleanConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" MinWidth="250"/>
                                <ColumnDefinition Width="1*" MinWidth="250"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid.Resources>
                                <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
                                    <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                                    <Setter Property="Margin" Value="4 2 4 2" />
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>

                                <Style TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignFloatingHintDatePicker}">
                                    <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                                    <Setter Property="Margin" Value="4 2 4 2" />
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>

                                <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}">
                                    <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                                    <Setter Property="Margin" Value="4 2 4 2" />
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="materialDesign:TextFieldAssist.HasClearButton" Value="True" />
                                </Style>

                                <Style TargetType="custom:AutoCompleteComboBox" BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}">
                                    <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
                                    <Setter Property="Margin" Value="4 2 4 2" />
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </Grid.Resources>

                            <TextBlock
                                Grid.ColumnSpan="2"
                                Margin="4 5 4 0"
                                FontWeight="SemiBold"
                                Text="THÔNG TIN CĂN CỨ"/>

                            <custom:AutoCompleteComboBox
                                Grid.Row="1"
                                DisplayMemberPath="TenDonViDisplay"
                                TextSearch.TextPath="TenDonViDisplay"
                                materialDesign:HintAssist.Hint="Đơn vị quản lý (*)"
                                IsEnabled="{Binding IsEditable}"
                                SelectedItem="{Binding SelectedDonVi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ItemsSource="{Binding ItemsDonVi}">
                            </custom:AutoCompleteComboBox>
                            <custom:AutoCompleteComboBox
                                Grid.Row="1"
                                Grid.Column="1"
                                DisplayMemberPath="TenDuAnDisplay"
                                TextSearch.TextPath="TenDuAnDisplay"
                                materialDesign:HintAssist.Hint="Dự án (*)"
                                IsEnabled="{Binding IsEditable}"
                                SelectedItem="{Binding SelectedDuAn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ItemsSource="{Binding ItemsDuAn}">
                            </custom:AutoCompleteComboBox>

                            <TextBox
                                Grid.Row="2"
                                Grid.Column="0"
                                IsEnabled="False"
                                materialDesign:HintAssist.Hint="Tổng mức đầu tư CTĐT phê duyệt (USD)"
                                Text="{Binding Model.TotalChuTruongDauTuNguonVon.FGiaTriUsd, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="1"
                                IsEnabled="False"
                                materialDesign:HintAssist.Hint="Tổng mức đầu tư CTĐT phê duyệt (VND)"
                                Text="{Binding Model.TotalChuTruongDauTuNguonVon.FGiaTriVnd, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}" />

