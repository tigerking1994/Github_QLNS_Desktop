                                Grid.Row="13"
                                Grid.Column="0"
                                IsEnabled="False"
                                materialDesign:HintAssist.Hint="Tổng mức đầu tư QĐĐT phê duyệt (EUR)"
                                Text="{Binding Model.FGiaTriEur, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}" />
                            <TextBox
                                Grid.Row="13"
                                Grid.Column="1"
                                IsEnabled="False"
                                materialDesign:HintAssist.Hint="Tổng mức đầu tư QĐĐT phê duyệt (Ngoại tệ khác)"
