<UserControl x:Class="VTS.QLNS.CTC.App.View.Forex.ForexAllocation.ForexDeNghiThanhToan.ForexDeNghiThanhToanIndex"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VTS.QLNS.CTC.App.View.Forex.ForexAllocation.ForexDeNghiThanhToan"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:component="clr-namespace:VTS.QLNS.CTC.App.Component"
             xmlns:extensions="clr-namespace:VTS.QLNS.CTC.App.Extensions"
             xmlns:helper="clr-namespace:VTS.QLNS.CTC.App.Helper" xmlns:forexdenghithanhtoan="clr-namespace:VTS.QLNS.CTC.App.ViewModel.Forex.Allocation.ForexDeNghiThanhToan"
             xmlns:custom="clr-namespace:VTS.QLNS.CTC.Custom;assembly=VTS.QLNS.CTC.Custom"
             d:DataContext="{d:DesignInstance Type=forexdenghithanhtoan:ForexDeNghiThanhToanIndexViewModel}"
             xmlns:localEnum="clr-namespace:VTS.QLNS.CTC.Utility.Enum;assembly=VTS.QLNS.CTC.Utility"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.InputBindings>
        <KeyBinding Key="F3" Command="{Binding AddCommand}"/>
        <KeyBinding Key="F4" Command="{Binding DeleteCommand}"/>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}"/>
    </UserControl.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <materialDesign:PackIcon Kind="DriveDocument" Height="32" Width="32" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            <StackPanel Orientation="Vertical">
                <TextBlock FontWeight="Bold" Text="{Binding Title}"/>
                <TextBlock Text="{Binding Description}"/>
                <Separator Background="{StaticResource MaterialDesignDivider}" Margin="0 5 0 0"/>
            </StackPanel>
        </DockPanel>

        <ScrollViewer Grid.Row="1" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch" 
                      HorizontalScrollBarVisibility="Visible" 
                      VerticalScrollBarVisibility="Disabled">
            <StackPanel Margin="0 5">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 3">
                    <Button
                        Style="{DynamicResource SearchBarBtnStyle}"
                        Command="{Binding AddCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus"/>
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Thêm mới (F3)"/>
                        </StackPanel>
                    </Button>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}"/>
                    <Button
                        Style="{DynamicResource SearchBarBtnStyle}"
                        IsEnabled="{Binding IsEnabled}"
                        Command="{Binding UpdateCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountEdit"/>
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Sửa (F3)"/>
                        </StackPanel>
                    </Button>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}"/>
                    <Button
                        Style="{DynamicResource SearchBarBtnStyle}"
                        Command="{Binding DeleteCommand}"
                        IsEnabled="{Binding IsEnabled}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Delete"/>
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Xóa (F4)"/>
                        </StackPanel>
                    </Button>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}"/>
                    <Button
                        Style="{DynamicResource SearchBarBtnStyle}"
                        Command="{Binding RefreshCommand}"
                        HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh"/>
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="(F5)"/>
                        </StackPanel>
                    </Button>
                    <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}"/>
                    <Button
                        Style="{StaticResource SearchBarBtnStyle}"
                        Command="{Binding LockUnLockCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="{Binding IsLock, Converter={StaticResource InvertBooleanToLockIconConverter}}" />
                            <TextBlock
                                Style="{StaticResource SearchBarBtnTextStyle}"
                                Text="{Binding IsLock, Converter={StaticResource InvertBooleanToLockStatusConverter}}" />
                        </StackPanel>
                    </Button>
                    <Button
                    Style="{StaticResource SearchBarBtnStyle}" 
                    Command="{Binding ImportDataCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Import" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Import"/>
                        </StackPanel>
                    </Button>
                    <StackPanel Orientation="Horizontal">
                        <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}"/>
                        <Button
                            x:Name="btnPrint"
                            Style="{DynamicResource SearchBarBtnStyle}"
                            Command="{Binding PrintReportCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Printer"/>
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="In báo cáo"/>
                            </StackPanel>
                        </Button>
                        <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}"/>
                        <Button
                            Style="{StaticResource SearchBarBtnStyle}" 
                            Command="{Binding TongHopDeNghiTTCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Summation" />
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Tổng hợp"/>
                            </StackPanel>
                        </Button>
                        <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}"/>
                        <!--<Button
                            Style="{StaticResource SearchBarBtnStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileExcel"/>
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Excel"/>
                                <materialDesign:PopupBox
                                    Margin="-10 0 0 0"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right">
                                    <materialDesign:PopupBox.ToggleContent>
                                        <materialDesign:PackIcon Kind="MenuDown"/>
                                    </materialDesign:PopupBox.ToggleContent>
                                    <StackPanel>
                                        <Button Command="{Binding ImportDataCommand}">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="FileImportOutline"/>
                                                <TextBlock Margin="10 0 0 0" Style="{StaticResource SearchBarBtnTextStyle}" Text="Import từ file Excel"/>
                                            </StackPanel>
                                        </Button>
                                        <Button 
                                            x:Name="btnExcel" 
                                            IsEnabled="{Binding IsEnableExportData}"
                                            Command="{Binding ExportBangLuongCommand}">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="FileExportOutline"/>
                                                <TextBlock Margin="10 0 0 0" Style="{StaticResource SearchBarBtnTextStyle}" Text="Export ra file Excel"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </materialDesign:PopupBox>
                            </StackPanel>
                        </Button>
                        <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}"/>-->
                        <Button x:Name="btnShowColSelfPay" Style="{StaticResource SearchBarBtnStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="PlusMinusVariant" />
                                <TextBlock Style="{StaticResource SearchBarBtnTextStyle}" Text="Ẩn/hiện cột" />
                                <materialDesign:PopupBox
                                    Name="pbDynamicColumn"
                                    Margin="-10 0 0 0"
                                    HorizontalAlignment="Right"
                                    StaysOpen="True">
                                    <materialDesign:PopupBox.Resources>
                                        <Style TargetType="ScrollViewer">
                                            <Setter Property="Height" Value="400" />
                                        </Style>
                                    </materialDesign:PopupBox.Resources>
                                    <materialDesign:PopupBox.ToggleContent>
                                        <materialDesign:PackIcon Kind="MenuDown"/>
                                    </materialDesign:PopupBox.ToggleContent>
                                    <ScrollViewer></ScrollViewer>
                                </materialDesign:PopupBox>
                            </StackPanel>
                        </Button>
                        <Separator Style="{StaticResource SearchBarHorizontalDividerStyle}"/>
                        <ComboBox
                            Name="cbFrozenColumn"
                            materialDesign:HintAssist.Hint="Cố định cột"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            DisplayMemberPath="DisplayItem"
                            SelectedValuePath="ValueItem"
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                    </StackPanel>
                </StackPanel>
                <Separator Background="{StaticResource MaterialDesignDivider}"/>
                <StackPanel Orientation="Horizontal">
                    <Grid Width="{Binding ElementName=STT, Path=ActualWidth}"></Grid>
                    <Grid Width="{Binding ElementName=STenDonVi, Path=ActualWidth}">
                        <custom:AutoCompleteComboBox
                            Margin="0 0 5 0"
                            DisplayMemberPath="DisplayItem"
                            SelectedValuePath="ValueItem"
                            TextSearch.TextPath="DisplayItem"
                            materialDesign:HintAssist.Hint="Đơn vị"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            SelectedItem="{Binding SelectedDonVi }"
                            ItemsSource="{Binding ItemsDonVi}" 
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                    </Grid>
                    <Grid Width="{Binding ElementName=SSoDeNghi, Path=ActualWidth}">
                        <TextBox
                            Margin="0 0 5 0"
                            materialDesign:HintAssist.Hint="Số đề nghị"
                            VerticalAlignment="Bottom" 
                            Text="{Binding ItemsFilter.SSoDeNghi, UpdateSourceTrigger=PropertyChanged}" 
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" >
                            <TextBox.InputBindings>
                                <KeyBinding Command="{Binding SearchCommand}" Key="Return" />
                            </TextBox.InputBindings>
                        </TextBox>
                    </Grid>
                    <Grid Width="{Binding ElementName=DNgayDeNghi, Path=ActualWidth}">
                        <DatePicker
                            Language="vi-VN"
                            Margin="5 0 0 0"
                            materialDesign:HintAssist.Hint="Ngày đề nghị"
                            SelectedDate="{Binding ItemsFilter.DNgayDeNghi}"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}">
                        </DatePicker>
                    </Grid>
                    <Grid Width="{Binding ElementName=STenNhiemVuChi, Path=ActualWidth}">
                        <TextBox 
                            Margin="5 0 5 0" materialDesign:HintAssist.Hint="Tên nhiệm vụ chi"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            VerticalAlignment="Bottom" 
                            Text="{Binding ItemsFilter.STenNhiemVuChi, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.InputBindings>
                                <KeyBinding Command="{Binding SearchCommand}" Key="Return" />
                            </TextBox.InputBindings>
                        </TextBox>
                    </Grid>
                    <Grid Width="{Binding ElementName=STenHopDong, Path=ActualWidth}">
                        <TextBox 
                            Margin="5 0 5 0" 
                            materialDesign:HintAssist.Hint="Tên hợp đồng"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            VerticalAlignment="Bottom" 
                            Text="{Binding ItemsFilter.STenHopDongSoHopDong, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.InputBindings>
                                <KeyBinding Command="{Binding SearchCommand}" Key="Return" />
                            </TextBox.InputBindings>
                        </TextBox>
                    </Grid>
                    <Grid Width="{Binding ElementName=SLoaiDeNghi, Path=ActualWidth}">
                        <custom:AutoCompleteComboBox
                            Margin="0 0 5 0"
                            DisplayMemberPath="DisplayItem"
                            SelectedValuePath="ValueItem"
                            TextSearch.TextPath="DisplayItem"
                            materialDesign:HintAssist.Hint="Loại đề nghị"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            SelectedItem="{Binding SelectedLoaiDeNghi }"
                            ItemsSource="{Binding ItemsLoaiDeNghi}" 
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                    </Grid>
                    <Grid Width="{Binding ElementName=IQuyKeHoach, Path=ActualWidth}">
                        <custom:AutoCompleteComboBox
                            Margin="0 0 5 0"
                            DisplayMemberPath="DisplayItem"
                            SelectedValuePath="ValueItem"
                            TextSearch.TextPath="DisplayItem"
                            materialDesign:HintAssist.Hint="Quý kế hoạch"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            SelectedItem="{Binding SelectedQuyKeHoach }"
                            ItemsSource="{Binding ItemsQuyKeHoach}" 
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                    </Grid>
                    <Grid Width="{Binding ElementName=INamKeHoach, Path=ActualWidth}">
                        <TextBox Margin="5 0 5 0" materialDesign:HintAssist.Hint="Năm kế hoạch"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        VerticalAlignment="Bottom" 
                        Text="{Binding ItemsFilter.INamKeHoach, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumberIntToStringEmptyConverter}}">
                            <TextBox.InputBindings>
                                <KeyBinding Command="{Binding SearchCommand}" Key="Return" />
                            </TextBox.InputBindings>
                        </TextBox>
                    </Grid>
                    <Grid Width="{Binding ElementName=SNguonVon, Path=ActualWidth}">
                        <custom:AutoCompleteComboBox
                            Margin="0 0 5 0"
                            DisplayMemberPath="DisplayItem"
                            SelectedValuePath="ValueItem"
                            TextSearch.TextPath="DisplayItem"
                            materialDesign:HintAssist.Hint="Nguồn vốn"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            SelectedItem="{Binding SelectedNguonVon }"
                            ItemsSource="{Binding ItemsNguonVon}" 
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                    </Grid>
                    <Grid Width="{Binding ElementName=SLoaiNoiDungChi, Path=ActualWidth}">
                        <custom:AutoCompleteComboBox
                            Margin="0 0 5 0"
                            DisplayMemberPath="DisplayItem"
                            SelectedValuePath="ValueItem"
                            TextSearch.TextPath="DisplayItem"
                            materialDesign:HintAssist.Hint="Loại nội dung chi"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            SelectedItem="{Binding SelectedLoaiNoiDungChi }"
                            ItemsSource="{Binding ItemsLoaiNoiDungChi}" 
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>
                    </Grid>

                    <Button  Style="{StaticResource SearchBarBtnStyle}" Command="{Binding SearchCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Search" />
                            <TextBlock Style="{StaticResource SearchBarBtnTextStyle}">Tìm kiếm</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button
                        Command="{Binding RemoveFilterCommand}"
                        Style="{StaticResource SearchBarBtnStyle}" 
                        ToolTip="Filter">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FilterRemoveOutline" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <Separator Background="{DynamicResource MaterialDesignDivider}" />
                <StackPanel Orientation="Horizontal">
                    <RadioButton
                            x:Name="RbChungTu"
                            Style="{StaticResource MaterialDesignTabRadioButton}"
                            IsChecked="{Binding VoucherTabIndex, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static localEnum:VoucherTabIndex.VOUCHER}}"
                            GroupName="TabIndex"
                            Content="Đề nghị thanh toán" />

                    <RadioButton
                            x:Name="RbChungTuTongHop"
                            Style="{StaticResource MaterialDesignTabRadioButton}"
                            IsChecked="{Binding VoucherTabIndex, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static localEnum:VoucherTabIndex.VOUCHER_AGREGATE}}"
                            GroupName="TabIndex"
                            Content="Đề nghị thanh toán tổng hợp" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <component:ExpandedDataGrid
            Visibility="{Binding IsChecked, ElementName=RbChungTu, Converter={StaticResource BooleanToVisibilityConverter}}"
            Grid.Row="2"
            x:Name="dgDeNghiThanhToanIndex"
            IsReadOnly="True"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserResizeColumns="True"
            HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Visible"
            IsSynchronizedWithCurrentItem="True"
            FrozenColumnCount="2"
            GridLinesVisibility="All"
            extensions:DataGridBehavior.DisplayRowNumber="True"
            RowStyle="{StaticResource DataGridRowIndex}"
            Style="{StaticResource MaterialDesignDataGrid}"
            ItemsSource="{Binding Items}"
            SelectedItem="{Binding SelectedItem}"
            AutoGenerateColumns="False"
            ElementFrozenColumn="{Binding ElementName=cbFrozenColumn, Path=., Mode=TwoWay}"
            ElementDynamicColumn="{Binding ElementName=pbDynamicColumn, Path=., Mode=TwoWay}">
            <DataGrid.Resources>
                <helper:BindingProxy x:Key="DataContextProxy" Data="{Binding}"/>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridCheckBoxColumn
                    IsReadOnly="False"
                    CanUserSort="False"
                    Binding="{Binding IsChecked,UpdateSourceTrigger=PropertyChanged}"
                    ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}"
                    EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}">
                    <DataGridCheckBoxColumn.Header>
                        <Border Background="Transparent"></Border>
                    </DataGridCheckBoxColumn.Header>
                    <DataGridCheckBoxColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridCheckBoxColumn.HeaderStyle>
                </DataGridCheckBoxColumn>
                <materialDesign:DataGridTextColumn
                    x:Name="STT"
                    Header="STT"
                    ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGridRow}, Path=Header}">
                </materialDesign:DataGridTextColumn>
                <materialDesign:DataGridTextColumn
                    x:Name="STenDonVi"
                    Header="Đơn vị"
                    ElementStyle="{StaticResource DataGridTextColumnLeftStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding STenDonViMaDonVi}">
                </materialDesign:DataGridTextColumn>
                <materialDesign:DataGridTextColumn
                    x:Name="SSoDeNghi"
                    Header="Số đề nghị"
                    ElementStyle="{StaticResource DataGridTextColumnLeftStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding SSoDeNghi}">
                </materialDesign:DataGridTextColumn>
                <materialDesign:DataGridTextColumn
                    x:Name="DNgayDeNghi"
                    Header="Ngày đề nghị"
                    ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding DNgayDeNghi, Converter={StaticResource DateTimeToStringConverter}}">
                </materialDesign:DataGridTextColumn>
                <materialDesign:DataGridTextColumn
                    x:Name="STenNhiemVuChi"
                    Header="Tên nhiệm vụ chi"
                    ElementStyle="{StaticResource DataGridTextColumnLeftStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding STenNhiemVuChi}">
                </materialDesign:DataGridTextColumn>
                <materialDesign:DataGridTextColumn
                    x:Name="STenHopDong"
                    Header="Hợp đồng"
                    ElementStyle="{StaticResource DataGridTextColumnLeftStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding STenHopDongSoHopDong}">
                </materialDesign:DataGridTextColumn>
                <materialDesign:DataGridTextColumn
                    x:Name="SLoaiDeNghi"
                    Header="Loại đề nghị"
                    ElementStyle="{StaticResource DataGridTextColumnLeftStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding LoaiDeNghiString}">
                </materialDesign:DataGridTextColumn>
                <materialDesign:DataGridTextColumn
                    x:Name="IQuyKeHoach"
                    Header="Quý kế hoạch"
                    ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding QuyKeHoachString}">
                </materialDesign:DataGridTextColumn>
                <materialDesign:DataGridTextColumn
                    x:Name="INamKeHoach"
                    Header="Năm kế hoạch"
                    ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding INamKeHoach}">
                </materialDesign:DataGridTextColumn>
                <materialDesign:DataGridTextColumn
                    x:Name="SNguonVon"
                    Header="Nguồn vốn"
                    ElementStyle="{StaticResource DataGridTextColumnLeftStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding TenNguonVon}">
                </materialDesign:DataGridTextColumn>
                <materialDesign:DataGridTextColumn
                    x:Name="SLoaiNoiDungChi"
                    Header="Loại nội dung chi"
                    ElementStyle="{StaticResource DataGridTextColumnLeftStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding LoaiNoiDungChiString}">
                </materialDesign:DataGridTextColumn>
                <component:DataGridTextColumn
                    x:Name="USD"
                    Header="USD"
                    Binding="{Binding FTongDeNghiKyNayUsd, StringFormat={}{0:N2}}"
                    ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}" 
                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}">
                    <DataGridColumn.HeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Border Padding="{Binding RelativeSource={RelativeSource Self}, Path=(materialDesign:DataGridAssist.ColumnHeaderPadding), Converter={StaticResource HeaderPaddingConverter}}">
                                    <Canvas Height="{Binding ElementName=HeaderGroup, Path=ActualHeight}">
                                        <Grid>
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Width">
                                                        <Setter.Value>
                                                            <MultiBinding Converter="{StaticResource MultipleWidthConverter}">
                                                                <Binding ElementName="USD" Path="ActualWidth"/>
                                                                <Binding ElementName="VND" Path="ActualWidth"/>
                                                                <Binding ElementName="EUR" Path="ActualWidth"/>
                                                                <Binding ElementName="NgoaiTeKhac" Path="ActualWidth"/>
                                                            </MultiBinding>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Grid.Style>
                                            <TextBlock HorizontalAlignment="Center" Text="Tổng số đề nghị thanh toán kỳ này"/>
                                        </Grid>
                                    </Canvas>
                                </Border>
                                <Border
                                        Grid.Row="1"
                                        Padding="{Binding RelativeSource={RelativeSource Self}, Path=(materialDesign:DataGridAssist.ColumnHeaderPadding)}"
                                        BorderThickness="0 1 1 0"
                                        BorderBrush="{Binding HorizontalGridLinesBrush, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                    <TextBlock Name="HeaderGroup" Text="{Binding}"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </DataGridColumn.HeaderTemplate>
                </component:DataGridTextColumn>
                <component:DataGridTextColumn
                    x:Name="VND"
                    Header="VND"
                    ElementStyle="{StaticResource DataGridTextColumnRightStyle}"
                    Binding="{Binding FTongDeNghiKyNayVnd, StringFormat={}{0:N0}}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                    HeaderTemplate="{StaticResource CenterHeader}">
                </component:DataGridTextColumn>
                <component:DataGridTextColumn
                    x:Name="EUR"
                    Header="EUR"
                    ElementStyle="{StaticResource DataGridTextColumnRightStyle}"
                    Binding="{Binding FTongDeNghiKyNayEur, StringFormat={}{0:N2}}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                    HeaderTemplate="{StaticResource CenterHeader}">
                </component:DataGridTextColumn>
                <component:DataGridTextColumn
                    x:Name="NgoaiTeKhac"
                    Header="Ngoại tệ khác"
                    ElementStyle="{StaticResource DataGridTextColumnRightStyle}"
                    Binding="{Binding FTongDeNghiKyNayNgoaiTeKhac, StringFormat={}{0:N2}}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                    HeaderTemplate="{StaticResource RightHeader}">
                </component:DataGridTextColumn>
                <DataGridTemplateColumn Header="Khóa">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl x:Name="content"/>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding BIsKhoa}" Value="True">
                                    <Setter TargetName="content" Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <materialDesign:PackIcon Kind="Lock"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </component:ExpandedDataGrid>

        <component:ExpandedDataGrid
            Visibility="{Binding IsChecked, ElementName=RbChungTuTongHop, Converter={StaticResource BooleanToVisibilityConverter}}"
            Grid.Row="2"
            x:Name="dgDeNghiThanhToanIndexTongHop"
            IsReadOnly="True"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserResizeColumns="True"
            HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Visible"
            IsSynchronizedWithCurrentItem="True"
            FrozenColumnCount="2"
            GridLinesVisibility="All"
            extensions:DataGridBehavior.DisplayRowNumber="True"
            RowStyle="{StaticResource DataGridRowIndex}"
            Style="{StaticResource MaterialDesignDataGrid}"
            ItemsSource="{Binding ListDeNghiTongHop}"
            SelectedItem="{Binding SelectedTongHopItem}"
            AutoGenerateColumns="False"
            ElementFrozenColumn="{Binding ElementName=cbFrozenColumn, Path=., Mode=TwoWay}"
            ElementDynamicColumn="{Binding ElementName=pbDynamicColumn, Path=., Mode=TwoWay}">
            <DataGrid.Resources>
                <helper:BindingProxy x:Key="DataContextProxy" Data="{Binding}"/>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <materialDesign:DataGridTextColumn 
                    x:Name="STTTH"
                    Header="STT"
                    ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGridRow}, Path=Header}">
                </materialDesign:DataGridTextColumn>
                <DataGridTemplateColumn Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <ToggleButton
                                        Visibility="{Binding HasChildren, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Template="{StaticResource SimpleExpanderButtonTemp}"
                                        IsChecked="{Binding IsShowChildren, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <materialDesign:DataGridTextColumn
                    x:Name="STenDonViTH"
                    Header="Đơn vị"
                    ElementStyle="{StaticResource DataGridTextColumnLeftStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding STenDonViMaDonVi}">
                </materialDesign:DataGridTextColumn>

                <materialDesign:DataGridTextColumn
                    x:Name="SSoDeNghiTH"
                    Header="Số đề nghị"
                    ElementStyle="{StaticResource DataGridTextColumnLeftStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding SSoDeNghi}">
                </materialDesign:DataGridTextColumn>

                <materialDesign:DataGridTextColumn
                    x:Name="DNgayDeNghiTH"
                    Header="Ngày đề nghị"
                    ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding DNgayDeNghi, Converter={StaticResource DateTimeToStringConverter}}">
                </materialDesign:DataGridTextColumn>

                <materialDesign:DataGridTextColumn
                    x:Name="STenNhiemVuChiTH"
                    Header="Tên nhiệm vụ chi"
                    ElementStyle="{StaticResource DataGridTextColumnLeftStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding STenNhiemVuChi}">
                </materialDesign:DataGridTextColumn>

                <materialDesign:DataGridTextColumn
                    x:Name="STenHopDongTH"
                    Header="Hợp đồng"
                    ElementStyle="{StaticResource DataGridTextColumnLeftStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding STenHopDongSoHopDong}">
                </materialDesign:DataGridTextColumn>

                <materialDesign:DataGridTextColumn
                    x:Name="SLoaiDeNghiTH"
                    Header="Loại đề nghị"
                    ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding LoaiDeNghiString}">
                </materialDesign:DataGridTextColumn>

                <materialDesign:DataGridTextColumn
                    x:Name="IQuyKeHoachTH"
                    Header="Quý kế hoạch"
                    ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding QuyKeHoachString}">
                </materialDesign:DataGridTextColumn>
                
                <materialDesign:DataGridTextColumn
                    x:Name="INamKeHoachTH"
                    Header="Năm kế hoạch"
                    ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding INamKeHoach}">
                </materialDesign:DataGridTextColumn>

                <materialDesign:DataGridTextColumn
                    x:Name="SNguonVonTH"
                    Header="Nguồn vốn"
                    ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding TenNguonVon}">
                </materialDesign:DataGridTextColumn>

                <materialDesign:DataGridTextColumn
                    x:Name="SLoaiNoiDungChiTH"
                    Header="Loại nội dung chi"
                    ElementStyle="{StaticResource DataGridTextColumnCenterStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderCenter}"
                    Binding="{Binding LoaiNoiDungChiString}">
                </materialDesign:DataGridTextColumn>

                <component:DataGridTextColumn
                    x:Name="USDTH"
                    Header="USD"
                    Binding="{Binding FTongDeNghiKyNayUsd, StringFormat={}{0:N2}}"
                    ElementStyle="{StaticResource DataGridTextColumnDetailRightStyle}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}">
                    <DataGridColumn.HeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Border
                                        Padding="{Binding RelativeSource={RelativeSource Self}, Path=(materialDesign:DataGridAssist.ColumnHeaderPadding), Converter={StaticResource HeaderPaddingConverter}}">
                                    <Canvas Height="{Binding ElementName=HeaderGroup, Path=ActualHeight}">
                                        <Grid>
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Width">
                                                        <Setter.Value>
                                                            <MultiBinding Converter="{StaticResource MultipleWidthConverter}">
                                                                <Binding ElementName="USDTH" Path="ActualWidth"/>
                                                                <Binding ElementName="VNDTH" Path="ActualWidth"/>
                                                                <Binding ElementName="EURTH" Path="ActualWidth"/>
                                                                <Binding ElementName="NgoaiTeKhacTH" Path="ActualWidth"/>
                                                            </MultiBinding>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Grid.Style>
                                            <TextBlock HorizontalAlignment="Center" Text="Tổng số đề nghị thanh toán kỳ này"/>
                                        </Grid>
                                    </Canvas>
                                </Border>
                                <Border
                                        Grid.Row="1"
                                        Padding="{Binding RelativeSource={RelativeSource Self}, Path=(materialDesign:DataGridAssist.ColumnHeaderPadding)}"
                                        BorderThickness="0 1 1 0"
                                        BorderBrush="{Binding HorizontalGridLinesBrush, RelativeSource={RelativeSource AncestorType=DataGrid}}">
                                    <TextBlock Name="HeaderGroup" Text="{Binding}"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </DataGridColumn.HeaderTemplate>
                </component:DataGridTextColumn>

                <component:DataGridTextColumn
                    x:Name="VNDTH"
                    Header="VND"
                    ElementStyle="{StaticResource DataGridTextColumnRightStyle}"
                    Binding="{Binding FTongDeNghiKyNayVnd, StringFormat={}{0:N0}}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                    HeaderTemplate="{StaticResource CenterHeader}">
                </component:DataGridTextColumn>

                <component:DataGridTextColumn
                    x:Name="EURTH"
                    Header="EUR"
                    ElementStyle="{StaticResource DataGridTextColumnRightStyle}"
                    Binding="{Binding FTongDeNghiKyNayEur, StringFormat={}{0:N2}}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                    HeaderTemplate="{StaticResource CenterHeader}">
                </component:DataGridTextColumn>

                <component:DataGridTextColumn
                    x:Name="NgoaiTeKhacTH"
                    Header="Ngoại tệ khác"
                    ElementStyle="{StaticResource DataGridTextColumnRightStyle}"
                    Binding="{Binding FTongDeNghiKyNayNgoaiTeKhac, StringFormat={}{0:N2}}"
                    HeaderStyle="{StaticResource DataGridColumnHeaderNoBorder}"
                    HeaderTemplate="{StaticResource RightHeader}">
                </component:DataGridTextColumn>

                <DataGridTemplateColumn Header="Khóa">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl x:Name="content"/>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding BIsKhoa}" Value="True">
                                    <Setter TargetName="content" Property="ContentTemplate">
                                        <Setter.Value>
                                            <DataTemplate>
                                                <materialDesign:PackIcon Kind="Lock"/>
                                            </DataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </component:ExpandedDataGrid>
    </Grid>
</UserControl>
